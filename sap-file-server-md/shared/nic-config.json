{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Name of the virtual network."
      }
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Name of the virtual network subnet."
      }
    },
    "publicIpName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Name of the public ip address."
      }
    },
    "nsgName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Name of the network security group."
      }
    },
    "subnetId": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The id of the subnet you want to use."
      }
    }
  },
  "variables": {
    "nicConfigurations": {
      "true": {
        "subnet": {
          "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName')), '/subnets/', parameters('subnetName'))]"
        },
        "publicIPAddress": {
          "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publicIpName'))]"
        },
        "networkSecurityGroup": {
          "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgName'))]"
        }
      },
      "false": {
        "subnet": {
          "id": "[parameters('subnetId')]"
        },
        "publicIPAddress": null,
        "networkSecurityGroup": null
      }
    },
    "selectedConfiguration": "[variables('nicConfigurations')[string(equals(length(parameters('subnetId')), 0))]]"
  },
  "resources": [
  ],
  "outputs": {
    "selectedConfiguration": {
      "value": "[variables('selectedConfiguration')]",
      "type": "object"
    }
  }
}

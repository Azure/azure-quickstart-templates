{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "value": "West US"
    },
    "newStorageAccountName": {
      "value": "uniqueStorageAccount"
    },
    "vmDiagnosticsStorageAccountName": {
      "value": "diagnosticsStorage"
    },
    "adminUsername": {
      "value": "username"
    },
    "adminPassword": {
      "value": "password"
    },
    "dnsNameForPublicIP": {
      "value": "uniquedns",
      "metadata": {
         "description": "it should match with the following regular expression: ^[a-z][a-z0-9-]{1,61}[a-z0-9]$ or it will raise an error" 
      }
    },
    "windowsOSVersion": {
      "value": "2012-R2-Datacenter"
    }
  }
}

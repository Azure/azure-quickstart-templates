{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "uniqueDnsName": {
            "type": "string",
            "defaultValue": "myapp",
            "metadata": {
                "description": "Relative DNS name for the traffic manager profile, resulting FQDN will be <uniqueDnsName>.trafficmanager.net, must be globally unique."
            }
        },
        "endpoint1": {
            "type": "string",
            "defaultValue": "www1.myapp.com",
            "metadata": {
                "description": "Endpoint 1"
            }
        },
        "endpoint2": {
            "type": "string",
            "defaultValue": "www2.myapp.com",
            "metadata": {
                "description": "Endpoint 2"
            }
        }
    },
    "variables": {
        "tmApiVersion": "2015-11-01"
    },
    "resources": [
        {
            "apiVersion": "2015-11-01",
            "type": "Microsoft.Network/trafficManagerProfiles",
            "name": "ExternalEndpointExample",
            "location": "global",
            "properties": {
                "profileStatus": "Enabled",
                "trafficRoutingMethod": "Performance",
                "dnsConfig": {
                    "relativeName": "[parameters('uniqueDnsName')]",
                    "ttl": 30
                },
                "monitorConfig": {
                    "protocol": "HTTP",
                    "port": 80,
                    "path": "/"
                },
                "endpoints": [
                    {
                        "name": "endpoint1",
                        "type": "Microsoft.Network/TrafficManagerProfiles/ExternalEndpoints",
                        "properties": {
                            "target": "[parameters('endpoint1')]",
                            "endpointStatus": "Enabled",
                            "endpointLocation": "northeurope"
                        }
                    },
                    {
                        "name": "endpoint2",
                        "type": "Microsoft.Network/TrafficManagerProfiles/ExternalEndpoints",
                        "properties": {
                            "target": "[parameters('endpoint2')]",
                            "endpointStatus": "Enabled",
                            "endpointLocation": "southcentralus"
                        }
                    }
                ]
            }
        }
    ]
}

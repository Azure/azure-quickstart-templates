{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "workspaceLocation": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
          "description": "Specify the workspace region"
      }
  },
  "changeStorageType": {
    "type": "bool",
    "defaultValue": false,
    "metadata": {
      "description": "Change Vault Storage Type Selection (Works if vault has not registered any backup instance)"
    }
  },
  "vaultStorageType": {
    "type": "string",
    "defaultValue": "GloballyRedundant",
    "allowedValues": [
      "LocallyRedundant",
      "GloballyRedundant"
    ],
    "metadata": {
      "description": "Change Vault Storage Type (not allowed if the vault has registered backups)"
    }
  },
    "workspaceName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
          "description": "Specify the workspace name"
      }
  },
  "sku": {
    "type": "string",
 "allowedValues": [
      "Standalone",
      "PerNode",
     "PerGB2018"
    ],
 "defaultValue": "PerGB2018",
     "metadata": {
    "description": "Specifies the service tier of the workspace: Standalone, PerNode, Per-GB"
}
  },
  "vaultName": {
    "type": "string",
    "defaultValue": "",
    "metadata": {
      "description": "Name of the Vault"
    }
  },
  "skuName": {
    "type": "string",
    "defaultValue": "Standard",
    "allowedValues": [
      "Standard"
    ],
    "metadata": {
      "description": "SKU for the vault"
    }
  },
  "location": {
    "type": "string",
    "defaultValue": "",
    "metadata": {
      "description": "Location for all resources."
    }
  }
  },
  "variables": {
    "omsSolutions": {
        "customSolution": {
            "name": "Azure Backup Monitoring Solution",
            "solutionName": "[concat('AzureBackup', '[', parameters('workspaceName'), ']')]",
            "publisher": "Microsoft",
            "displayName": "Azure Backup Monitoring Solution",
            "description": "Monitor and analyze your Backup Vaults",
            "author": "Microsoft"
        }
    }
},
  "resources": [
    {
      "type": "Microsoft.RecoveryServices/vaults",
      "apiVersion": "2018-01-10",
      "name": "[parameters('vaultName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "RS0",
        "tier": "Standard"
      },
      "properties": {}
    },
    
    {
      "condition": "[parameters('changeStorageType')]",
      "type": "Microsoft.RecoveryServices/vaults/backupstorageconfig",
      "name": "[concat(parameters('vaultName'), '/vaultstorageconfig')]",
      "apiVersion": "2018-01-10",
      "dependsOn": [
          "[resourceId('Microsoft.RecoveryServices/vaults/', parameters('vaultName'))]"
      ],
      "properties": {
          "StorageModelType":"[parameters('vaultStorageType')]"
      }
  }
      ],
  "outputs": {
  }
}

{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Username for the Virtual Machine."
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for the Virtual Machine."
      }
    },
    "windowsOSVersion": {
      "type": "string",
      "allowedValues": [
        "2016-Datacenter-with-Containers",
        "2016-Datacenter"
      ],
      "metadata": {
        "description": "The Windows version for the VM. This will pick a fully patched image of this given Windows version."
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "The Location For the resources"
      }
    },
    "vmSize": {
      "type": "string",
      "metadata": {
        "description": "The size of the VM to create"
      }
    },
    "overProvision": {
      "type": "bool",
      "metadata": {
        "description": "Over Provision VMSS Instances"
      }
    },
    "vmssName": {
      "type": "string",
      "metadata": {
        "description": "The name of the scale set"
      }
    },
    "vmssPrefix": {
      "type": "string",
      "metadata": {
        "description": "The name prefix for the VMs in the scale set"
      }
    },
    "nicName": {
      "type": "string",
      "metadata": {
        "description": "The nic name for the VMs in the scale set"
      }
    },
    "subnetRef": {
      "type": "string",
      "metadata": {
        "description": "The subnet ref for the VMs in the scale set"
      }
    },
    "networkSecurityGroupName": {
      "type": "string",
      "metadata": {
        "description": "The NSG Name to assocaite with the NIC in the VM"
      }
    },
    "storageAccountUri": {
      "type": "string",
      "metadata": {
        "description": "The storage account URI for boot diagnostics for the VMs in the scale set"
      }
    }
  },
  "variables": {
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachineScaleSets",
      "name": "[parameters('vmssName')]",
      "location": "[parameters('location')]",
      "apiVersion": "2017-03-30",
      "sku": {
        "name": "[parameters('vmSize')]",
        "tier": "Standard",
        "capacity": 0
      },
      "identity": { 
          "type": "systemAssigned"
      },
      "properties": {
        "upgradePolicy": {
          "mode": "Manual"
        },
        "overprovision":"[parameters('overProvision')]",
        "virtualMachineProfile": {
          "storageProfile": {
            "osDisk": {
              "caching": "ReadOnly",
              "createOption": "FromImage"
            },
            "imageReference": {
              "publisher": "MicrosoftWindowsServer",
              "offer": "WindowsServer",
              "sku": "[parameters('windowsOSVersion')]",
              "version": "latest"
            }
          },
          "osProfile": {
            "computerNamePrefix": "[parameters('vmssPrefix')]",
            "adminUsername": "[parameters('adminUsername')]",
            "adminPassword": "[parameters('adminPassword')]"
          },
          "networkProfile": {
            "networkInterfaceConfigurations": [
              {
                "name": "[parameters('nicName')]",
                "properties": {
                  "primary":true,
                  "ipConfigurations": [
                    {
                      "name": "ipconfig1",
                      "properties": {
                        "subnet": {
                          "id": "[parameters('subnetRef')]"
                      },
                        "publicipaddressconfiguration": {
                          "name": "publicip",
                          "properties": {
                            "idleTimeoutInMinutes": 15,
                            "dnsSettings": {
                              "domainNameLabel": "[parameters('vmssName')]"
                            }
                          }
                        }
                      }
                    }
                  ],
                  "networkSecurityGroup": {
                      "id": "[resourceId('Microsoft.Network/networkSecurityGroups', Parameters('networkSecurityGroupName'))]"
                  }
                }
              }
            ]
          },
          "diagnosticsProfile": {
            "bootDiagnostics": {
              "enabled": "true",
              "storageUri": "[parameters('storageAccountUri')]"
            }
          }
        }
      }
    }
  ],
  "outputs": {
    "principalId": {
      "type": "string",
      "value": "[reference(concat(resourceId('Microsoft.Compute/virtualMachineScaleSets/', parameters('vmssName')),'/providers/Microsoft.ManagedIdentity/Identities/default'),'2015-08-31-PREVIEW').principalId]"
    }
  }
}

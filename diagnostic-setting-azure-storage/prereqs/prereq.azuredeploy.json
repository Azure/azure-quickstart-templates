{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]",
        "metadata": {
          "description": "Location for all resources."
        }
      }
    },
    "variables": {
      "storageAccountName": "[concat(uniqueString(resourceGroup().id),'storage')]",
      "storageAccountSyncName": "[concat(uniqueString(resourceGroup().id),'storage')]",
      "logAnalyticsWorkspaceName": "[concat(uniqueString(resourceGroup().id),'workspace')]"
    },
    "resources": [
      {
        "type": "Microsoft.Storage/storageAccounts",
        "name": "[variables('storageAccountName')]",
        "apiVersion": "2016-01-01",
        "location": "[parameters('location')]",
        "comments": "Storage account used to create a diagnostic log for",
        "tags": {
          "displayName": "Storage Account"
        },
        "sku": {
          "name": "Standard_LRS"
        },
        "kind": "Storage",
        "properties": {}
      },
      {
        "type": "Microsoft.Storage/storageAccounts",
        "name": "[variables('storageAccountSyncName')]",
        "apiVersion": "2016-01-01",
        "location": "[parameters('location')]",
        "comments": "Storage account used to store logs",
        "tags": {
          "displayName": "Storage Account"
        },
        "sku": {
          "name": "Standard_LRS"
        },
        "kind": "Storage",
        "properties": {}
      },
      {
        "type": "Microsoft.OperationalInsights/workspaces",
        "apiVersion": "2020-03-01-preview",
        "name": "[variables('logAnalyticsWorkspaceName')]",
        "location": "westus",
        "properties": {
            "provisioningState": "Succeeded",
            "sku": {
                "name": "pergb2018"
            },
            "retentionInDays": 30,
            "workspaceCapping": {
                "dailyQuotaGb": -1
            },
            "publicNetworkAccessForIngestion": "Enabled",
            "publicNetworkAccessForQuery": "Enabled"
        }
    }
    ],
    "outputs": {
      "storageAccountName": {
        "type": "string",
        "value": "[variables('storageAccountName')]"
      },
      "storageAccountSyncName": {
        "type": "string",
        "value": "[variables('storageAccountSyncName')]"
      },
      "logAnalyticsWorkspaceName": {
        "type": "string",
        "value": "[variables('logAnalyticsWorkspaceName')]"
      }

    }
  }
  
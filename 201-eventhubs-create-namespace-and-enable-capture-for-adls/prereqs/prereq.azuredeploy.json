{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adlAccountName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Data Lake Store account to create."
            }
        },
        "fsName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Data Lake Store container."
            }
        },
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "The name of the storage account to create."
            }
        },
        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "metadata": {
                "description": "The name of the storage account to create."
            }
        },
        "location": {
          "type": "string",
          "defaultValue": "centralus",
          "metadata": {
            "description": "The location of the Data Lake Store account."
          }
        },
        "identityName": {
          "type": "string",
          "metadata": {
            "description": "The name of the assigned identity."
          }
        }
    },
    "variables": {
      "adlName": "[parameters('adlAccountName')]",
      "roleDefinitionId": "[resourceId('Microsoft.Authorization/roleDefinitions', '17d1049b-9a84-46fb-8f53-869881c3d3ab')]",
      "roleDefinitionName": "[guid(parameters('identityName'), variables('roleDefinitionId'), resourceGroup().id)]",
      "fsName": "[parameters('fsName')]",
      "folderName": "quickstarts/"
    },
    "resources": [
        {
            "type": "Microsoft.DataLakeStore/accounts",
            "name": "[parameters('adlAccountName')]",
            "location": "[parameters('location')]",
            "apiVersion": "2016-11-01",
            "properties": {
                "newTier": "Consumption",
                "encryptionState": "Disabled"
            }
        },
        {
            "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
            "name": "[parameters('identityName')]",
            "apiVersion": "2018-11-30",
            "location": "[parameters('location')]"
        },
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2020-04-01-preview",
            "scope": "[format('Microsoft.DataLakeStore/accounts/{0}', parameters('adlAccountName'))]",
            "name": "[variables('roleDefinitionName')]",
            "properties": {
              "roleDefinitionId": "[variables('roleDefinitionId')]",
              "principalId": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('identityName'))).principalId]",
              "principalType": "ServicePrincipal"
            },
            "dependsOn": [
              "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('identityName'))]",
              "[resourceId('Microsoft.DataLakeStore/accounts', parameters('adlAccountName'))]"
            ]
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('storageAccountName')]",
            "apiVersion": "2019-06-01",
            "location": "[parameters('location')]",
            "sku": {
              "name": "[parameters('storageAccountType')]"
            },
            "kind": "StorageV2",
            "dependsOn": [
              "[variables('roleDefinitionName')]"
          ]
        },
        {
            "type": "Microsoft.Resources/deploymentScripts",
            "apiVersion": "2020-10-01",
            "name": "createAdlFolder",
            "location": "[parameters('location')]",
            "dependsOn": [
              "[parameters('storageAccountName')]"
            ],
            "kind": "AzurePowerShell",
            "identity": {
              "type": "userAssigned",
              "userAssignedIdentities": {
                "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('identityName'))]": {
                }
              }
            },
            "properties": {
              "forceUpdateTag": "1",
              "azPowerShellVersion": "3.0",
              "arguments": "[format(' -adlAccountName {0} -fsName {1} -folderName {2}', parameters('storageAccountName'), variables('fsName'), variables('folderName'))]",
              "scriptContent": "
                      param(
                          [string] $adlAccountName,
                          [string] $fsName,
                          [string] $folderName
                      )
                      $ctx = New-AzStorageContext -StorageAccountName $adlAccountName -UseConnectedAccount
                      New-AzStorageContainer -Context $ctx -Name $fsName
                      New-AzDataLakeGen2Item -Context $ctx -FileSystem $fsName -Path $folderName -Directory -Permission rwxrwxrwx
                    ",
              "timeout": "PT5M",
              "cleanupPreference": "OnSuccess",
              "retentionInterval": "P1D"
            }
        }
    ],
    "outputs": {
    "adlAccountName": {
      "type": "string",
      "value": "[variables('adlName')]"
    },
    "adlFileSystemName": {
      "type": "string",
      "value": "[variables('fsName')]"
    },
    "adlFolderName": {
      "type": "string",
      "value": "[variables('folderName')]"
    }
  }
}
              "application/x-javascript",
              "application/javascript",
              "application/json",
              "application/xml"
            ],
            "optimizationType": "GeneralWebDelivery",
            "probePath": null,
            "originHostHeader": "[replace(replace(reference(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2017-10-01').primaryEndpoints.blob, 'https://', ''), '/', '')]"
          }
        }
      ]
    }
  ],
  "outputs": {
    "webAppURL": {
      "type": "string",
      "value": "[concat('http://', variables('webAppExternalHostName'))]"
    },
    "adminAppURL": {
      "type": "string",
      "value": "[concat('http://', variables('adminAppExternalHostName'))]"

{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
        "vmname": {
            "type": "String"
        },
        "existingVnetName": {
            "type": "String",
            "metadata": {
                "description": "Name of the existing virtual network to be deployed in."
            }
        },
        "existingSubnetName": {
            "type": "String",
            "metadata": {
                "description": "Name of the existing subnet to deploy in."
            }
        },
        "vmSize": {
            "defaultValue": "Standard_b1ms",
            "allowedValues": [
                "Standard_A0",
                "Standard_A1",
                "Standard_A2",
                "Standard_A3",
                "Standard_B1s",
                "Standard_B2s",
                "Standard_B2ms",
                "Standard_B4ms",
                "Standard_A1_v2",
                "Standard_A2_v2",
                "Standard_A4_v2",
                "Standard_A2m_v2",
                "Standard_A4m_v2",
                "Standard_D1_v2",
                "Standard_D2_v2",
                "Standard_D3_v2",
                "Standard_DS1_v2",
                "Standard_DS2_v2",
                "Standard_DS3_v2",
                "Standard_D2_v3",
                "Standard_D4_v3",
                "Standard_D2s_v3",
                "Standard_D4s_v3",
                "Standard_E2_v3",
                "Standard_E4_v3",
                "Standard_F1 ",
                "Standard_F2",
                "Standard_F4"
            ],
            "type": "String",
            "metadata": {
                "description": "OS Size for the VM"
            }
        }
    }
}
{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "policyName": {
            "type": "string",
            "metadata": {
              "description": "Name of the Replication Policy"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
              "description": "Target Location"
            }
        },
        "mappingName": {
            "type": "string",
            "metadata": {
              "description": "Policy-Container Mapping Name"
            }
        }, 
        "policyId": {
            "type": "string",
            "metadata": {
              "description": "ARM Id of the Policy"
            }
        },
        "keyVaultUri": {
            "type": "string",
            "metadata": {
              "description": "URI of the Key Vault"
            }
        },
        "keyVaultId": {
            "type": "string",
            "metadata": {
              "description": "Id of the Key Vault"
            }
        },
        "storageAccountId": {
            "type": "string",
            "metadata": {
              "description": "Id of the Storage Account"
            }
        },
        "storageAccountSas": {
            "type": "string",
            "metadata": {
              "description": "SAS of Storage Account"
            }
        },
        "serviceBusSecret": {
            "type": "string",
            "metadata": {
              "description": "Name of secret for Service Bus Account"
            }
        },
        "serviceBusSecretValue": {
            "type": "string",
            "metadata": {
              "description": "Value of secret for Service Bus Account"
            }
        },
        "subscriptionId": {
            "type": "string",
            "defaultValue": "[subscription().subscriptionId]",
            "metadata": {
              "description": "Subscription Id of the Azure Account"
            }
        },
        "resourceGroupName": {
            "type": "string",
            "defaultValue": "[resourceGroup().name]",
            "metadata": {
              "description": "Name of the Resource Group"
            }
        },
        "vaultName": {
            "type": "string",
            "metadata": {
              "description": "Name of the Recovery Service Vault"
            }
        }
    },
    "variables": { 
        "fullPolicyName" : "[concat(parameters('vaultName'), '/', parameters('policyName'))]", 
        "mappingDependsonId": "[concat('/subscriptions/', parameters('subscriptionId'), '/resourceGroups/', parameters('resourceGroupName'), '/providers/Microsoft.RecoveryServices/vaults/', parameters('vaultName'), '/replicationPolicies/', parameters('policyName'))]"
     },
    "functions": [  ],
    "resources": [
         {
            "type": "Microsoft.RecoveryServices/vaults/replicationPolicies",
            "apiVersion": "2018-01-10",
            "name": "[variables('fullPolicyName')]",
            "dependsOn": [],
            "properties": {
                "providerSpecificInput": {
                    "instanceType": "VMwareCbt",
                    "appConsistentFrequencyInMinutes": 240,
                    "crashConsistentFrequencyInMinutes": 60,
                    "recoveryPointHistoryInMinutes": 4320
                }
            }
        },
        {
            "type": "Microsoft.RecoveryServices/vaults/replicationFabrics/replicationProtectionContainers/replicationProtectionContainerMappings",
            "apiVersion": "2018-01-10",
            "name": "[parameters('mappingName')]",
            "dependsOn": [
                "[variables('mappingDependsonId')]"
            ],
            "properties": {
                "providerSpecificInput": {
                    "instanceType": "VMwareCbt",
                    "keyVaultUri": "[parameters('keyVaultUri')]",
                    "keyVaultId": "[parameters('keyVaultId')]",
                    "storageAccountId": "[parameters('storageAccountId')]",
                    "storageAccountSasSecretName": "[parameters('storageAccountSas')]",
                    "serviceBusConnectionStringSecretName": "ServiceBusConnectionString",
                    "targetLocation": "[parameters('location')]"
                },
                "policyId": "[parameters('policyId')]",
                "targetProtectionContainerId": "Microsoft Azure"
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "2016-10-01",
            "name": "[parameters('serviceBusSecret')]",
            "location": "[parameters('location')]",
            "dependsOn": [],
            "kind": "KeyVault",
            "properties": {
                "contentType": "",
                "value": "[parameters('serviceBusSecretValue')]"
            }
        }      
    ]
  }
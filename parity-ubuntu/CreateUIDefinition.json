{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [
      {
        "name": "adminUsername",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "Username",
        "toolTip": "Admin username for the virtual machine.",
        "osPlatform": "Linux"
      },
      {
        "name": "adminPassword",
        "type": "Microsoft.Common.PasswordBox",
        "label": {
          "password": "Password",
          "confirmPassword": "Confirm password"
        },
        "toolTip": "Admin password for the virtual machine.",
        "constraints": {
          "required": true,
          "regex": "^(?:(?=.*[a-z])(?:(?=.*[A-Z])(?=.*[\\d\\W])|(?=.*\\W)(?=.*\\d))|(?=.*\\W)(?=.*[A-Z])(?=.*\\d)).{6,72}$",
          "validationMessage": "The password must be between 6 and 72 characters long, and contain characters from at least 3 of the following groups: uppercase characters, lowercase characters, numbers, and special characters."
        },
        "options": {
          "hideConfirmation": false
        }
      }
    ],
    "steps": [
      {
        "name": "vmConfig",
        "label": "VM settings",
        "subLabel": {
          "preValidation": "Configure the VM",
          "postValidation": "Done"
        },
        "bladeTitle": "DataStax cluster settings",
        "elements": [
          {
            "name": "vmSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Virtual machine size",
            "toolTip": "The size of the virtual machine to provision.",
            "recommendedSizes": [
              "Standard_A1",
              "Standard_A2",
              "Standard_A3",
              "Standard_A4",
              "Standard_D1",
              "Standard_D2",
              "Standard_D3",
              "Standard_D4"
            ],
            "constraints": {
              "allowedSizes": [
                "Standard_A1",
                "Standard_A2",
                "Standard_A3",
                "Standard_A4",
                "Standard_D1",
                "Standard_D2",
                "Standard_D3",
                "Standard_D4"
              ]
            },
            "osPlatform": "Linux",
            "imageReference": {
              "publisher": "Canonical",
              "offer": "UbuntuServer",
              "sku": "14.04.2-LTS"
            },
            "count": 1
          },
          {
            "name":"publicIp",
            "type":"Microsoft.Network.PublicIpAddressCombo",
            "label":{
              "publicIpAddress":"Public IP address for the Parity VM",
              "domainNameLabel":"Domain Name Label for the Parity VM"
            },
            "defaultValue":{
              "publicIpAddressName":"parity"
            },
            "constraints":{
              "required":{
                "domainNameLabel":true
              }
            },
            "options":{
              "hideNone":true,
              "hideDomainNameLabel":false,
              "hideExisting":true
            }
          },
          {
            "name": "storageAccount",
            "type": "Microsoft.Storage.StorageAccountSelector",
            "label": "Storage account",
            "toolTip": "Storage Account for the Virtual Machine's Disks",
            "defaultValue": {
              "type": "Standard_LRS"
            },
            "constraints": {
              "allowedTypes": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_ZRS",
                "Premium_LRS",
                "Premium_GRS"
              ],
              "required": true
            },
            "options": {
              "hideExisting": true
            }
          }
        ]
      }
    ],
    "outputs": {
      "vmDnsPrefix":"[basics('vmDnsPrefix')]",
      "adminUsername":"[basics('adminUsername')]",
      "adminPassword":"[basics('adminPassword')]",
      "vmSize": "[steps('vmConfig').vmSize]",
      "location": "[location()]",
      "storageAccountName": "[steps('vmConfig').storageAccount.name]",
      "storageAccountType": "[steps('vmConfig').storageAccount.type]",
      "dnsName":"[steps('vmConfig').publicIp.domainNameLabel]",
      "publicIpName":"[steps('vmConfig').publicIp.name]"
    }
  }
}

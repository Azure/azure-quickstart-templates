{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "username": {
      "value": "youruser"
    },
    "password": {
      "value": "yourpasswd"
    },
    "newStorageAccountName": {
      "value": "uniquestorageaccount"
    },
    "vmSize": {
      "value": "Standard_D1"
    },
    "dnsNameForPublicIP": {
      "value": "uniquednsname"
    },
    "fileUris": {
      "value": "http://example.com/foo.sh http://example.com/bar.py"
    },
    "commandToExecute": {
      "value": "./foo.sh"
    }
  }
}

{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "adPDCNicName": {
      "type": "string"
    },
    "adPDCNICIPAddress": {
      "type": "string"
    },
    "staticSubnetRef": {
      "type": "string"
    },
    "adBEAddressPoolID": {
      "type": "string"
    },
    "adRDPNATRuleID": {
      "type": "string"
    },
    "adBDCNicName": {
      "type": "string"
    },
    "adBDCNICIPAddress": {
      "type": "string"
    },
    "sqlVMName": {
      "type": "string"
    },
    "sqlSubnetRef": {
      "type": "string"
    },
    "sqlBEAddressPoolID": {
      "type": "string"
    },
    "spwebVMName": {
      "type": "string"
    },
    "spWebSubnetRef": {
      "type": "string"
    },
    "spWebBEAddressPoolID": {
      "type": "string"
    },
    "spappVMName": {
      "type": "string"
    },
    "spAppSubnetRef": {
      "type": "string"
    },
    "spCABEAddressPoolID": {
      "type": "string"
    },
    "spCANATRuleID": {
      "type": "string"
    },
    "sqlwNicName": {
      "type": "string"
    }
  },
  "resources": [
    {
      "name": "[parameters('adPDCNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('adPDCNICIPAddress')]",
              "subnet": {
                "id": "[parameters('staticSubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[parameters('adBEAddressPoolID')]"
                }
              ],
              "loadBalancerInboundNatRules": [
                {
                  "id": "[parameters('adRDPNATRuleID')]"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('adBDCNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('adBDCNICIPAddress')]",
              "subnet": {
                "id": "[parameters('staticSubnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('sqlVMName'), copyIndex(),'-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "copy": {
        "name": "sqlnicLoop",
        "count": 2
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('sqlSubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[parameters('sqlBEAddressPoolID')]"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('sqlwNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('sqlSubnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('spwebVMName'), copyIndex(),'-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "copy": {
        "name": "spWebnicLoop",
        "count": 2
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('spWebSubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[parameters('spWebBEAddressPoolID')]"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('spappVMName'),'0-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('spAppSubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[parameters('spCABEAddressPoolID')]"
                }
              ],
              "loadBalancerInboundNatRules": [
                {
                  "id": "[parameters('spCANATRuleID')]"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('spappVMName'),'1-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('spAppSubnetRef')]"
              }
            }
          }
        ]
      }
    }
  ],
  "outputs": {}
}
{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]",
        "metadata": {
          "description": "Location of the Shared Image Gallery."
        }
      }
    },
    "variables": {
      "managedDiskName":"[concat('manageddisk',uniqueString(resourceGroup().id))]"
    },
    "resources": [
      {
        "name": "[variables('managedDiskName')]",
        "type": "Microsoft.Compute/disks",
        "apiVersion": "2020-09-30",
        "location": "[parameters('location')]",
        "sku": {
          "name": "Standard_LRS"
        },
        "properties": {
          "creationData": {
            "createOption": "Empty"
          },
          "diskSizeGB": 512
        }
      }
    ],
    "outputs": {
      "userDiskId": {
        "type": "string",
        "value": "[resourceId('Microsoft.Compute/disks', variables('managedDiskName'))]"
      }
    }
  }
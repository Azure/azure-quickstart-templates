{
	"$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"installOCSImagesScriptUrl": {
			"type": "string",
			"metadata": {
				"description": "OCS script Url"
			}
		},
		"installOCSScriptFileName": {
			"type": "string",
			"metadata": {
				"description": "OCS script file name"
			}
		},
		"redHatTags": {
			"type": "object",
			"metadata": {
				"description": "Red Hat Tags"
			}
		},
		"adminUsername": {
			"type": "string",
			"metadata": {
				"description": "Admin Username"
			}
		},
		"bastionHostname": {
			"type": "string",
			"metadata": {
				"description": "Bastion Hostname"
			}
		},
		"location": {
			"type": "string",
			"metadata": {
				"description": "Region where the resources should be created in"
			}
		},
		"openshiftUsername": {
			"type": "string",
			"metadata": {
				"description": "Openshift Username"
			}
		},
		"openshiftPassword": {
			"type": "string",
			"metadata": {
				"description": "Openshift Password"
			}
		},
		"clusterName": {
			"type": "string",
			"metadata": {
				"description": "Cluster Name"
			}
		},
		"domainName": {
			"type": "string",
			"metadata": {
				"description": "DNS Zone name"
			}
		}
	},
	"variables": {
	},
	"resources": [
		{
			"type": "Microsoft.Compute/virtualMachines/extensions",
			"name": "[concat(parameters('bastionHostname'), '/deployOpenshift')]",
			"location": "[parameters('location')]",
			"apiVersion": "2019-07-01",
			"tags": {
				"displayName": "InstallOCS",
				"app": "[parameters('redHatTags').app]",
				"version": "[parameters('redHatTags').version]",
				"platform": "[parameters('redHatTags').platform]"
			},
			"properties": {
				"publisher": "Microsoft.Azure.Extensions",
				"type": "CustomScript",
				"typeHandlerVersion": "2.0",
				"autoUpgradeMinorVersion": true,
				"settings": {
					"fileUris": [
						"[parameters('installOCSImagesScriptUrl')]"
					]
				},
				"protectedSettings": {
					"commandToExecute": "[concat('bash ', parameters('installOCSScriptFileName'), ' \"', parameters('adminUsername'), '\"', ' \"', parameters('openshiftUsername'), '\"', ' \"', parameters('openshiftPassword'), '\"', ' \"', parameters('clusterName'), '\"', ' \"', parameters('domainName'), '\"')]"
				}
			}
		}
	],
	"outputs": {
	}
}

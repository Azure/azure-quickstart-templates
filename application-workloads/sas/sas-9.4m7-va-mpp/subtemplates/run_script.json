{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "vmName": {
      "type": "string"
    },
    "command": {
      "type": "string"
    },
    "_artifactsLocation": {
      "type": "string"
    },
    "_artifactsLocationSasToken": {
      "type": "secureString"
    }
  },
  "variables": {
    "extensionName": "scriptStartup"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "apiVersion": "2019-07-01",
      "name": "[concat(parameters('vmName'), '/', variables('extensionName'))]",
      "location": "[parameters('location')]",
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.1",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "skipDos2Unix": false
        },
        "protectedSettings": {
          "commandToExecute": "[parameters('command')]",
          "fileUris": [
            "[concat(parameters('_artifactsLocation'), 'scripts/SetupJump.sh', parameters('_artifactsLocationSasToken'))]",
            "[concat(parameters('_artifactsLocation'), 'scripts/SetupJumpInstallSAS.sh', parameters('_artifactsLocationSasToken'))]"
          ]
        }
      }
    }
  ],
  "outputs": {
    "instanceView": {
      "value": "[reference(resourceId('Microsoft.Compute/virtualMachines/extensions', parameters('vmName'), variables('extensionName'))).instanceView]",
      "type": "object"
    }
  }
}

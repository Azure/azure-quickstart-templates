{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "storageAccountSkuName": {
        "type": "string",
        "defaultValue": "Standard_LRS",
        "metadata": {
            "description": "The name of the App Service Plan."
        }
    },
    "storageAccountKind": {
        "type": "string",
        "defaultValue": "StorageV2",
        "metadata": {
            "description": "The name of the Storage Account Type."
        }
     }
  },
  "variables": {
    "storageAccountName": "[concat(uniqueString(resourceGroup().id), 'cfdefaultsa')]",
    "storageAccountId": "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "sku": {
          "name": "[parameters('storageAccountSkuName')]"
      },
      "kind": "[parameters('storageAccountKind')]",
      "name": "[variables('storageAccountName')]",
      "apiVersion": "2021-02-01",
      "location": "[parameters('location')]"
    }
  ],
  "outputs": {
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageAccountName')]"
    },
    "storageAccountKey": {
      "type": "string",
      "value": "[listKeys(variables('storageAccountId'), '2020-02-01').key1]"
    },
    "blobEndpoint": {
      "type": "string",
      "value": "[reference(concat('Microsoft.Storage/storageAccounts/', variables('storageAccountName')), '2020-02-01').primaryEndpoints.blob]"
    }
  }
}

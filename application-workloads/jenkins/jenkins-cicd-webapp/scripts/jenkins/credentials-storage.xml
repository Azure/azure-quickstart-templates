<com.microsoftopentechnologies.windowsazurestorage.helper.AzureCredentials plugin="windows-azure-storage@0.3.7">
  <scope>GLOBAL</scope>
  <id>{insert-credentials-id}</id>
  <description>{insert-credentials-description}</description>
  <storageData>
    <storageAccountName>{insert-credentials-account-name}</storageAccountName>
    <storageAccountKey>{insert-credentials-account-key}</storageAccountKey>
    <blobEndpointURL>http://blob.core.windows.net/</blobEndpointURL>
  </storageData>
</com.microsoftopentechnologies.windowsazurestorage.helper.AzureCredentials>
{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "principalId": {
            "type": "string",
            "metadata": {
                "description": "Principal ID associated with the subscription ID"
            }
        },
        "virtualMachineName": {
            "type": "array",
            "metadata": {
                "description": "Names of the virtual machines"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "scope": "[concat('Microsoft.Compute/virtualMachines/', parameters('virtualMachineName')[copyIndex()])]",
            "copy": {
                "name": "vms",
                "count": "[length(parameters('virtualMachineName'))]"
            },
            "apiVersion": "2020-04-01-preview",
            "name": "[newGuid()]",
            "properties": {
                "roleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'acdd72a7-3385-48ef-bd42-f606fba81ae7')]",
                "principalId": "[parameters('principalId')]"
            }
        }
    ]
}
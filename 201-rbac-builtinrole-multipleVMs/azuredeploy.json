{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "principalId": {
            "type": "string",
            "metadata": {
                "description": "Principal ID associated with the subscription ID"
            }
        },
        "guid": {
            "type": "array",
            "defaultValue": [
              "099A9D93-B94F-44A0-9794-B949BCD76968",
              "71121498-465D-465A-AA4A-861DC8116095"
            ],
            "metadata": {
              "description": "Input array for new GUIDs associated with assigning built in role types"
            }
    },
        "virtualMachineName": {
            "type": "array",
            "metadata": {
                "description": "Names of the virtual machines"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines/providers/roleAssignments",
            "scope": "[concat('Microsoft.Compute/virtualMachines/', parameters('virtualMachineName')[copyIndex()])]",
            "copy": {
                "name": "vms",
                "count": "[length(parameters('virtualMachineName'))]"
            },
            "apiVersion": "2014-10-01-preview",
            "name": "[concat(parameters('virtualMachineName'), '/Microsoft.Authorization/', parameters('guid'))[copyIndex()]]",
            "properties": {
                "roleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'acdd72a7-3385-48ef-bd42-f606fba81ae7')]",
                "principalId": "[parameters('principalId')]"
            }
        }
    ]
}
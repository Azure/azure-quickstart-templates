{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Admin username for VM"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password for VM"
      }
    },
    "VMNamePrefix": {
      "type": "string",
      "metadata": {
        "description": "Prefix for Virtual Machine names"
      }
    },
    "storageaccountname": {
      "type": "string",
      "metadata": {
        "description": "Storage account name"
      }
    },
    "vnetname": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network Name"
      }
    },
    "subnet1name": {
      "type": "string",
      "metadata": {
        "description": "Enter Subnet 1 Name"
      }
    },
    "subnet2name": {
      "type": "string",
      "metadata": {
        "description": "Enter Subnet 2 name"
      }
    },
    "availabilitySetName": {
      "type": "string",
      "metadata": {
        "description": "Enter Availablity Set Name"
      }
    },
    "numberOfInstances": {
      "type": "int",
      "defaultValue": 2,
      "metadata": {
        "description": "Number of VMs to deploy"
      }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_D2",
      "metadata": {
        "description": "Size of the Virtual Machine."
      }
    },
    "OS": {
      "type": "string",
      "defaultValue": "Ubuntu14.04LTS",
      "allowedValues": [
        "Ubuntu14.04LTS",
        "Standard_A3",
        "Standard_A4",
        "Standard_A6",
        "Standard_A7",
        "Standard_A8",
        "Standard_A9",
        "Standard_A10",
        "Standard_A11",
        "Standard_D3",
        "Standard_D4",
        "Standard_D11",
        "Standard_D12",
        "Standard_D13",
        "Standard_D14",
        "Standard_D2_v2",
        "Standard_D3_v2",
        "Standard_D4_v2",
        "Standard_D5_v2",
        "Standard_D11_v2",
        "Standard_D12_v2",
        "Standard_D13_v2",
        "Standard_D14_v2",
        "Standard_D15_v2"

      ],
      "metadata": {
        "description": "Size of the Virtual Machine."
      }
    }
  }
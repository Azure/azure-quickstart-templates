{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmName": {
      "value": "myVM"
    },
    "adminUsername": {
      "value": "username"
    },
    "adminPassword": {
      "value": "password!"
    },
    "osDiskUrlParam": {
      "value": "osDisk.vhd"
    },
    "dataDiskUrlParam": {
      "value": "dataDisk.vhd"
    },    
    "dnsNameForPublicIP": {
      "value": "uniquedns",
      "metadata": {
         "description": "it should match with the following regular expression: ^[a-z][a-z0-9-]{1,61}[a-z0-9]$ or it will raise an error" 
      }
    },
    "osType": {
      "value": "linux"
    },
    "location": {
      "value": "West US"
    },
    "vmSize": {
      "value": "Standard_A3"
    }
  }
}
{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmNamePrefix": {
            "type": "string",
            "minLength": 3,
            "maxLength": 8
        },
        "vmSize": {
            "type": "string",
            "allowedValues": [
                "Standard_A6",
                "Standard_A7",
                "Standard_A8_v2",
                "Standard_A2m_v2",
                "Standard_A4m_v2",
                "Standard_A8m_v2",
                "Standard_D4",
                "Standard_DS4",
                "Standard_D4_v2",
                "Standard_D5_v2",
                "Standard_DS4_v2",
                "Standard_DS5_v2",
                "Standard_F8",
                "Standard_F16",
                "Standard_F8s",
                "Standard_F16s",
                "Standard_G1",
                "Standard_G2",
                "Standard_G3",
                "Standard_GS1",
                "Standard_GS2",
                "Standard_GS3"
            ]
        },
        "dnsNamePrefix": {
            "type": "string"
        },
        "adminUserName": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "hxeSetupFileUrl": {
            "type": "string"
        },
        "hxeMasterPwd": {
            "type": "securestring"
        }
    },
    "variables": {
        "vmNicName": "[concat(parameters('vmNamePrefix'), 'NIC')]",
        "vmOsDiskName": "[concat(parameters('vmNamePrefix'), 'OsDisk')]",
        "vmDataDiskName": "[concat(parameters('vmNamePrefix'), 'DataDisk')]",
        "vmPublicIpName": "[concat(parameters('vmNamePrefix'), 'PublicIP')]",  
        "vnetName": "[concat(parameters('vmNamePrefix'), '_VNet')]",
        "subnetName": "hxeSubnet",
    }
}
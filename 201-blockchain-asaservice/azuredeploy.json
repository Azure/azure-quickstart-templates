{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "blockchainMemberName": {
            "type": "String",
             "metadata": {
                "description": "Blockchain member name."
            }
        },
         "memberPassword": {
            "type": "secureString",
            "defaultValue": "SecureP4$$w0rd",
            "metadata": {
                "description": "Password for the BlockChain Administrator. The password must password must have 3 of the following: 1 lower case character, 1 upper case character, 1 number, and 1 special character that is not '#', '`', '*', '\"', ''', '-', '%',' ' or ';'."
            }
        },
       "location": {  
		"type": "string",  
            "defaultValue": "[resourceGroup().location]",  
            "metadata": {  
                    "description": "Location for all resources."  
            }  
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Blockchain/blockchainMembers",
            "apiVersion": "2018-06-01-preview",
            "name": "[parameters('blockchainMemberName')]",
            "location": "[parameters('location')]",
            "tags": {
                "consortium": "Consortium"
            },
            "sku": {
                "name": "S0",
                "tier": "Standard"
            },
            "properties": {
                "protocol": "Quorum",
                "consensus": "Default",
                "password": "[parameters('memberPassword')]",
                "validatorNodesSku": {
                    "capacity": 2
                },
                "consortium": "[concat('Consort-', uniqueString(parameters('blockchainMemberName')))]",
                "consortiumRole": "ADMIN",
                "consortiumMemberDisplayName": "[parameters('blockchainMemberName')]",
                "consortiumManagementAccountPassword": "[parameters('memberPassword')]",
                "firewallRules": [
                    {
                        "ruleName": "AllowAll",
                        "startIpAddress": "0.0.0.0",
                        "endIpAddress": "255.255.255.255"
                    }
                ]
            }
        }
    ]
}
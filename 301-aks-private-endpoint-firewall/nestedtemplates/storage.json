{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "metadata": {
                "description": "location to deploy the storage account"
            }
        },
        "storageSku": {
            "type": "string",
            "defaultValue": "Standard_LRS"
        },
        "storageKind": {
            "type": "string",
            "defaultValue": "StorageV2"
        },
        "containerName": {
            "type": "string"
        },
        "sasTokenExpiry": {
            "type": "string"
        },
        "accountSasProperties": {
            "type": "object",
            "defaultValue": {
                "signedServices": "b",
                "signedPermission": "rl",
                "signedExpiry": "[parameters('sasTokenExpiry')]",
                "signedResourceTypes": "o"
            }
        }
    },
    "variables": {
        "resgpguid": "[substring(replace(guid(resourceGroup().id), '-', ''), 0, 6)]",
        "storageAccountName": "[concat('stor', variables('resgpguid'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "apiVersion": "2018-07-01",
            "sku": {
                "name": "[parameters('storageSku')]"
            },
            "kind": "[parameters('storageKind')]",
            "location": "[parameters('location')]",
            "properties": {
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [
                    ],
                    "ipRules": [
                    ],
                    "defaultAction": "Allow"
                },
                "supportsHttpsTrafficOnly": true,
                "encryption": {
                    "services": {
                        "file": {
                            "enabled": true
                        },
                        "blob": {
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                },
                "accessTier": "Hot"
            },
            "resources": [
                {
                    "name": "[concat('default/', parameters('containerName'))]",
                    "type": "blobServices/containers",
                    "apiVersion": "2018-07-01",
                    "dependsOn": [
                        "[variables('storageAccountName')]"
                    ]
                }
            ],
            "dependsOn": [
            ]
        }
    ],
    "outputs": {
        "storageAccountName": {
            "type": "string",
            "value": "[variables('storageAccountName')]"
        },
        "storageAccountSasToken": {
            "type": "string",
            "value": "[concat('?', listAccountSas(variables('storageAccountName'), '2018-07-01', parameters('accountSasProperties')).accountSasToken)]"
        },
        "storageContainerUri": {
            "type": "string",
            "value": "[concat(reference(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))).primaryEndpoints.blob, parameters('containerName'))]"
        }
    }
}
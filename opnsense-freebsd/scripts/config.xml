      <descr><![CDATA[ICMP]]></descr>
      <options/>
    </monitor_type>
    <monitor_type>
      <name>TCP</name>
      <type>tcp</type>
      <descr><![CDATA[Generic TCP]]></descr>
      <options/>
    </monitor_type>

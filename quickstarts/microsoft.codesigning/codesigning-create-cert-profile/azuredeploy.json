{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "accountName": {
      "type": "string",
      "minLength": 3,
      "maxLength": 15,
      "metadata": {
        "description": "An existing signing account name."
      }
    },
    "profileName": {
      "type": "string",
      "minLength": 3,
      "maxLength": 15,
      "metadata": {
        "description": "A certificate profile to provision."
      }
    },
    "identityValidationId": {
      "type": "string",
      "metadata": {
        "description": "The identity validation id to be used for the certificate profile."
      }
    },
    "profileType": {
      "type": "string",
      "defaultValue": "PublicTrust",
      "allowedValues": [
        "PublicTrust",
        "PrivateTrust",
        "PrivateTrustCIPolicy",
        "PublicTrustTest",
        "VBSEnclave"
      ],
      "metadata": {
        "description": "Profile type for theclea certificate profile."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.CodeSigning/codeSigningAccounts/certificateProfiles",
      "apiVersion": "2024-02-05-preview",
      "name": "[format('{0}/{1}', parameters('accountName'), parameters('profileName'))]",
      "properties": {
        "profileType": "[parameters('profileType')]",
        "identityValidationId": "[parameters('identityValidationId')]"
      }
    }
  ]
}
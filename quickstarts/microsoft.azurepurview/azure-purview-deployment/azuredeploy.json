{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "azurePurview_name": {
            "type": "String",
            "defaultValue": "[concat('azurePurview', uniqueString(resourceGroup().id))]",
			"metadata": {
        "description": "Specify a name for the Azure Purview account."
		}
      },
        "region_name": {
            "defaultValue": "[resourceGroup().location]",
            "type": "String",
			"metadata": {
        "description": "Specify a region for resource deployment."
      }
        }
    },
    "resources": [
        {
        "type": "Microsoft.Resources/deploymentScripts",
        "apiVersion": "2020-10-01",
        "name": "registerProvider",
        "location": "[resourceGroup().location]",
        "kind": "AzureCLI",
        "properties": {
            "forceUpdateTag": "1",
            "azCliVersion": "2.28.0",
            "scriptContent": "az provider register --namespace Microsoft.Purview",
            "timeout": "PT1H",
            "cleanupPreference": "OnSuccess",
            "retentionInterval": "P1D"
            }
        },
        {
            "type": "Microsoft.Purview/accounts",
            "apiVersion": "2021-07-01",
            "name": "[parameters('azurePurview_name')]",
            "location": "[parameters('region_name')]",
            "sku": {
                "name": "Standard",
                "capacity": 1
            },
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "publicNetworkAccess": "Enabled",
                "managedResourceGroupName": "[concat('managed-rg-', parameters('azurePurview_name'))]"
            }
        }
    ]
}
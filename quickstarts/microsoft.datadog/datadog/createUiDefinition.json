{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
      "config": {
        "basics": {
          "description": "This template deploys a new Datadog - An Azure Native ISV Service resource and creates a new organization in Datadog's US3 site to monitor resources in your Azure subscription.",
          "location": {
            "label": "Location",
            "resourceTypes": ["Microsoft.Datadog/monitors"]
          }
        }
      },
      "resourceTypes": ["Microsoft.Datadog/monitors"],
      "basics": [
        {
          "name": "resourceGroupName",
          "type": "Microsoft.Common.TextBox",
          "label": "Resource Group Name",
          "toolTip": "Specify the name of the resource group in which the datadog resource will be created",
          "constraints": {
            "required": true,
            "regex": "^.{1,250}$",
            "validationMessage": "Name cannot be longer than 250 characters."
          },
          "visible": true
        },
        {
            "name": "monitorName",
            "type": "Microsoft.Common.TextBox",
            "label": "Monitor Name",
            "toolTip": "Specify a name for the Datadog resource",
            "constraints": {
              "required": true,
              "regex": "^.{1,250}$",
              "validationMessage": "Name cannot be longer than 250 characters."
            },
            "visible": true
        },
        {
          "name": "plan",
          "type": "Microsoft.Common.DropDown",
          "label": "Plan",
          "defaultValue": "Datadog Pro Pay-As-You-Go",
          "constraints": {
            "required": false,
            "allowedValues": [
              {
                "label": "Datadog Pro Pay-As-You-Go",
                "value": "Datadog Pro Pay-As-You-Go"
              }
            ]
          }
        },
        {
          "name": "billingTerm",
          "type": "Microsoft.Common.DropDown",
          "label": "Billing Term",
          "defaultValue": "Monthly",
          "constraints": {
            "required": false,
            "allowedValues": [
              {
                "label": "Monthly",
                "value": "Monthly"
              }
            ]
          }
        }
      ],
      "steps": [],
      "outputs": {
        "resourceGroupName": "[basics('resourceGroupName')]",
        "monitorName": "[basics('monitorName')]",
        "location": "[location()]",
        "plan": "[basics('plan')]",
        "billingTerm": "[basics('billingTerm')]"
      }
    }
}
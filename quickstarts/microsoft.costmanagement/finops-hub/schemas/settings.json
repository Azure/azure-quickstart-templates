{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "enum": ["https://aka.ms/finops/hubs/settings-schema"]
    },
    "type": {
      "type": "string",
      "enum": ["HubInstance"]
    },
    "version": {
      "type": "string",
      "enum": ["0.0.1", "0.1", "0.1.1", "0.2", "0.2.1", "0.3", "0.4", "0.5", "0.6", "0.7"]
    },
    "learnMore": {
      "type": "string",
      "enum": ["https://aka.ms/finops/hubs"]
    },
    "scopes": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "scope": {
              "type": "string"
            }
          },
          "additionalProperties": true,
          "required": ["scope"]
        }
      ],
      "additionalItems": true
    },
    "retention": {
      "type": "object",
      "properties": {
        "msexports": {
          "type": "object",
          "properties": {
            "days": {
              "type": "integer",
              "minimum": 0
            }
          },
          "additionalProperties": true,
          "required": ["days"]
        },
        "ingestion": {
          "type": "object",
          "properties": {
            "months": {
              "type": "integer",
              "minimum": 0
            }
          },
          "additionalProperties": true,
          "required": ["months"]
        },
        "raw": {
          "type": "object",
          "properties": {
            "days": {
              "type": "integer",
              "minimum": 0
            }
          },
          "additionalProperties": true,
          "required": ["days"]
        },
        "final": {
          "type": "object",
          "properties": {
            "months": {
              "type": "integer",
              "minimum": 0
            }
          },
          "additionalProperties": true,
          "required": ["months"]
        }
      },
      "additionalProperties": true,
      "required": ["ingestion", "msexports"]
    }
  },
  "additionalProperties": true,
  "required": ["$schema", "type", "version", "scopes", "retention"]
}

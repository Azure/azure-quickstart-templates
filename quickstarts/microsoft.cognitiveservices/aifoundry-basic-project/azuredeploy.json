{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "aiServicesName": {
        "type": "string",
        "defaultValue": "AIServices-viaARMtemplate",
        "metadata": {
          "description": "This is our AIServices resource template."
        }
      },
      "location": {
        "type": "string",
        "defaultValue": "East US 2",
        "metadata": {
          "description": "Location for all resources."
        }
      },
      "sku": {
        "type": "string",
        "defaultValue": "S0",
        "allowedValues": [
          "S0"
        ]
      },
      "aiProjectName": {
        "type": "string",
        "defaultValue": "AIProject-viaARMtemplate",
        "metadata": {
          "description": "This will be the Project's name."
        }
      },
      "PNAflag": {
        "type": "string",
        "defaultValue": "Enabled",
        "metadata": {
          "description": "Public Network Access flag default is Enabled."
        }
      }
    },
    "resources": [
      {
        "type": "Microsoft.CognitiveServices/accounts",
        "apiVersion": "2025-04-01-preview",
        "name": "[parameters('aiServicesName')]",
        "location": "[parameters('location')]",
        "identity": {
          "type": "SystemAssigned"
        },
        "sku": {
          "name": "[parameters('sku')]"
        },
        "kind": "AIServices",
        "properties": {
          "publicNetworkAccess": "Enabled",
          "allowProjectManagement": true
        }
      },
      {
        "type": "Microsoft.CognitiveServices/accounts/projects",
        "apiVersion": "2025-04-01-preview",
        "name": "[format('{0}/{1}', parameters('aiServicesName'), parameters('aiProjectName'))]",
        "location": "[parameters('location')]",
        "identity": {
            "type": "SystemAssigned"
        },
        "dependsOn": [
            "[resourceID('Microsoft.CognitiveServices/accounts', parameters('aiServicesName'))]"
        ],
        "properties": {
            "publicNetworkAccess": "Enabled",
            "allowProjectManagement": true
        }
      }
    ]
  }
{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.19.5.34762",
      "templateHash": "4340043343549921482"
    }
  },
  "parameters": {
    "l3DomainName": {
      "type": "string",
      "metadata": {
        "description": "Name of the L3 Isolation Domain"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure Region for deployment of the L3 Isolation Domain and associated resources"
      }
    },
    "networkFabricId": {
      "type": "string",
      "metadata": {
        "description": "Resource Id of the Network Fabric, is should be in the format of /subscriptions/<Sub ID>/resourceGroups/<Resource group name>/providers/Microsoft.ManagedNetworkFabric/networkFabrics/<networkFabric name>"
      }
    },
    "annotation": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Switch configuration description"
      }
    },
    "redistributeConnectedSubnets": {
      "type": "string",
      "defaultValue": "True",
      "allowedValues": [
        "True",
        "False"
      ],
      "metadata": {
        "description": "Advertise Connected Subnets"
      }
    },
    "redistributeStaticRoutes": {
      "type": "string",
      "defaultValue": "False",
      "allowedValues": [
        "True",
        "False"
      ],
      "metadata": {
        "description": "Advertise Static Routes"
      }
    },
    "aggregateRouteConfiguration": {
      "type": "object",
      "metadata": {
        "description": "List of Ipv4 and Ipv6 route configurations"
      }
    },
    "connectedSubnetRoutePolicy": {
      "type": "object",
      "metadata": {
        "description": "Connected Subnet RoutePolicy"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.ManagedNetworkFabric/l3IsolationDomains",
      "apiVersion": "2023-06-15",
      "name": "[parameters('l3DomainName')]",
      "location": "[parameters('location')]",
      "properties": {
        "networkFabricId": "[parameters('networkFabricId')]",
        "annotation": "[if(not(empty(parameters('annotation'))), parameters('annotation'), null())]",
        "redistributeConnectedSubnets": "[parameters('redistributeConnectedSubnets')]",
        "redistributeStaticRoutes": "[parameters('redistributeStaticRoutes')]",
        "aggregateRouteConfiguration": "[if(not(empty(parameters('aggregateRouteConfiguration'))), createObject('ipv4Routes', if(contains(parameters('aggregateRouteConfiguration'), 'ipv4Routes'), parameters('aggregateRouteConfiguration').ipv4Routes, null()), 'ipv6Routes', if(contains(parameters('aggregateRouteConfiguration'), 'ipv6Routes'), parameters('aggregateRouteConfiguration').ipv6Routes, null())), null())]",
        "connectedSubnetRoutePolicy": "[if(not(empty(parameters('connectedSubnetRoutePolicy'))), createObject('exportRoutePolicy', if(contains(parameters('connectedSubnetRoutePolicy'), 'exportRoutePolicy'), parameters('connectedSubnetRoutePolicy').exportRoutePolicy, null())), null())]"
      },
      "metadata": {
        "description": "Create L3 Isolation Domain  Resource"
      }
    }
  ],
  "outputs": {
    "resourceID": {
      "type": "string",
      "value": "[resourceId('Microsoft.ManagedNetworkFabric/l3IsolationDomains', parameters('l3DomainName'))]"
    }
  }
}
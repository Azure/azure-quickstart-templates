{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "devCenterName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Devcenter resource e.g. [devCenterName]-dc"
            }
        },
        "projectName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Project resource e.g. [projectName]-proj"
            }
        },
        "devBoxDefinitionName": {
            "type": "string",
            "metadata": {
                "description": "A default Dev Box definition with Windows 11 Enterprise, Visual Studio 2022, 16 cores, 64GB RAM, and 512GB storage. The name of the Dev Dox Definition resource e.g [devBoxDefintionName]-dbd"
            }
        },
        "poolName": {
            "type": "string",
            "metadata": {
                "description": "A Microsoft Hosted Network Pool in the region of the resouce group. The name of the Pool resource e.g. [poolName]-[region]-pool"
            }
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "formattedPoolName": "[format('{0}-{1}-pool', parameters('poolName'), variables('location'))]",
        "poolPropertyAdmin": "Enabled",
        "poolPropertyNetworkType": "Managed",
        "poolPropertyNetworkName": "Network",
        "image-win11-ent-vs2022": "microsoftvisualstudio_visualstudioplustools_vs-2022-ent-general-win11-m365-gen2",
        "compute-16c-64gb": "general_i_16c64gb512ssd_v2",
        "storage-512gb": "512gb"
    },
    "resources": [
        {
            "name": "[parameters('devCenterName')]",
            "type": "Microsoft.DevCenter/devcenters",
            "apiVersion": "2024-10-01-preview",
            "location": "[variables('location')]",
            "tags": {
                "hidden-created-with": "devbox-quickstart-resource"
            },
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "projectCatalogSettings": {
                    "catalogItemSyncEnableStatus": "Enabled"
                },
                "networkSettings": {
                    "microsoftHostedNetworkEnableStatus": "Enabled"
                },
                "devBoxProvisioningSettings": {
                    "installAzureMonitorAgentEnableStatus": "Enabled"
                }
            }
        },
        {
            "type": "Microsoft.DevCenter/projects",
            "apiVersion": "2023-04-01",
            "name": "[parameters('projectName')]",
            "location": "[variables('location')]",
            "tags": {
                "hidden-created-with": "devbox-quickstart-resource"
            },
            "properties": {
                "devCenterId": "[resourceId('Microsoft.DevCenter/devcenters', parameters('devCenterName'))]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.DevCenter/devcenters', parameters('devCenterName'))]"
            ]
        },
        {
            "type": "Microsoft.DevCenter/devcenters/devboxdefinitions",
            "apiVersion": "2024-08-01-preview",
            "name": "[format('{0}/{1}', parameters('devCenterName'), parameters('devBoxDefinitionName'))]",
            "location": "[variables('location')]",
            "tags": {
                "hidden-created-with": "devbox-quickstart-resource"
            },
            "properties": {
                "imageReference": {
                    "id": "[format('{0}/galleries/default/images/{1}', resourceId('Microsoft.DevCenter/devcenters', parameters('devcenterName')), variables('image-win11-ent-vs2022'))]"
                },
                "sku": {
                    "name": "[variables('compute-16c-64gb')]"
                },
                "osStorageType": "[format('ssd_{0}', variables('storage-512gb'))]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.DevCenter/devcenters', parameters('devCenterName'))]"
            ]
        },
        {
            "type": "Microsoft.DevCenter/projects/pools",
            "apiVersion": "2024-10-01-preview",
            "name": "[format('{0}/{1}', parameters('projectName'), variables('formattedPoolName'))]",
            "location": "[variables('location')]",
            "tags": {
                "hidden-created-with": "devbox-quickstart-resource"
            },
            "properties": {
                "devBoxDefinitionName": "[parameters('devBoxDefinitionName')]",
                "licenseType": "Windows_Client",
                "localAdministrator": "[variables('poolPropertyAdmin')]",
                "managedVirtualNetworkRegions": [ "[variables('location')]" ],
                "virtualNetworkType": "[variables('poolPropertyNetworkType')]",
                "networkConnectionName": "[format('{0}-{1}', variables('poolPropertyNetworkName'), variables('location'))]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.DevCenter/projects', parameters('projectName'))]"
            ]
        }
    ],
    "outputs": {}
}
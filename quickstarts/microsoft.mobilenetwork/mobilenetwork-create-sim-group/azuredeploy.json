{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.7.4.23292",
      "templateHash": "10232158116713982057"
    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "Region where the SIM group will be deployed (must match the resource group region)."
      }
    },
    "simGroupName": {
      "type": "string",
      "metadata": {
        "description": "The name for the SIM group."
      }
    },
    "encryptionKeyUrl": {
      "type": "string",
      "metadata": {
        "description": "An Azure key vault key to encrypt the SIM(s) data that belongs to this SIM group."
      }
    },
    "existingMobileNetworkName": {
      "type": "string",
      "metadata": {
        "description": "Name of the mobile network to which you are adding the SIM group"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.MobileNetwork/simGroups",
      "apiVersion": "2022-04-01-preview",
      "name": "[parameters('simGroupName')]",
      "location": "[parameters('location')]",
      "properties": {
        "encryptionKey": {
          "keyUrl": "[parameters('encryptionKeyUrl')]"
        },
        "mobileNetwork": {
          "id": "[resourceId('Microsoft.MobileNetwork/mobileNetworks', parameters('existingMobileNetworkName'))]"
        }
      }
    }
  ]
}
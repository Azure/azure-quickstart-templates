{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.4.613.9944",
      "templateHash": "857799755916068479"
    }
  },
  "parameters": {
    "clusterName": {
      "type": "string",
      "defaultValue": "aks-osm-addon-quickstart",
      "metadata": {
        "description": "Provide a name for the AKS cluster. The only allowed characters are letters, numbers, dashes, and underscore. The first and last character must be a letter or a number."
      },
      "maxLength": 63,
      "minLength": 3
    },
    "clusterDNSPrefix": {
      "type": "string",
      "metadata": {
        "description": "Provide a name for the AKS dnsPrefix. Valid characters include alphanumeric values and hyphens (-). The dnsPrefix can't include special characters such as a period (.)"
      },
      "maxLength": 54,
      "minLength": 3
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "The location of the Managed Cluster resource."
      }
    },
    "k8Version": {
      "type": "string",
      "defaultValue": "1.20.9",
      "metadata": {
        "description": "The Kubernetes version of the Managed Cluster resource."
      }
    },
    "linuxAdminUsername": {
      "type": "string",
      "metadata": {
        "description": "User name for the Linux Virtual Machines."
      }
    },
    "sshPubKey": {
      "type": "string"
    }
  },
  "functions": [],
  "resources": [
    {
      "type": "Microsoft.ContainerService/managedClusters",
      "apiVersion": "2021-03-01",
      "name": "[parameters('clusterName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deploymentScripts', 'enableOSMPreview')]"
      ],
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "kubernetesVersion": "[parameters('k8Version')]",
        "dnsPrefix": "[parameters('clusterDNSPrefix')]",
        "enableRBAC": true,
        "agentPoolProfiles": [
          {
            "name": "agentpool",
            "count": 3,
            "vmSize": "Standard_DS2_v2",
            "osDiskSizeGB": 30,
            "osDiskType": "Ephemeral",
            "osType": "Linux",
            "mode": "System"
          }
        ],
        "linuxProfile": {
          "adminUsername": "[parameters('linuxAdminUsername')]",
          "ssh": {
            "publicKeys": [
              {
                "keyData": "[parameters('sshPubKey')]"
              }
            ]
          }
        },
        "addonProfiles": {
          "openServiceMesh": {
            "enabled": true
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deploymentScripts",
      "apiVersion": "2020-10-01",
      "name": "enableOSMPreview",
      "location": "[parameters('location')]",
      "kind": "AzureCLI",
      "properties": {
        "azCliVersion": "2.28.0",
        "timeout": "PT10M",
        "scriptContent": "
        az extension add --name aks-preview \\
        az extension update --name aks-preview \\
        az feature register --namespace \"Microsoft.ContainerService\" --name \"AKS-OpenServiceMesh\" \\
        az provider register --namespace Microsoft.ContainerService",
        "cleanupPreference": "Always",
        "retentionInterval": "P1D"
      }
    }
  ]
}

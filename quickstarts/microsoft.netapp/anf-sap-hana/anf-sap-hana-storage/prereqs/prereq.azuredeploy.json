{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Same location of resource group for all resources"
            }
        },
        "virtualNetworkName": {
            "type": "String",
            "defaultValue": "[concat('vnet-', uniqueString(resourceGroup().id))]",
            "metadata": {
                "description": "Virtual Network name."
            }
        },
        "vnetAddressPrefix": {
            "type": "String",
            "metadata": {
                "description": "Virtual Network address range."
            }
        },
        "anfSubnetName": {
            "type": "String",
            "defaultValue": "default",
            "metadata": {
                "description": "Delegated Subnet name."
            }
        },
        "anfSubnetAddressPrefix": {
            "type": "String",
            "metadata": {
                "description": "Subnet address range."
            }
        },
        "netappAccountName": {
            "defaultValue": "[concat('anfacc-', uniqueString(resourceGroup().id))]",
            "type": "String",
            "metadata": {
                "description": "Name of Azure NetApp Files (ANF) account. The account name must be unique within the subscription"
            }
        },
        "netAppPoolName": {
            "defaultValue": "[concat('pool-', uniqueString(resourceGroup().id))]",
            "type": "String",
            "metadata": {
                "description": "Name of Capacity Pool in Azure NetApp Files (ANF) account"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2021-06-01",
            "name": "[parameters('virtualNetworkName')]",
            "location": "[parameters('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetAddressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('anfSubnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('anfSubnetAddressPrefix')]",
                            "delegations": [
                                {
                                    "name": "NetAppDelegation",
                                    "properties": {
                                        "serviceName": "Microsoft.NetApp/volumes"
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.NetApp/netAppAccounts",
            "apiVersion": "2021-06-01",
            "name": "[parameters('netAppAccountName')]",
            "location": "[parameters('location')]"
        },
        {
            "type": "Microsoft.NetApp/netAppAccounts/capacityPools",
            "apiVersion": "2021-06-01",
            "name": "[concat(parameters('netAppAccountName'),'/',parameters('netAppPoolName'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.NetApp/netAppAccounts', parameters('netAppAccountName'))]"
            ],
            "properties": {
                "serviceLevel": "Premium",
                "size": "21990232555520",
                "qosType": "Manual"
            }
        }
    ],
    "outputs": {
        "anfNetAppAccountName": {
            "type": "string",
            "value": "[parameters('netAppAccountName')]"
        },
        "capacityPoolName": {
            "type": "string",
            "value": "[parameters('netAppPoolName')]"
        },
        "virtualNetworkName": {
            "type": "string",
            "value": "[parameters('virtualNetworkName')]"
        }
    }
}

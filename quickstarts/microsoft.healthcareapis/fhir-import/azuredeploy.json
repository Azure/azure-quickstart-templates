            "scope": "inner"
          },
          "mode": "Incremental",
          "parameters": {
            "fhirName": {
              "value": "[parameters('fhirName')]"
            },
            "workspaceName": {
              "value": "[parameters('workspaceName')]"
            }
          },
          "template": {

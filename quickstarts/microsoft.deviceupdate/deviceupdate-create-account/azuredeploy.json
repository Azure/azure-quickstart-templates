{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.5.6.12127",
      "templateHash": "7419361467355522021"
    }
  },
  "parameters": {
    "accountName": {
      "type": "string",
      "defaultValue": "[take(format('adu-quickstart-{0}', uniqueString(resourceGroup().id)), 24)]",
      "maxLength": 24,
      "minLength": 3,
      "metadata": {
        "description": "The name of the account. Read more about limits at https://aka.ms/iot-hub-device-update-limits"
      }
    },
    "location": {
      "type": "string",
      "allowedValues": [
        "westus2",
        "northeurope",
        "southeastasia"
      ],
      "metadata": {
        "description": "The location of the account."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.DeviceUpdate/accounts",
      "apiVersion": "2020-03-01-preview",
      "name": "[parameters('accountName')]",
      "location": "[parameters('location')]"
    }
  ]
}
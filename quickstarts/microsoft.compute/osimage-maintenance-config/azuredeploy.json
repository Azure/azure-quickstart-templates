{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for the resources."
            }
        },
        "configNamePrefix": {
            "type": "string",
            "defaultValue": "myConfig",
            "metadata": {
                "description": "Name (prefix) for your maintenance configuration."
            }
        },
        "startDateTime": {
            "type": "string",
            "defaultValue": "[utcNow('u')]",
            "metadata": {
                "description": "The start date for your configuration"
            }
        }
    },
    "variables": {},
    "resources": [
        {
    		"type": "Microsoft.Maintenance/maintenanceConfigurations",
    		"apiVersion": "2022-07-01-preview",
    		"name": "[concat(parameters('configNamePrefix'),copyIndex())]",
    		"location": "[parameters('location')]",
		"properties" : {
    		"maintenanceScope": "OSImage",
    		"maintenanceWindow": {
    		"duration": "5 hours",
    		"expirationDateTime": "",
    		"recurEvery": "day",
    		"startDateTime": "[parameters('startDateTime')]",
    		"timeZone": "Pacific Standard Time"
    		},
    		"visibility": "Public"
		}
	  }
    ]
}

{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "basics": [
            {
                "name": "vmSku",
                "type": "Microsoft.Common.DropDown",
                "label": "Windows Server SKU",
                "defaultValue": "2022-datacenter-azure-edition-core-smalldisk",
                "toolTip": "Windows Server SKU",
                "multiselect": false,
                "constraints": {
                    "allowedValues": [
                        {
                            "label": "Windows Server 2019 Datacenter Server Core",
                            "value": "2019-datacenter-core-g2"
                        },
                        {
                            "label": "Windows Server 2019 Datacenter Server Core (small disk)",
                            "value": "2019-datacenter-core-smalldisk-g2"
                        },
                        {
                            "label": "Windows Server 2022 Datacenter Server Core",
                            "value": "2022-datacenter-core-g2"
                        },
                        {
                            "label": "Windows Server 2022 Datacenter Server Core (small disk)",
                            "value": "2022-datacenter-core-smalldisk-g2"
                        },
                        {
                            "label": "Windows Server 2022 Datacenter: Azure Edition Core",
                            "value": "2022-datacenter-azure-edition-core"
                        },
                        {
                            "label": "Windows Server 2022 Datacenter: Azure Edition Core (small disk)",
                            "value": "2022-datacenter-azure-edition-core-smalldisk"
                        }
                    ],
                    "required": true
                },
                "visible": true
            },
            {
                "name": "vmSection",
                "type": "Microsoft.Common.Section",
                "label": "Customize your VM",
                "elements": [
                    {
                        "name": "vmSize",
                        "type": "Microsoft.Compute.SizeSelector",
                        "label": "Size",
                        "toolTip": "Size of the VM",
                        "recommendedSizes": [
                            "Standard_D2_v4",
                            "Standard_E2_v4",
                            "Standard_D2s_v4",
                            "Standard_E2s_v4",
                            "Standard_D4_v4",
                            "Standard_E4_v4",
                            "Standard_D4s_v4",
                            "Standard_E4s_v4",
                            "Standard_D8_v4",
                            "Standard_E8_v4",
                            "Standard_D8s_v4",
                            "Standard_E8s_v4"
                        ],
                        "options": {
                            "hideDiskTypeFilter": false
                        },
                        "osPlatform": "Windows",
                        "count": 1,
                        "visible": true
                    }
                ],
                "visible": true
            },
            {
                "name": "adminUser",
                "type": "Microsoft.Compute.UserNameTextBox",
                "label": "Admin Username",
                "defaultValue": "",
                "toolTip": "Username of the administrator for the Virtual Machine",
                "constraints": {
                    "required": true,
                    "regex": "^[a-z0-9A-Z]{1,30}$",
                    "validationMessage": "Only alphanumeric characters are allowed, and the value must be 1-30 characters long."
                },
                "osPlatform": "Windows",
                "visible": true
            },
            {
                "name": "publicSshKey",
                "type": "Microsoft.Compute.CredentialsCombo",
                "label": {
                    "authenticationType": "Authentication type",
                    "password": "Password",
                    "confirmPassword": "Confirm password",
                    "sshPublicKey": "SSH public key"
                },
                "toolTip": {
                    "authenticationType": "Authentication type",
                    "password": "Password",
                    "sshPublicKey": "Your SSH public key that is later used to log in to the VM"
                },
                "constraints": {
                    "required": true,
                    "customPasswordRegex": "^(?=.*[A-Za-z])(?=.*\\d)[A-Za-z\\d]{12,}$",
                    "customValidationMessage": "The password must be alphanumeric, contain at least 12 characters, and have at least 1 letter and 1 number."
                },
                "options": {
                    "hideConfirmation": false,
                    "hidePassword": true
                },
                "osPlatform": "Linux",
                "visible": true
            },
            {
                "name": "diskSizeGB",
                "type": "Microsoft.Common.TextBox",
                "label": "Data disk size in GB",
                "defaultValue": "256",
                "toolTip": "Data disk size in GB",
                "constraints": {
                    "required": true,
                    "regex": "^[\\d]{1,5}$",
                    "validationMessage": "Please enter a valid number between 1 and 99999"
                },
                "visible": true
            },
            {
                "name": "diskSku",
                "type": "Microsoft.Common.DropDown",
                "label": "Data disk SKU",
                "defaultValue": "Standard_LRS",
                "toolTip": "Data disk SKU",
                "multiselect": false,
                "constraints": {
                    "allowedValues": [
                        {
                            "label": "Standard HDD",
                            "value": "Standard_LRS"
                        },
                        {
                            "label": "Standard SSD",
                            "value": "StandardSSD_LRS"
                        },
                        {
                            "label": "Premium SSD",
                            "value": "Premium_LRS"
                        }
                    ],
                    "required": true
                },
                "visible": true
            }
        ],
        "steps": [],
        "outputs": {
            "adminUser": "[basics('adminUser')]",
            "publicSshKey": "[basics('publicSshKey').sshPublicKey]",
            "diskSizeGB": "[basics('diskSizeGB')]",
            "diskSku": "[basics('diskSku')]",
            "vmsize": "[basics('vmSection').vmSize]",
            "vmSku": "[basics('vmSku')]",
            "location": "[location()]"
        }
    }
}
{
   "$schema":"https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
   "contentVersion":"1.0.0.0",
   "parameters":{
      "workspaceName":{
         "type":"string",
         "metadata":{
            "description":"Specifies the name of the Azure Machine Learning Workspace which will contain this compute."
         }
      },
      "computeName":{
         "type":"string",
         "metadata":{
            "description":"Specifies the name of the Azure Machine Learning Compute cluster."
         }
      },
      "adlAnalyticsName":{
         "type":"string",
         "metadata":{
            "description":"The name of the datalake analytics account to attach the compute target to."
         }
      },
      "location":{
         "type":"string",
         "defaultValue":"[resourceGroup().location]",
         "metadata":{
            "description":"The location of the Azure Machine Learning Workspace."
         }
      }
   },
   "resources":[
      {
         "type":"Microsoft.MachineLearningServices/workspaces/computes",
         "apiVersion":"2018-11-19",
         "name":"[concat(parameters('workspaceName'), '/', parameters('computeName'))]",
         "location":"[parameters('location')]",
         "properties":{
            "computeType":"DataLakeAnalytics",
            "resourceId":"[resourceId('Microsoft.DataLakeAnalytics/accounts', parameters('adlAnalyticsName'))]"
         }
      }
   ]
}

{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "account_name": {
            "type": "String",
            "defaultValue": "provider_account",
            "metadata": {
                "description": "Name for your data share account"
            }
        },
        "location": {
            "type": "string",
            "allowedValues":[
                "eastus",
                "eastus2",
                "southeastasia",
                "westcentralus",
                "westeurope",
                "westus2",
                "austriliaeast",
                "northeurope",
                "uksouth",
                "usgovvirginia",
                "usgovarizona"
            ],
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for your data share"
            }
        },
        "share_name": {
            "type": "String",
            "defaultValue": "share",
            "metadata": {
                "description": "Name for your data share"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.DataShare/accounts",
            "apiVersion": "2019-11-01",
            "name": "[parameters('account_name')]",
            "location": "[parameters('location')]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {}
        },
        {
            "type": "Microsoft.DataShare/accounts/shares",
            "apiVersion": "2019-11-01",
            "name": "[concat(parameters('account_name'), '/', parameters('share_name'))]",
            "dependsOn": [
                "[resourceId('Microsoft.DataShare/accounts', parameters('account_name'))]"
            ],
            "properties": {
                "shareKind": "CopyBased"
            }
        }
    ]
}

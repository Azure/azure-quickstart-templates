{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "The location for the new Virtual Network."
            }
        },
        "sourceVirtualNetworkName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Virtual Network."
            }
        },
        "sourceVirtualNetworkPrefix": {
            "type": "string",
            "defaultValue": "10.0.0.0/16",
            "metadata": {
                "description": "The address space prefix for the virtual network."
            }
        },
        "sourceVirtualNetworkSubnetName": {
            "type": "string",
            "metadata": {
                "description": "The name of the subnet."
            }
        },
        "sourceVirtualNetworkSubnetPrefix": {
            "type": "string",
            "defaultValue": "10.0.0.0/24",
            "metadata": {
                "description": "The address space prefix for the subnet."
            }
        },
        "remoteVirtualNetworkName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Virtual Network."
            }
        },
        "remoteVirtualNetworkPrefix": {
            "type": "string",
            "defaultValue": "172.0.0.0/16",
            "metadata": {
                "description": "The address space prefix for the virtual network."
            }
        },
        "remoteVirtualNetworkSubnetName": {
            "type": "string",
            "metadata": {
                "description": "The name of the subnet."
            }
        },
        "remoteVirtualNetworkSubnetPrefix": {
            "type": "string",
            "defaultValue": "172.0.0.0/24",
            "metadata": {
                "description": "The address space prefix for the subnet."
            }
        }
    },
    "resources": [
        {
            "name": "[parameters('sourceVirtualNetworkName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[parameters('location')]",
            "apiVersion": "2020-11-01",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('sourceVirtualNetworkPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('sourceVirtualNetworkSubnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('sourceVirtualNetworkSubnetPrefix')]"
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('remoteVirtualNetworkName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[parameters('location')]",
            "apiVersion": "2020-11-01",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('remoteVirtualNetworkPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('remoteVirtualNetworkSubnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('remoteVirtualNetworkSubnetPrefix')]"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "existingSourceVirtualNetworkName": {
            "type": "string",
            "value": "[parameters('sourceVirtualNetworkName')]"
        },
        "existingSourceVirtualNetworkId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks', parameters('sourceVirtualNetworkName'))]"
        },
        "existingRemoteVirtualNetworkName": {
            "type": "string",
            "value": "[parameters('remoteVirtualNetworkName')]"
        },
        "existingRemoteVirtualNetworkId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks', parameters('remoteVirtualNetworkName'))]"
        }
    }
}

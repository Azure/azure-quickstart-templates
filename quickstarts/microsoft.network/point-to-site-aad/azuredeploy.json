{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.4.613.9944",
      "templateHash": "3996397237397391774"
    }
  },
  "parameters": {
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "VNet1",
      "metadata": {
        "description": "Name for the virtual network"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for the resources"
      }
    },
    "frontendSubName": {
      "type": "string",
      "defaultValue": "FrontEnd",
      "metadata": {
        "description": "Name for the frontend subnet"
      }
    },
    "virtualNetworkPrefix": {
      "type": "string",
      "defaultValue": "10.1.0.0/16",
      "metadata": {
        "description": "CIDR block representing the address space of the VNet"
      }
    },
    "frontendSubPrefix": {
      "type": "string",
      "defaultValue": "10.1.0.0/24",
      "metadata": {
        "description": "CIDR block for the front end subnet, subset of VNet address space"
      }
    },
    "gatewaySubPrefix": {
      "type": "string",
      "defaultValue": "10.1.255.0/27",
      "metadata": {
        "description": "CIDR block for the gateway subnet, subset of VNet address space"
      }
    },
    "gatewayName": {
      "type": "string",
      "defaultValue": "VNet1GW",
      "metadata": {
        "description": "Name for the new gateway"
      }
    },
    "gatewayPublicIPName": {
      "type": "string",
      "defaultValue": "VNet1GWIP",
      "metadata": {
        "description": "Name for public IP resource used for the new azure gateway"
      }
    },
    "gatewaySku": {
      "type": "string",
      "defaultValue": "Standard",
      "metadata": {
        "description": "The SKU of the Gateway. This must be either Standard or HighPerformance to work with OpenVPN"
      },
      "allowedValues": ["Standard", "HighPerformance"]
    },
    "vpnType": {
      "type": "string",
      "defaultValue": "RouteBased",
      "metadata": {
        "description": "Route based (Dynamic Gateway) or Policy based (Static Gateway)"
      },
      "allowedValues": ["RouteBased", "PolicyBased"]
    },
    "vpnClientAddressPool": {
      "type": "string",
      "defaultValue": "172.16.0.0/24",
      "metadata": {
        "description": "The IP address range from which VPN clients will receive an IP address when connected. Range specified must not overlap with on-premise network"
      }
    },
    "tenantId": {
      "type": "string",
      "metadata": {
        "description": "TenantID for the Azure AD tenant"
      }
    },
    "cloud": {
      "type": "string",
      "defaultValue": "Public",
      "metadata": {
        "description": "The cloud your tenant is in"
      },
      "allowedValues": ["Public", "Government", "Germany", "China"]
    }
  },
  "functions": [],
  "variables": {
    "audienceMap": {
      "Public": "41b23e61-6c1e-4545-b367-cd054e0ed4b4",
      "Government": "51bb15d4-3a4f-4ebf-9dca-40096fe32426",
      "Germany": "538ee9e6-310a-468d-afef-ea97365856a9",
      "China": "49f817b6-84ae-4cc0-928c-73f27289b3aa"
    },
    "audience": "[variables('audienceMap')[parameters('cloud')]]",
    "tenant": "[format('{0}{1}/', environment().authentication.loginEndpoint, parameters('tenantId'))]",
    "issuer": "[format('https://sts.windows.net/{0}/', parameters('tenantId'))]",
    "gatewaySubnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), 'GatewaySubnet')]",
    "publicIPAddressRef": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('gatewayPublicIPName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2021-02-01",
      "name": "[parameters('virtualNetworkName')]",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": ["[parameters('virtualNetworkPrefix')]"]
        },
        "subnets": [
          {
            "name": "[parameters('frontendSubName')]",
            "properties": {
              "addressPrefix": "[parameters('frontendSubPrefix')]"
            }
          },
          {
            "name": "GatewaySubnet",
            "properties": {
              "addressPrefix": "[parameters('gatewaySubPrefix')]"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworkGateways",
      "apiVersion": "2021-02-01",
      "name": "[parameters('gatewayName')]",
      "location": "[parameters('location')]",
      "properties": {
        "ipConfigurations": [
          {
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('gatewaySubnetRef')]"
              },
              "publicIPAddress": {
                "id": "[variables('publicIPAddressRef')]"
              }
            },
            "name": "vnetGatewayConfig"
          }
        ],
        "sku": {
          "name": "[parameters('gatewaySku')]",
          "tier": "[parameters('gatewaySku')]"
        },
        "gatewayType": "Vpn",
        "vpnType": "[parameters('vpnType')]",
        "vpnClientConfiguration": {
          "vpnClientAddressPool": {
            "addressPrefixes": ["[parameters('vpnClientAddressPool')]"]
          },
          "vpnClientProtocols": ["OpenVPN"],
          "vpnAuthenticationTypes": ["AAD"],
          "aadTenant": "[variables('tenant')]",
          "aadAudience": "[variables('audience')]",
          "aadIssuer": "[variables('issuer')]"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses', parameters('gatewayPublicIPName'))]",
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]"
      ]
    },
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2021-02-01",
      "name": "[parameters('gatewayPublicIPName')]",
      "location": "[parameters('location')]",
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
      }
    }
  ]
}

{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {        
        "wafPolicyName": {
            "value": "GEN-UNIQUE"
        },
        "httpRule1": {
            "value": {
                "name": "Rule1",
                "priority": 1,
                "enabledState": "Enabled",
                "ruleType": "MatchRule",
                "matchConditions": [
                    {
                        "matchVariable": "RequestHeader",
                        "operator": "Contains",
                        "selector": "User-Agent",
                        "matchValue": [
                            "Chrome/69.0.3497"
                        ]
                    }
                ],
                "action": "Block"
            }
        },
        "httpRule2": {
            "value": {
                "name": "Rule2",
                "priority": 2,
                "enabledState": "Enabled",
                "ruleType": "MatchRule",
                "matchConditions": [
                    {
                        "matchVariable": "QueryString",
                        "operator": "Contains",
                        "selector": "",
                        "matchValue": [
                            "IamAbot"
                        ]
                    }
                ],
                "action": "Block"
            }
        }  
    }
}

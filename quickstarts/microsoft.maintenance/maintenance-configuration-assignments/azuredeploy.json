{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "assignmentName": {
        "type": "string",
        "metadata": {
          "description": "Name of the Assignment"
        }
      },
      "vmName": {
        "type": "string",
        "metadata": {
          "description": "Name of the Virtual Machine"
        }
      },
      "maintenanceConfigurationName": {
        "type": "string",
        "metadata": {
          "description": "Name of the Maintenance Configuration"
        }
      },
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]",
        "metadata": {
          "description": "Location for all resources."
        }
      }
    },
    "resources": [
        {
            "type": "Microsoft.Maintenance/configurationAssignments",
            "apiVersion": "2023-04-01",
            "name": "[parameters('assignmentName')]",
            "location": "[parameters('location')]",
            "scope": "[concat('Microsoft.Compute/virtualMachines/', parameters('vmName'))]",
            "properties": {
              "maintenanceConfigurationId": "[concat(resourceGroup().Id, '/providers/Microsoft.Maintenance/maintenanceConfigurations/', parameters('maintenanceConfigurationName'))]"
            }
        }
    ]
  }
  
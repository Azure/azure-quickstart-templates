{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageAccountNamePrefix": {
      "type": "string",
      "maxLength": 11,
      "metadata": {
        "description": "Name prefix of the Storage Account"
      }
    },
    "location": {
      "type": "string",
      "allowedValues": [
        "Central US",
        "West US",
        "East US",
        "East US 2",
        "North Europe",
        "West Europe",
        "Southeast Asia",
        "East China",
        "Japan West",
        "Japan East",
        "Australia East"
      ],
      "metadata": {
        "description": "Location of Premium storage account"
      }
    }
  },
  "variables": {
    "storageAccountName": "[replace(replace(tolower(concat(parameters('storageAccountNamePrefix'), uniquestring(resourceGroup().id))), '-',''),'.','')]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('storageAccountName')]",
      "apiVersion": "2015-06-15",
      "location": "[parameters('location')]",
      "properties": {
        "accountType": "Premium_LRS"
      }
    }
  ]
}

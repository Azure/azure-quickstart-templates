{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": {
      "defaultValue": "vNetEast",
      "type": "String",
      "metadata": {
        "description": "VNet name"
      }
    },
    "vnetAddressPrefix": {
      "defaultValue": "10.1.0.0/16",
      "type": "String",
      "metadata": {
        "description": "Address prefix"
      }
    },
    "subnet1Prefix": {
      "defaultValue": "10.1.1.0/24",
      "type": "String",
      "metadata": {
        "description": "Subnet 1 Prefix"
      }
    },
    "subnet1Name": {
      "defaultValue": "Subnet-A",
      "type": "String",
      "metadata": {
        "description": "Subnet 1 Name"
      }
    },
    "networkSecurityGroupName": {
      "defaultValue": "NSGEast",
      "type": "String",
      "metadata": {
        "description": "Network Security Group Name"
      }
    },
    "RootDC1Name": {
      "type": "string",
      "metadata": {
        "description": "The computer name of the first DC of the root domain."
      },
      "defaultValue": "CCCDCSRV101",
      "minlength": 2,
      "maxlength": 15
    },
    "RootDC1IPAddress": {
      "type": "string",
      "metadata": {
        "description": "The IP address of the first DC of the root domain."
      },
      "defaultValue": "10.1.0.4"
    },
    "RootDC2Name": {
      "type": "string",
      "metadata": {
        "description": "The computer name of the second DC of the root domain."
      },
      "defaultValue": "CCCDCSRV201",
      "minlength": 2,
      "maxlength": 15
    },
    "RootDC2IPAddress": {
      "type": "string",
      "metadata": {
        "description": "The IP address of the second DC of the root domain."
      },
      "defaultValue": "10.1.0.5"
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "The name of the Administrator of the new VM and Domain"
      },
      "defaultValue": "sysadmin"
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The password for the Administrator account of the new VM and Domain"
      }
    },
    "domainName": {
      "type": "string",
      "metadata": {
        "description": "The FQDN of the AD Domain created "
      },
      "defaultValue": "contoso.net"
    },
    "dnsPrefix": {
      "type": "string",
      "metadata": {
        "description": "The DNS prefix for the public IP address used by the Load Balancer"
      },
      "defaultValue": "contoso.net"
    },
    "pdcRDPPort": {
      "type": "int",
      "metadata": {
        "description": "The public RDP port for the PDC VM"
      },
      "defaultValue": 3389
    },
    "bdcRDPPort": {
      "type": "int",
      "metadata": {
        "description": "The public RDP port for the BDC VM"
      },
      "defaultValue": 13389
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "The location of resources, such as templates and DSC modules, that the template depends on"
      },
      "defaultValue": "https://raw.githubusercontent.com/Azure/azure-quickstart-templates/master/active-directory-new-domain-ha-2-dc"
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "metadata": {
        "description": "Auto-generated token to access _artifactsLocation"
      },
      "defaultValue": ""
    },
      "storagePrivateType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "AVsetName": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "avset"

    },
    "vmDC1Name": {
      "type": "string",
      "minLength": 1
    },
    "vmDC1AdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "vmDC1AdminPassword": {
      "type": "securestring"
    },
    "vmDC1WindowsOSVersion": {
      "type": "string",
      "defaultValue": "2016-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "2016-Datacenter",
        "Windows-Server-Technical-Preview"
      ]
    },
    "nicPublicDnsName": {
      "type": "string",
      "minLength": 1
    }
  },
  "variables": {
     "apiVersion": "2015-06-15",
     "storagePrivateName": "[concat('stor', uniqueString(resourceGroup().id))]",
    "vmDC1ImagePublisher": "MicrosoftWindowsServer",
    "vmDC1ImageOffer": "WindowsServer",
    "vmDC1OSDiskName": "vmDC1OSDisk",
    "vmDC1VmSize": "Standard_D2_v2",
    "vmDC1VnetID": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
    "vmDC1SubnetRef": "[concat(variables('vmDC1VnetID'), '/subnets/', parameters('subnet1Name'))]",
    "vmDC1StorageAccountContainerName": "vhds",
    "vmDC1NicName": "[concat(parameters('vmDC1Name'), 'NetworkInterface')]",
    "nicPublicName": "nicPublic"
  },
  "resources": [
    {
      "name": "[variables('storagePrivateName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-01-01",
      "sku": {
        "name": "[parameters('storagePrivateType')]"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "storagePrivate"
      },
      "kind": "Storage"
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[parameters('networkSecurityGroupName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "securityRules": [
          {
            "name": "Allow_Any_RDP",
            "properties": {
              "description": "Allow_Any_RDP",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "3389",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 200,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('vnetName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/networkSecurityGroups/', parameters('networkSecurityGroupName'))]"
      ],
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('vnetAddressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[parameters('subnet1Name')]",
            "properties": {
              "addressPrefix": "[parameters('subnet1Prefix')]",
              "networkSecurityGroup": {
                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroupName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('AVsetName')]",
      "type": "Microsoft.Compute/availabilitySets",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [ ],
      "tags": {
        "displayName": "AVset"
      },
      "properties": {
        "platformUpdateDomainCount": 1,
        "platformFaultDomainCount": 1
      }
    },
    {
      "name": "[variables('vmDC1NicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]",
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('nicPublicName'))]"
      ],
      "tags": {
        "displayName": "vmDC1Nic"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('vmDC1SubnetRef')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('nicPublicName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[parameters('vmDC1Name')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storagePrivateName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', variables('vmDC1NicName'))]"
      ],
      "tags": {
        "displayName": "vmDC1"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('vmDC1VmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('vmDC1Name')]",
          "adminUsername": "[parameters('vmDC1AdminUsername')]",
          "adminPassword": "[parameters('vmDC1AdminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('vmDC1ImagePublisher')]",
            "offer": "[variables('vmDC1ImageOffer')]",
            "sku": "[parameters('vmDC1WindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "vmDC1OSDisk",
            "vhd": {
              "uri": "[concat(reference(resourceId('Microsoft.Storage/storageAccounts', variables('storagePrivateName')), '2016-01-01').primaryEndpoints.blob, variables('vmDC1StorageAccountContainerName'), '/', variables('vmDC1OSDiskName'), '.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('vmDC1NicName'))]"
            }
          ]
        }
      }
    },
    {
      "name": "[variables('nicPublicName')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [ ],
      "tags": {
        "displayName": "nicPublic"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[parameters('nicPublicDnsName')]"
        }
      }
    }

  ]
}

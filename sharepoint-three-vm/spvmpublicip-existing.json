{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "sppublicIPAddressName": {
      "type" : "string"
    },
    "publicIPAddressType" : {
      "type" : "string",
      "defaultValue" : ""
    },
    "spDNSPrefix" : {
      "type" : "string",
      "defaultValue" : ""
    },
    "spLBName" : {
      "type" : "string"
    },
    "LBFE" :{
      "type" : "string"
    },
    "LBBE" : {
      "type" : "string"
    },
    "RDPNAT" : {
      "type" : "string"
    },
    "splbFEConfigID" : {
      "type" : "string"
    },
    "spWebNAT" : {
      "type" : "string"
    },
    "spPublicIPRGName" : {
      "type" : "string"
    }
  },
  "resources": [
    {
      "apiVersion": "2015-05-01-preview",
      "name": "[parameters('spLBName')]",
      "type": "Microsoft.Network/loadBalancers",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses',parameters('sppublicIPAddressName'))]"
      ],
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "[parameters('LBFE')]",
            "properties": {
              "publicIPAddress": {
                "id": "[resourceId(parameters('spPublicIPRGName'),'Microsoft.Network/publicIPAddresses',parameters('sppublicIPAddressName'))]"
              }
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "[parameters('LBBE')]"
          }
        ],
        "inboundNatRules": [
          {
            "name": "[parameters('RDPNAT')]",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[parameters('splbFEConfigID')]"
              },
              "protocol": "tcp",
              "frontendPort": 3389,
              "backendPort": 3389,
              "enableFloatingIP": false
            }
          },
          {
            "name": "[parameters('spWebNAT')]",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[parameters('splbFEConfigID')]"
              },
              "protocol": "tcp",
              "frontendPort": 80,
              "backendPort": 80,
              "enableFloatingIP": false
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "splbID": {
      "value": "[resourceId('Microsoft.Network/loadBalancers',parameters('spLBName'))]",
      "type": "string"
    }
  }
}

{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "principalIds": {
      "type": "array",
      "metadata": {
        "description": "Input array for object IDs associated with users, groups, or applications."
      }
    },
    "mapsAccountName": {
      "type": "string",
      "metadata": {
        "description": "the name of the Azure Map Account"
      }
    },
    "guids": {
      "type": "array",
      "metadata": {
        "description": "Input array for new GUIDs associated with assigning built in role types"
      }
    },
    "principalTypes": {
      "type": "array",
      "metadata": {
        "description": "Input array for principal types associated with the assiged principal ids"
      }
    },
    "count": {
      "type": "int",
      "metadata": {
        "description": "Size of array"
      }
    }
  },
  "variables": {
    "Azure Maps Data Reader": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', '423170ca-a8f6-4b0f-8487-9e4eb8f49bfa')]"
  },
  "resources": [
    {
      "apiVersion": "2018-05-01",
      "name": "[parameters('mapsAccountName')]",
      "location": "global",
      "type": "Microsoft.Maps/accounts",
      "sku": {
        "name": "S0"
      }
    },
    {
      "apiVersion": "2018-09-01-preview",
      "name": "[concat(parameters('mapsAccountName'), '/Microsoft.Authorization/', parameters('guids')[copyIndex()])]",
      "type": "Microsoft.Maps/accounts/providers/roleAssignments",
      "dependsOn": [
        "[parameters('mapsAccountName')]"
      ],
      "copy": {
        "name": "anyname",
        "count": "[parameters('count')]"
      },
      "properties": {
        "roleDefinitionId": "[variables('Azure Maps Data Reader')]",
        "principalId": "[parameters('principalIds')[copyIndex()]]",
        "principalType": "[parameters('principalTypes')[copyIndex()]]"
      }
    }
  ]
}

{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "webPrefix": {
      "type": "string"
    },
    "azureRegion": {
      "type": "string"
    },
    "adminUserName": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "webAvSetId": {
      "type": "string"
    },
    "webNicIds": {
      "type": "array"
    },
    "saName": {
      "type": "string"
    },
    "domainName": {
      "type": "string"
    },
    "domainJoinOptions": {
      "type": "string"
    }
  },
  "variables": {
    // HardwareProfile
    // TASK-ITEM: Generalize variable for count function
    "web01name": "[concat(parameters('webPrefix'),1)]",
    "webVmSize": "Standard_A1_v2",
    "webServerInstances": 2,
    // StorageProfile.ImageReference
    "imagePublisher": "MicrosoftWindowsServer",
    "imageOffer": "WindowsServer",
    // "imageSku": "Use the expression below to obtain the list of available Skus"
    // Get-AzureRmVmImageSku -Location eastus2 -Publisher "MicrosoftWindowsServer" -Offer "WindowsServer" | Select-Object -Property Skus
    "imageSku": "2016-Datacenter-Server-Core-smalldisk",
    // StorageProfile.osDisk
    "diskNameOs": "[toLower(concat(variables('web01name'),'-syst'))]",
    "saType": "Standard_LRS",
    // StorageProfile.dataDisk
    "diskNameData": "[toLower(concat(variables('web01name'),'-data'))]",
    // DiagnositcsProfile
    // TASK-ITEM: Remove saUrlSuffix after test
    "saUrlSuffix": ".blob.core.windows.net",
    // TASK-ITEM: Best Practice: public endpoint
    "diagStorageUri": "[concat('http://',parameters('saName'),variables('saUrlSuffix'))]"
  },
  "resources": [
    {
      "comments": "15.21.00.createWebServers",
      "name": "[concat(parameters('webPrefix'), copyIndex(1))]",
      "type": "Microsoft.Compute/virtualMachines",
      "copy": {
        "name": "webServersCopy",
        "count": "[variables('webServerInstances')]"
      },
      "apiVersion": "2017-03-30",
      "location": "[parameters('azureRegion')]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('webVmSize')]"
        },
        "osProfile": {
          "computerName": "[concat(parameters('webPrefix'), copyIndex(1))]",
          "adminUsername": "[parameters('adminUserName')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('imagePublisher')]",
            "offer": "[variables('imageOffer')]",
            "sku": "[variables('imageSku')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(parameters('webPrefix'), copyIndex(1), '-syst')]",
            "caching": "ReadWrite",
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "[variables('saType')]"
            }
          },
          "dataDisks": [
            {
              "lun": 0,
              "name": "[concat(parameters('webPrefix'), copyIndex(1), '-data')]",
              "caching": "None",
              "createOption": "Empty",
              "diskSizeGB": 32,
              "managedDisk": {
                "storageAccountType": "[variables('saType')]"
              }
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[parameters('webNicIds')[copyIndex()]]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[variables('diagStorageUri')]"
          }
        },
        "availabilitySet": {
          "id": "[parameters('webAvSetId')]"
        }
      }
    },
    {
      "comments": "15.21.01.joinDomainWebServers",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('webPrefix'),copyIndex(1),'/joindomain')]",
      "copy": {
        "name": "webServersDomainJoinCopy",
        "count": "[variables('webServerInstances')]"
      },
      "apiVersion": "2017-12-01",
      "location": "[parameters('azureRegion')]",
      "tags": {
        "displayName": "JsonADDomainExtension"
      },
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/',parameters('webPrefix'),copyIndex(1))]"
      ],
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": "true",
        "settings": {
          "Name": "[parameters('domainName')]",
          "User": "[concat(parameters('adminUserName'),'@',parameters('domainName'))]",
          "Restart": "true",
          "Options": "[parameters('domainJoinOptions')]"
        },
        "protectedSettings": {
          "Password": "[parameters('adminPassword')]"
        }
      }
    }
  ]
}

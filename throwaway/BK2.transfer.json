{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "uniqueBit": {
      "type": "string"
    },
    "imageLocation": {
      "type": "string"
    },
    "imageKey": {
      "type": "string"
    },
    "transferSA": {
      "type": "string"
    },
    "transferScriptURI": {
      "type": "string"
    }
  },
  "resources": [
    {
        "apiVersion": "2015-05-01-preview",
        "type": "Microsoft.Compute/virtualMachines/extensions",
        "name": "[concat('transfer', parameters('uniqueBit'), 'vm/tf')]",
        "location": "[parameters('location')]",
        "properties": {
            "publisher": "Microsoft.OSTCExtensions",
            "type": "CustomScriptForLinux",
            "typeHandlerVersion": "1.2",
            "settings": {
                "fileUris": [
                    "[parameters('transferScriptURI')]"
                ],
                "commandToExecute": "[concat('bash transfer.sh ', parameters('imageLocation'),' ', parameters('imageKey'),' ',parameters('transferSA'),' ',listKeys(concat('Microsoft.Storage/storageAccounts/', parameters('transferSA')), '2015-05-01-preview').key1)]"
            }
        }
    },
  ]
}




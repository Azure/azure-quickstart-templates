{
	"$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"ledgerName": {
			"type": "string",
			"metadata": {
				"description": "Name of the ledger to be created. Must be globally unique."
			}
		},
		"principalId": {
			"type": "string",
			"metadata": {
				"description": "Oid of the user"
			},
			"minLength": 18,
			"maxLength": 48
		},
		"tenantId": {
			"type": "string",
			"metadata": {
				"description": "Tenant ID of the user"
			},
			"minLength": 18,
			"maxLength": 48
		},
		"ledgerStorageAccount": {
			"type": "string",
			"metadata": {
				"description": "Unique DNS Name for the Storage Account where the ledger will be placed."
			}
		}
	},
	"functions": [],
	"variables": {},
	"resources": [{
		"name": "[parameters('ledgerName')]",
		"type": "Microsoft.ConfidentialLedger/ledgers",
		"apiVersion": "2020-12-01-preview",
		"location": "East US",
		"properties": {
			"ledgerType": "Public",
			"ledgerStorageAccount": "[parameters('ledgerStorageAccount')]",
			"aadBasedSecurityPrincipals": [{
				"principalId": "[parameters('principalId')]",
				"ledgerRoleName": "Administrator",
				"tenantId": "[parameters('tenantId')]"
			}]
		}
	}],
	"outputs": {}
}
{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "sharedKey": {
      "type": "string",
      "metadata": {
        "description": "Shared key for the VNET connection."
      }
    },
    "firstVnetName": {
      "type": "string",
      "metadata": {
        "description": "Name of the first VNET."
      }
    },
    "secondVnetName": {
      "type": "string",
      "metadata": {
        "description": "Name of the second VNET."
      }
    },
    "firstVnetLocation": {
      "type": "string",
      "metadata": {
        "description": "Location of the first VNET."
      }
    },
    "secondVnetLocation": {
      "type": "string",
      "metadata": {
        "description": "Location of the second VNET."
      }
    },
    "gatewaySubnetName": {
      "type": "string",
      "defaultValue": "GatewaySubnet",
      "metadata": {
        "description": "Name of the gateway subnet."
      }
    }
  },
  "variables": {
    "firstPipName": "[concat(parameters('firstVnetName'),'pip')]",
    "secondPipName": "[concat(parameters('secondVnetName'),'pip')]",
    "firstGatewayName": "[concat(parameters('firstVnetName'),'gw')]",
    "secondGatewayName": "[concat(parameters('secondVnetName'),'gw')]"
  },

  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2020-11-01",
      "name": "[parameters('firstVnetName')]",
      "location": "[parameters('firstVnetLocation')]",
      "properties": {
          "addressSpace": {
              "addressPrefixes": [
                  "10.1.0.0/16"
              ]
          },
          "subnets": [
              {
                  "name": "[concat(parameters('firstVnetName'),'subnet')]",
                  "properties": {
                      "addressPrefix": "10.1.0.0/24",
                      "delegations": [],
                      "privateEndpointNetworkPolicies": "Enabled",
                      "privateLinkServiceNetworkPolicies": "Enabled"
                  }
              },
              {
                  "name": "[parameters('gatewaySubnetName')]",
                  "properties": {
                      "addressPrefix": "10.1.1.0/24",
                      "delegations": [],
                      "privateEndpointNetworkPolicies": "Enabled",
                      "privateLinkServiceNetworkPolicies": "Enabled"
                  }
              }
          ],
          "virtualNetworkPeerings": [],
          "enableDdosProtection": false
      }
  },
  {
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2020-11-01",
      "name": "[parameters('secondVnetName')]",
      "location": "[parameters('secondVnetLocation')]",
      "properties": {
          "addressSpace": {
              "addressPrefixes": [
                  "10.0.0.0/16"
              ]
          },
          "subnets": [
              {
                  "name": "[concat(parameters('secondVnetName'),'subnet')]",
                  "properties": {
                      "addressPrefix": "10.0.0.0/24",
                      "delegations": [],
                      "privateEndpointNetworkPolicies": "Enabled",
                      "privateLinkServiceNetworkPolicies": "Enabled"
                  }
              },
              {
                  "name": "[parameters('gatewaySubnetName')]",
                  "properties": {
                      "addressPrefix": "10.0.1.0/24",
                      "delegations": [],
                      "privateEndpointNetworkPolicies": "Enabled",
                      "privateLinkServiceNetworkPolicies": "Enabled"
                  }
              }
          ],
          "virtualNetworkPeerings": [],
          "enableDdosProtection": false
      }
    },
    {
       "type": "Microsoft.Network/publicIPAddresses",
       "apiVersion": "2020-11-01",
       "name": "[variables('firstPipName')]",
       "location": "[parameters('firstVnetLocation')]",
       "properties": {
           "publicIPAllocationMethod": "Dynamic"
       }
  },
  {
       "type": "Microsoft.Network/publicIPAddresses",
       "apiVersion": "2020-11-01",
       "name": "[variables('secondPipName')]",
       "location": "[parameters('secondVnetLocation')]",
       "properties": {
           "publicIPAllocationMethod": "Dynamic"
       }
  },
  {
      "type": "Microsoft.Network/virtualNetworkGateways",
      "apiVersion": "2020-11-01",
      "name": "[variables('firstGatewayName')]",
      "location": "[parameters('firstVnetLocation')]",
      "properties": {
          "enablePrivateIpAddress": false,
          "ipConfigurations": [
              {
                  "name": "default",
                  "properties": {
                      "privateIPAllocationMethod": "Dynamic",
                      "publicIPAddress": {
                          "id": "[resourceId('Microsoft.Network/publicIPAddresses/', variables('firstPipName'))]"
                      },
                      "subnet": {
                          "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('firstVnetName'), parameters('gatewaySubnetName'))]"
                      }
                  }
              }
          ],
          "gatewayType": "Vpn",
          "vpnType": "RouteBased",
          "enableBgp": false,
          "activeActive": false,
          "bgpSettings": {
              "asn": 65515,
              "bgpPeeringAddress": "10.1.1.254",
              "peerWeight": 0,
              "bgpPeeringAddresses": [
                  {
                      "ipconfigurationId": "[concat(resourceId('Microsoft.Network/virtualNetworkGateways/', variables('firstGatewayName')), '/ipConfigurations/default')]",
                      "customBgpIpAddresses": []
                  }
              ]
          },
          "vpnGatewayGeneration": "Generation2"
      }
  },
  {
      "type": "Microsoft.Network/virtualNetworkGateways",
      "apiVersion": "2020-11-01",
      "name": "[variables('secondGatewayName')]",
      "location": "[parameters('secondVnetLocation')]",
      "properties": {
          "enablePrivateIpAddress": false,
          "ipConfigurations": [
              {
                  "name": "default",
                  "properties": {
                      "privateIPAllocationMethod": "Dynamic",
                      "publicIPAddress": {
                          "id": "[resourceId('Microsoft.Network/publicIPAddresses/', variables('secondPipName'))]"
                      },
                      "subnet": {
                          "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('secondVnetName'), parameters('gatewaySubnetName'))]"
                      }
                  }
              }
          ],
          "gatewayType": "Vpn",
          "vpnType": "RouteBased",
          "enableBgp": false,
          "activeActive": false,
          "bgpSettings": {
              "asn": 65515,
              "bgpPeeringAddress": "10.0.1.254",
              "peerWeight": 0,
              "bgpPeeringAddresses": [
                  {
                      "ipconfigurationId": "[concat(resourceId('Microsoft.Network/virtualNetworkGateways', variables('secondGatewayName')), '/ipConfigurations/default')]",
                      "customBgpIpAddresses": []
                  }
              ]
          },
          "vpnGatewayGeneration": "Generation2"
      }
  },
  {
            "type": "Microsoft.Network/connections",
            "apiVersion": "2020-11-01",
            "name": "connection",
            "location": "[parameters('firstVnetLocation')]",
            "properties": {
                "virtualNetworkGateway1": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworkGateways', variables('firstGatewayName'))]"
                },
                "virtualNetworkGateway2": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworkGateways', variables('secondGatewayName'))]"
                },
                "connectionType": "Vnet2Vnet",
                "connectionProtocol": "IKEv2",
                "routingWeight": 0,
                "sharedKey": "[parameters('sharedKey')]",
                "enableBgp": false,
                "useLocalAzureIpAddress": false,
                "usePolicyBasedTrafficSelectors": false,
                "ipsecPolicies": [],
                "trafficSelectorPolicies": [],
                "expressRouteGatewayBypass": false,
                "dpdTimeoutSeconds": 45,
                "connectionMode": "Default"
            }
        }
    ]
}
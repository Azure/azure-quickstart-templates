{
  "$schema"       : "https://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters"    : {
    "_artifactsLocation": {
      "type": "string"
    },
    "_artifactsLocationSasToken": {
      "type": "string"
    },
    "automationAccountName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "safeModePassword": {
      "type": "securestring"
    },
    "compileName": {
      "type"        : "string",
      "defaultValue": "[newGuid() ]"
    }
  },
  "variables": {
    "dscConfigurations": {
      "DSCFromGPO": {
        "name"       : "DSCFromGPO",
        "description": "minimum viable configuration for Microsoft Security Policies",
        "script"     : "dscConfigurations/DSCFromGPO.ps1"
      }
    },
    "dscResources": {
      "AuditPolicyDSC": {
        "name": "AuditPolicyDSC",
        "url" : "https://devopsgallerystorage.blob.core.windows.net:443/packages/auditpolicydsc.1.4.0.nupkg"
      },
      "SecurityPolicyDSC": {
        "name": "SecurityPolicyDSC",
        "url" : "https://devopsgallerystorage.blob.core.windows.net:443/packages/securitypolicydsc.2.9.0.nupkg"
      }
    }
  },
  "resources": [
    {
      "name"      : "[parameters('automationAccountName')]",
      "type"      : "Microsoft.Automation/automationAccounts",
      "apiVersion": "2015-10-31",
      "location"  : "[parameters('location')]",
      "comments"  : "Automation account",
      "properties": {
        "sku": {
          "name": "Free"
        }
      },
      "resources": [
        {
          "name"      : "[variables('dscResources').SecurityPolicyDSC.name]",
          "type"      : "modules",
          "apiVersion": "2015-10-31",
          "location"  : "[parameters('location')]",
          "dependsOn" : [
            "[reference(concat('Microsoft.Automation/automationAccounts', parameter('automationAccountName')))]"
          ],
          "properties": {

            "contentLink": {
              "uri": "[variables('dscResources').SecurityPolicyDSC.url]"
            }
          }
        },
        {
          "name"      : "[variables('dscResources').AuditPolicyDSC.name]",
          "type"      : "modules",
          "apiVersion": "2015-10-31",
          "location"  : "[parameters('location')]",
          "dependsOn" : [
            "[reference(concat('Microsoft.Automation/automationAccounts', parameter('automationAccountName')))]",
            "[variables('dscResources').SecurityPolicyDSC.name]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[variables('dscResources').AuditPolicyDSC.url]"
            }
          }

        },
        {
          "name"      : "[variables('dscConfigurations').DSCFromGPO.name]",
          "type"      : "configurations",
          "apiVersion": "2015-10-31",
          "location"  : "[parameters('location')]",
          "dependsOn" : [
            "[reference(concat('Microsoft.Automation/automationAccounts', parameter('automationAccountName')))]",
            "[variables('dscResources').SecurityPolicyDSC.name]",
            "[variables('dscResources').AuditPolicyDSC.name]"
          ],
          "properties": {
            "state"    : "Published",
            "overwrite": "true",
            "source"   : {
              "type" : "uri",
              "value": "[concat(parameters('_artifactsLocation'), variables('dscConfigurations').DSCFromGPO.script, parameters('_artifactsLocationSasToken'))]"
            }
          }
        },
        {
          "name"      : "[parameters('compileName')]",
          "type"      : "compilationjobs",
          "apiVersion": "2015-10-31",
          "location"  : "[parameters('location')]",
          "tags"      : {},
          "dependsOn" : [
            "[parameters('automationAccountName')]",
            "[variables('dscConfigurations').DSCFromGPO.name]"
          ],
          "properties": {
            "configuration": {
              "name": "[variables('dscConfigurations').DSCFromGPO.name]"
            }
          }
        }
      ]
    }
  ],
  "outputs": {
    "registrationUrl": {
       "type" : "string",
       "value": "[reference(concat('Microsoft.Automation/automationAccounts/', parameters('automationAccountName'))).registrationUrl]"
    },
   "registrationKey": {
     "type" : "string",
     "value": "[listKeys(resourceId('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName')), '2018-01-15').Keys[0].value]"
   }
  }
}

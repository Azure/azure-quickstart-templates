{
  "$schema"       : "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters"    : {
    "_artifactsLocation": {
      "type": "string"
    },
    "_artifactsLocationSasToken": {
      "type": "string"
    },
    "automationAccountName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "safeModePassword": {
      "type": "securestring"
    },
    "compileName": {
      "type"        : "string",
      "defaultValue": "[guid(resourceGroup().id, deployment().name)]"
    }
  },
  "variables": {
    "dscConfigurations": {
      "DSCFromGPO": {
        "name"       : "DSCFromGPO",
        "description": "minimum viable configuration for Microsoft Security Policies",
        "script"     : "dscConfigurations/DSCFromGPO.ps1"
      }
    },
    "dscResources": {
      "AuditPolicyDSC": {
        "name": "AuditPolicyDSC",
        "url" : "https://www.powershellgallery.com/api/v2/packages/AuditPolicyDsc/1.4.0.0"
      },
      "SecurityPolicyDSC": {
        "name": "SecurityPolicyDSC",
        "url" : "https://www.powershellgallery.com/api/v2/packages/SecurityPolicyDSC/2.9.0.0"
      }
    }
  },
  "resources": [
    {
      "name"      : "[parameters('automationAccountName')]",
      "type"      : "Microsoft.Automation/automationAccounts",
      "apiVersion": "2015-10-31",
      "location"  : "[parameters('location')]",
      "comments"  : "Automation account for Log Analytics",
      "properties": {
        "sku": {
          "name": "Free"
        }
      },
      "resources": [
        {
          "name"      : "[variables('dscResources').SecurityPolicyDSC.name]",
          "type"      : "modules",
          "apiVersion": "2015-10-31",
          "location"  : "[parameters('location')]",
          "dependsOn" : [
            "[parameters('AutomationAccountName')]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[variables('dscResources').SecurityPolicyDSC.url]"
            }
          }
        },
        {
          "name"      : "[variables('dscResources').AuditPolicyDSC.name]",
          "type"      : "modules",
          "apiVersion": "2015-10-31",
          "location"  : "[parameters('location')]",
          "dependsOn" : [
            "[parameters('AutomationAccountName')]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[variables('dscResources').AuditPolicyDSC.url]"
            }
          }
        },
        {
          "name"      : "domainCredential",
          "type"      : "credentials",
          "apiVersion": "2015-10-31",
          "location"  : "[parameters('location')]",
          "dependsOn" : [
            "[parameters('AutomationAccountName')]"
          ],
          "properties": {
            "userName": "[parameters('adminUsername')]",
            "password": "[parameters('adminPassword')]"
          }
        },
        {
          "name"      : "safeModeCredential",
          "type"      : "credentials",
          "apiVersion": "2015-10-31",
          "location"  : "[parameters('location')]",
          "dependsOn" : [
            "[parameters('AutomationAccountName')]"
          ],
          "properties": {
            "userName": "[parameters('adminUsername')]",
            "password": "[parameters('safeModePassword')]"
          }
        },
        {
          "name"      : "[variables('dscConfigurations').DSCFromGPO.name]",
          "type"      : "configurations",
          "apiVersion": "2015-10-31",
          "location"  : "[parameters('location')]",
          "dependsOn" : [
            "[parameters('AutomationAccountName')]",
            "[variables('dscResources').SecurityPolicyDSC.name]",
            "[variables('dscResources').AuditPolicyDSC.name]"
          ],
          "properties": {
            "state"    : "Published",
            "overwrite": "true",
            "source"   : {
              "type" : "uri",
              "value": "[concat(parameters('_artifactsLocation'), variables('dscConfigurations').DSCFromGPO.script, parameters('_artifactsLocationSasToken'))]"
            }
          }
        },
        {
          "name"      : "[parameters('compileName')]",
          "type"      : "compilationjobs",
          "apiVersion": "2015-10-31",
          "tags"      : {},
          "dependsOn" : [
            "[parameters('AutomationAccountName')]",
            "[variables('dscConfigurations').DSCFromGPO.name]"
          ],
          "properties": {
            "configuration": {
              "name": "[variables('dscConfigurations').DSCFromGPO.name]"
            },
            "parameters": {
              "configurationData": "[concat('{\"AllNodes\":{\"nodename\":\"localhost\"}}')]"
            }
          }
        }
      ]
    }
  ],
  "outputs": {}
}

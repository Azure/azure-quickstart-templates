{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "automationAccountName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "safeModePassword": {
      "type": "securestring"
    },
    "domainName": {
      "type": "string"
    },
    "compileName": {
      "type": "string",
      "defaultValue": "[guid(resourceGroup().id, deployment().name)]"
    }
  },
  "variables": {
    "dscConfigurations": {
      "DomainControllerConfig": {
        "name": "DomainControllerConfig",
        "description": "minimum viable configuration for a domain controller role",
        "url": "https://devopsgallerystorage.blob.core.windows.net/packages/domaincontrollerconfig.0.3.1.nupkg"
      }
    },
    "dscResources": {
      "xActiveDirectory": {
        "name": "xActiveDirectory",
        "url": "https://devopsgallerystorage.blob.core.windows.net/packages/xactivedirectory.2.16.0.nupkg"
      },
      "xStorage": {
        "name": "xStorage",
        "url": "https://devopsgallerystorage.blob.core.windows.net/packages/xstorage.3.2.0.nupkg"
      }
    }
  },
  "resources": [
    {
      "name": "[parameters('automationAccountName')]",
      "type": "Microsoft.Automation/automationAccounts",
      "apiversion": "2015-10-31",
      "location": "[parameters('location')]",
      "comments": "Automation account for OMS",
      "properties": {
        "sku": {
          "name": "OMS"
        }
      },
      "resources": [
        {
          "name": "[variables('dscResources').xActiveDirectory.name]",
          "type": "modules",
          "apiVersion": "2015-10-31",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName'))]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[variables('dscResources').xActiveDirectory.url]"
            }
          }
        },
        {
          "name": "[variables('dscResources').xStorage.name]",
          "type": "modules",
          "apiVersion": "2015-10-31",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName'))]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[variables('dscResources').xStorage.url]"
            }
          }
        },
        {
          "name": "domainCredential",
          "type": "credentials",
          "apiVersion": "2015-01-01-preview",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName'))]"
          ],
          "properties": {
            "userName": "[parameters('adminUsername')]",
            "password": "[parameters('adminPassword')]"
          }
        },
        {
          "name": "safeModeCredential",
          "type": "credentials",
          "apiVersion": "2015-01-01-preview",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName'))]"
          ],
          "properties": {
            "userName": "[parameters('adminUsername')]",
            "password": "[parameters('safeModePassword')]"
          }
        },
        {
          "name": "[variables('dscConfigurations').DomainControllerConfig.name]",          
          "type": "configurations",
          "apiVersion": "2015-01-01-preview",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName'))]",
            "[concat('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName'),'/Modules/', 'xActiveDirectory')]",
            "[concat('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName'),'/Modules/', 'xStorage')]",
            "[concat('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName'),'/Credentials/', 'domainCredential')]",
            "[concat('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName'),'/Credentials/', 'safeModeCredential')]"            
          ],
          "properties": {
            "state": "Published",
            "overwrite": "true",
            "source": {
              "type": "uri",       
              "value": "[variables('dscConfigurations').DomainControllerConfig.url]"
            }
          }
        },
        {
          "name": "[parameters('compileName')]",
          "type": "compilationjobs",
          "apiVersion": "2015-01-01-preview",
          "tags": {},
          "dependsOn": [
              "[concat('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName'))]",
              "[concat('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName'),'/Configurations/', 'DomainControllerConfig')]"
          ],
          "properties": {
            "configuration": {
              "name": "[variables('dscConfigurations').DomainControllerConfig.name]"
            },
            "parameters": {
              "configurationData": "[concat('{\"AllNodes\":{\"nodename\":\"localhost\",\"domainname\":\"', parameters('domainName'), '\"}}')]"
            }
          }
        }
      ]
    }
  ],
  "outputs": {
    "AutomationAccountRegistrationUrl": {
      "value": "[reference(concat('Microsoft.Automation/automationAccounts/', parameters('automationAccountName'))).RegistrationUrl]",
      "type": "string"
    }
  }
}
{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "allowedValues": [ "East US", "West US", "West Europe", "East Asia", "South East Asia" ],
            "metadata": {
                "description": "This is the location where the cluster will be deployed"
            }
        },
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "The name of the storage account where the virtual hard disks of the VMs are going to be stored"
            }
        },
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "dockerSwarmVnet",
            "metadata": {
                "description": "The name of the virtual network account where the resources will be deployed"
            }
        },
        "subnetSwarmName": {
            "type": "string",
            "defaultValue": "Swarm-Subnet",
            "metadata": {
                "description": "The name of the virtual network where the swarm nodes will be deployed"
            }
        },
        "swarmNodesNumber": {
            "type": "int",
            "defaultValue": 3,
            "metadata": {
                "description": "Number of swarm cluster nodes to deploy"
            }
        },
        "swarmClusterNodesSize": {
            "type": "string",
            "defaultValue": "Standard_A1",
            "allowedValues": [
                "Standard_A0",
                "Standard_A1",
                "Standard_A2",
                "Standard_A3",
                "Standard_A4"
            ],
            "metadata": {
                "description": "Size of the VMs for the cluster nodes"
            }
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "swarmAdmin",
            "metadata": {
                "description": "User name for the root user of the virtual machines"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "defaultValue": "Passw0rd!",
            "metadata": {
                "description": "Password of the root user account inside the virtual machines"
            }
        },
        "swarmMasterPublicIpName": {
            "type": "string",
            "defaultValue": "swarmMasterPublicIp",
            "metadata": {
                "description": "Name of the public Ip associated to the master node"
            }
        },
        "swarmMasterPublicIpDnsName": {
            "type": "string",
            "metadata": {
                "description": "Host name of the docker swarm cluster"
            }
        },
        "scriptsUri": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/azure/azure-quickstart-templates/master/docker-swarm-cluster/",
            "metadata": {
                "description": "Link to the Shell script used to install the latest experimental release of Docker inside the master"
            }
        }
    },
    "resources": [
        {
            "name": "[parameters('swarmMasterPublicIpName')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "location": "[parameters('location')]",
            "apiVersion": "2015-05-01-preview",
            "dependsOn": [ ],
            "tags": {
                "displayName": "[parameters('swarmMasterPublicIpName')]"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[parameters('swarmMasterPublicIpDnsName')]"
                }
            }
        },
        {
            "name": "swarm-master-nic",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/publicIPAddresses/', parameters('swarmMasterPublicIpName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "swarm-master-nic-privateIp",
                        "properties": {
                            "privateIPAddress": "10.0.1.100",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualnetworks/subnets', parameters('virtualNetworkName'), parameters('subnetSwarmName'))]"
                            },
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('swarmMasterPublicIpName'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "swarm-master",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/swarm-master-nic')]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('swarmClusterNodesSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "Canonical",
                        "offer": "UbuntuServer",
                        "sku": "15.04",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "OSDisk",
                        "vhd": {
                            "uri": "[concat('http://',parameters('storageAccountName'),'.blob.core.windows.net/vhds/', 'swarm-manage-OSDisk.vhd')]"

                        },
                        "createOption": "FromImage"
                    }
                },
                "osProfile": {
                    "computerName": "swarm-master",
                    "adminUsername": "[parameters('adminUserName')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', 'swarm-master-nic')]",
                            "properties": {
                                "primary": "true"
                            }
                        }
                    ]
                }
            },
            "resources": [
                {
                    "name": "dockerInstallMaster",
                    "type": "extensions",
                    "apiVersion": "2015-05-01-preview",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "Microsoft.Compute/virtualMachines/swarm-master"
                    ],
                    "properties": {
                        "publisher": "Microsoft.OSTCExtensions",
                        "type": "CustomScriptForLinux",
                        "typeHandlerVersion": "1.2",
                        "autoUpgradeMinorVersion": "true",
                        "settings": {
                            "fileUris": [
                                "[parameters('scriptsUri')]"
                            ],
                            "commandToExecute": "[concat('sh install-docker-master.sh ', parameters('adminUsername'))]"
                        }
                    }
                }
            ]
        }

    ]
}
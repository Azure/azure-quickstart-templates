{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.1",
  "parameters": {
    "vnetID": {
      "type": "string"
    },
    "templateAPIVersion": {
      "type": "string"
    },
    "resourceAPIVersion": {
      "type": "string"
    },
    "dnsNamePrefix": {
      "type": "string"
    },
    "scriptsUri": {
      "type": "string"
    },
    "storageAccount": {
      "type": "object"
    },
    "vmCount": {
      "type": "int"
    },
    "vmSpec": {
      "type": "secureObject"
    },
    "networkSpec": {
      "type": "object"
    },
    "clusterSpec": {
      "type": "object"
    }
  },
  "variables": {
    "vmUri": "[concat(parameters('scriptsUri'),'/vm-5-datadisks.json')]"
  },
  "resources": [
    {
      "name": "vm-with-datadisks",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('vmUri')]",
          "contentVersion": "1.0.0.1"
        },
        "parameters": {
          "vnetID": {
            "value": "[parameters('vnetID')]"
          },
          "resourceAPIVersion": {
            "value": "[parameters('resourceAPIVersion')]"
          },
          "dnsNamePrefix": {
            "value": "[parameters('dnsNamePrefix')]"
          },
          "scriptsUri": {
            "value": "[parameters('scriptsUri')]"
          },
          "storageAccount": {
            "value": "[parameters('storageAccount')]"
          },
          "vmCount": {
            "value": "[parameters('vmCount')]"
          },
          "vmSpec": {
            "value": "[parameters('vmSpec')]"
          },
          "networkSpec": {
            "value": "[parameters('networkSpec')]"
          },
          "clusterSpec": {
            "value": "[parameters('clusterSpec')]"
          }
        }
      }
    }
  ]
}

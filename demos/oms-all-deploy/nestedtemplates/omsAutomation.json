{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "omsAutomationAccountName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Assign a name for the Automation account"
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Specify the region for your Automation account"
      }
    },
    "omsWorkspaceName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Assign a name for the OMS workspace"
      }
    },
    "omsRecoveryVaultName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Assign a name for the ASR Recovery Vault"
      }
    },
    "azureAdmin": {
      "type": "string",
      "metadata": {
        "description": "Enter your service admin user"
      }
    },
    "azureAdminPwd": {
      "type": "securestring",
      "metadata": {
        "description": "Enter the pwd for the service admin user. The pwd is enrypted during runtime and in the Automation assets"
      }
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "The base URI where artifacts required by this template are located"
      }
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "The sasToken required to access _artifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated."
      }
    },
    "psModules": {
      "type": "object",
      "metadata": {
        "description": "URIs of the PS modules"
      }
    }
  },
  "variables": {
    "runbooks": {
      "omsABUscript": {
        "name": "AzureIaasBackup",
        "version": "1.0.0.0",
        "description": "Runbook to automatically backup IaaS VMs within the ABU region",
        "type": "PowerShell"
      }
    },
    "scriptUri": "[uri(parameters('_artifactsLocation'), concat('scripts/Automated-IaaS-Backup.ps1', parameters('_artifactsLocationSasToken')))]",
    "azureSubscriptionId": "AzureSubscriptionId",
    "omsWorkspaceId": "OMSWorkspaceId",
    "omsWorkspaceKey": "OMSWorkspacekey",
    "omsWorkspaceNameAsset": "OMSWorkspaceName",
    "omsResourceGroupName": "OMSResourceGroupName",
    "omsRecoveryVault": "OMSRecoveryVault",
    "azureCredentials": "AzureCredentials"
  },
  "resources": [
    {
      "apiVersion": "2021-04-01",
      "location": "[parameters('location')]",
      "name": "[parameters('omsAutomationAccountName')]",
      "type": "Microsoft.Automation/automationAccounts",
      "comments": "Automation account for OMS",
      "properties": {
        "sku": {
          "name": "Basic"
        }
      },
      "resources": [
        {
          "name": "[variables('omsWorkspaceId')]",
          "type": "variables",
          "apiVersion": "2021-04-01",
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts/', parameters('omsAutomationAccountName'))]"
          ],
          "properties": {
            "description": "OMS Workspace Id",
            "value": "[concat('\"',reference(resourceId('Microsoft.OperationalInsights/workspaces/', parameters('omsWorkspaceName')),'2020-10-01').customerId,'\"')]"
          }
        },
        {
          "name": "[variables('omsWorkspaceKey')]",
          "type": "variables",
          "apiVersion": "2021-04-01",
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', parameters('omsAutomationAccountName'))]"
          ],
          "properties": {
            "description": "OMS Workspace key",
            "value": "[concat('\"',listKeys(resourceId('Microsoft.OperationalInsights/workspaces/', parameters('omsWorkspaceName')), '2020-10-01').primarySharedKey,'\"')]"
          }
        },
        {
          "name": "[variables('azureSubscriptionId')]",
          "type": "variables",
          "apiVersion": "2021-04-01",
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', parameters('omsAutomationAccountName'))]"
          ],
          "properties": {
            "description": "Azure Subscription Id",
            "isEncrypted": false,
            "type": "string",
            "value": "[concat('\"',subscription().subscriptionId,'\"')]"
          }
        },
        {
          "name": "[variables('omsRecoveryVault')]",
          "type": "variables",
          "apiVersion": "2021-04-01",
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', parameters('omsAutomationAccountName'))]"
          ],
          "properties": {
            "description": "OMS Recovery Vault Name",
            "value": "[concat('\"',parameters('omsRecoveryVaultName'),'\"')]"
          }
        },
        {
          "name": "[variables('omsResourceGroupName')]",
          "type": "variables",
          "apiVersion": "2021-04-01",
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', parameters('omsAutomationAccountName'))]"
          ],
          "properties": {
            "description": "OMS Recovery Vault Name",
            "value": "[concat('\"',resourceGroup().name,'\"')]"
          }
        },
        {
          "name": "[variables('azureCredentials')]",
          "type": "credentials",
          "apiVersion": "2021-04-01",
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', parameters('omsAutomationAccountName'))]"
          ],
          "properties": {
            "description": "Azure Subscription Credentials",
            "password": "[parameters('azureAdminPwd')]",
            "userName": "[parameters('azureAdmin')]"
          }
        },
        {
          "name": "[variables('omsWorkspaceNameAsset')]",
          "type": "variables",
          "apiVersion": "2021-04-01",
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', parameters('omsAutomationAccountName'))]"
          ],
          "properties": {
            "description": "OMS Recovery Vault Name",
            "value": "[concat('\"',parameters('omsWorkspaceName'),'\"')]"
          }
        },
        {
          "name": "[parameters('psModules').azureRmOperationalInsights[0].name]",
          "type": "Modules",
          "apiVersion": "2015-10-31",
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', parameters('omsAutomationAccountName'))]",
            "[resourceId('Microsoft.Automation/automationAccounts/Modules', parameters('omsAutomationAccountName'), parameters('psModules').azureRmProfile[0].name)]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[parameters('psModules').azureRmOperationalInsights[0].url]"
            }
          }
        },
        {
          "name": "[parameters('psModules').azureRmResources[0].name]",
          "type": "Modules",
          "apiVersion": "2015-10-31",
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', parameters('omsAutomationAccountName'))]",
            "[resourceId('Microsoft.Automation/automationAccounts/Modules', parameters('omsAutomationAccountName'), parameters('psModules').azureRmProfile[0].name)]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[parameters('psModules').azureRmResources[0].url]"
            }
          }
        },
        {
          "name": "[parameters('psModules').azureRmStorage[0].name]",
          "type": "Modules",
          "apiVersion": "2015-10-31",
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', parameters('omsAutomationAccountName'))]",
            "[resourceId('Microsoft.Automation/automationAccounts/Modules', parameters('omsAutomationAccountName'), parameters('psModules').azureRmProfile[0].name)]",
            "[resourceId('Microsoft.Automation/automationAccounts/Modules', parameters('omsAutomationAccountName'), parameters('psModules').azureStorage[0].name)]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[parameters('psModules').azureRmStorage[0].url]"
            }
          }
        },
        {
          "name": "[parameters('psModules').azureStorage[0].name]",
          "type": "Modules",
          "apiVersion": "2015-10-31",
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', parameters('omsAutomationAccountName'))]",
            "[resourceId('Microsoft.Automation/automationAccounts/Modules', parameters('omsAutomationAccountName'), parameters('psModules').azureRmProfile[0].name)]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[parameters('psModules').azureStorage[0].url]"
            }
          }
        },
        {
          "name": "[parameters('psModules').azureRmCompute[0].name]",
          "type": "Modules",
          "apiVersion": "2015-10-31",
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', parameters('omsAutomationAccountName'))]",
            "[resourceId('Microsoft.Automation/automationAccounts/Modules', parameters('omsAutomationAccountName'), parameters('psModules').azureRmProfile[0].name)]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[parameters('psModules').azureRmCompute[0].url]"
            }
          }
        },
        {
          "name": "[parameters('psModules').azureRmSiteRecovery[0].name]",
          "type": "Modules",
          "apiVersion": "2015-10-31",
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', parameters('omsAutomationAccountName'))]",
            "[resourceId('Microsoft.Automation/automationAccounts/Modules', parameters('omsAutomationAccountName'), parameters('psModules').azureRmProfile[0].name)]",
            "[resourceId('Microsoft.Automation/automationAccounts/Modules', parameters('omsAutomationAccountName'), parameters('psModules').azureStorage[0].name)]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[parameters('psModules').azureRmSiteRecovery[0].url]"
            }
          }
        },
        {
          "name": "[parameters('psModules').azureRmBackup[0].name]",
          "type": "Modules",
          "apiVersion": "2015-10-31",
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', parameters('omsAutomationAccountName'))]",
            "[resourceId('Microsoft.Automation/automationAccounts/Modules', parameters('omsAutomationAccountName'), parameters('psModules').azureRmProfile[0].name)]",
            "[resourceId('Microsoft.Automation/automationAccounts/Modules', parameters('omsAutomationAccountName'), parameters('psModules').azureStorage[0].name)]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[parameters('psModules').azureRmBackup[0].url]"
            }
          }
        },
        {
          "name": "[parameters('psModules').azureRmRecoveryServices[0].name]",
          "type": "Modules",
          "apiVersion": "2015-10-31",
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', parameters('omsAutomationAccountName'))]",
            "[resourceId('Microsoft.Automation/automationAccounts/Modules', parameters('omsAutomationAccountName'), parameters('psModules').azureRmProfile[0].name)]",
            "[resourceId('Microsoft.Automation/automationAccounts/Modules', parameters('omsautomationAccountName'), parameters('psModules').azureStorage[0].name)]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[parameters('psModules').azureRmRecoveryServices[0].url]"
            }
          }
        },
        {
          "name": "[parameters('psModules').azureRmProfile[0].name]",
          "type": "Modules",
          "apiVersion": "2015-10-31",
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', parameters('omsAutomationAccountName'))]"
          ],
          "properties": {
            "contentLink": {
              "uri": "[parameters('psModules').azureRmProfile[0].url]"
            }
          }
        },
        {
          "name": "[variables('runbooks').omsABUscript.name]",
          "type": "runbooks",
          "apiVersion": "2015-10-31",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', parameters('omsAutomationAccountName'))]",
            "[resourceId('Microsoft.Automation/automationAccounts/variables', parameters('omsAutomationAccountName'), variables('azureSubscriptionId'))]",
            "[resourceId('Microsoft.Automation/automationAccounts/variables', parameters('omsAutomationAccountName'), variables('omsWorkspaceId'))]",
            "[resourceId('Microsoft.Automation/automationAccounts/variables', parameters('omsAutomationAccountName'), variables('omsWorkspaceKey'))]",
            "[resourceId('Microsoft.Automation/automationAccounts/Modules', parameters('omsAutomationAccountName'), parameters('psModules').azureRmProfile[0].name)]",
            "[resourceId('Microsoft.Automation/automationAccounts/Modules', parameters('omsAutomationAccountName'), parameters('psModules').azureRmResources[0].name)]",
            "[resourceId('Microsoft.Automation/automationAccounts/Modules', parameters('omsAutomationAccountName'), parameters('psModules').azureRmCompute[0].name)]",
            "[resourceId('Microsoft.Automation/automationAccounts/Modules', parameters('omsAutomationAccountName'), parameters('psModules').azureStorage[0].name)]",
            "[resourceId('Microsoft.Automation/automationAccounts/Modules', parameters('omsAutomationAccountName'), parameters('psModules').azureRmStorage[0].name)]",
            "[resourceId('Microsoft.Automation/automationAccounts/Modules', parameters('omsAutomationAccountName'), parameters('psModules').azureRmRecoveryServices[0].name)]",
            "[resourceId('Microsoft.Automation/automationAccounts/Modules', parameters('omsAutomationAccountName'), parameters('psModules').azureRmSiteRecovery[0].name)]",
            "[resourceId('Microsoft.Automation/automationAccounts/Modules', parameters('omsAutomationAccountName'), parameters('psModules').azureRmBackup[0].name)]",
            "[resourceId('Microsoft.Automation/automationAccounts/Modules', parameters('omsAutomationAccountName'), parameters('psModules').azureRmOperationalInsights[0].name)]"
          ],
          "properties": {
            "runbookType": "[variables('runbooks').omsABUscript.type]",
            "logProgress": false,
            "logVerbose": false,
            "description": "[variables('runbooks').omsABUscript.description]",
            "publishContentLink": {
              "uri": "[variables('scriptUri')]",
              "version": "[variables('runbooks').omsABUscript.version]"
            }
          }
        }
      ]
    }
  ]
}
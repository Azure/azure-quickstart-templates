{
   "$schema":"https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
   "contentVersion":"1.0.0.0",
   "parameters":{
      "AlertName":{
         "type":"String"
      },
      "ApplicationGatewayResourceGroup":{
         "type":"String",
         "metadata":{
            "description":"Resource Group example /subscriptions/subs-id/resourceGroups/rg-name"
         }
      },
      "ActionGroupID":{
         "type":"String",
         "metadata":{
            "description":"Action GroupID example /subscriptions/subs-id/resourceGroups/rg-name/providers/microsoft.insights/actiongroups/action-group-name"
         }
      }
   },
   "variables":{
      
   },
   "resources":[
      {
         "type":"microsoft.insights/activityLogAlerts",
         "apiVersion":"2020-10-01",
         "name":"[parameters('AlertName')]",
         "location":"Global",
         "properties":{
            "scopes":[
               "[parameters('ApplicationGatewayResourceGroup')]"
            ],
            "condition":{
               "allOf":[
                  {
                     "field":"properties.recommendationType",
                     "equals":"3467464b-955a-4caf-95e5-547344ba0281"
                  },
                  {
                     "field":"category",
                     "equals":"Recommendation"
                  },
                  {
                     "field":"operationName",
                     "equals":"Microsoft.Advisor/recommendations/available/action"
                  }
               ]
            },
            "actions":{
               "actionGroups":[
                  {
                     "actionGroupId":"[parameters('ActionGroupID')]",
                     "webhookProperties":{
                        
                     }
                  }
               ]
            },
            "enabled":true
         }
      }
   ]
}

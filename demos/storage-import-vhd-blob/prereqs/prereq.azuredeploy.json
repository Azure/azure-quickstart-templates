{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.210602",
    "parameters": {
        "location": {
            "type": "string",
            "metadata": {
                "description": "The Azure Region location in which the resources should be deployed. E.g. westus (Azure Public)"
            },            
            "defaultValue": "[resourceGroup().location]"
        },
        "storageAccountNameDestination": {
            "type": "string",
            "defaultValue": "[concat('destination', uniqueString(resourceGroup().id))]",
            "metadata": {
                "description": "Name of Storage Account."
            }
        },
        "blobContainerNameDestination": {
            "type":"string",
            "defaultValue" : "vhd",
            "metadata":{
                "description" : "Name of the Blob Container"
            }
        },
        "storageAccountKind": {
            "type": "string",
            "defaultValue" : "StorageV2"
        },
        "storageAccountSkuName": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Premium_LRS",
                "Standard_ZRS",
                "Standard_GRS"                               
            ],
            "metadata": {
                "description": "Storage Account SKU"
            }
        }
    },
    "variables": {
        "listAccountSasRequestContent": {
            "signedServices": "bfqt",
            "signedPermission": "rwdlacup",
            "signedStart": "2021-06-02T00:00:00Z",
            "signedExpiry": "2021-10-30T00:00:00Z",
            "signedResourceTypes": "sco"
        }
    },
    "resources": [
        {
            "apiVersion": "2021-02-01",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('storageAccountNameDestination')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('storageAccountSkuName')]"
            },
            "kind": "[parameters('storageAccountKind')]",
            "resources": [
                {
                    "name": "[concat('default/', parameters('blobContainerNameDestination'))]",
                    "type": "blobServices/containers",
                    "apiVersion": "2021-02-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountNameDestination'))]"
                    ],
                    "properties": {
                        "publicAccess": "Blob"
                    }
                }
            ]
        }
    ],
    "outputs" : {
        "uriWritableStorageAccountBlobContainerSasToken": {
            "type": "string",
            "value" : "[concat(reference(concat('Microsoft.Storage/storageAccounts/', parameters('storageAccountNameDestination'))).primaryEndpoints.blob, parameters('blobContainerNameDestination'), '?', listAccountSas(parameters('storageAccountNameDestination'), '2021-04-01', variables('listAccountSasRequestContent')).accountSasToken)]"
        }
    }
}

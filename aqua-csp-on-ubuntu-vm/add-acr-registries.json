{
	"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"vmName": {
			"type": "string"
		},
		"addACRReg": {
			"type": "string"
		},
		"AddAcrUri": {
			"type": "string"
		},
		"aquaAdminPassword": {
			"type": "securestring"
		},
		"azureADId": {
			"type": "securestring"
		},
		"azureADPassword": {
			"type": "securestring"
		},
		"azureTenantID": {
			"type": "securestring"
		}
	},
    	"variables": {
        "AddAcrUri": "https://raw.githubusercontent.com/Azure/azure-quickstart-templates/master/aqua-csp-on-ubuntu-vm/addACRRegistry.sh"
	},
	"resources": [{
		"type": "Microsoft.Compute/virtualMachines/extensions",
		"name": "[concat(parameters('vmName'),'/installcustomscript')]",
		"apiVersion": "2015-05-01-preview",
		"location": "[resourceGroup().location]",
		"properties": {
			"publisher": "Microsoft.Azure.Extensions",
			"type": "CustomScript",
			"typeHandlerVersion": "2.0",
			"autoUpgradeMinorVersion": true,
			"protectedSettings": {
				"fileUris": "[variables('AddAcrUri')]",
				"commandToExecute": "[concat('./addACRRegistry.sh',' ',parameters('addACRReg'),' ',parameters('aquaAdminPassword'),' ',parameters('azureADId'),' ',parameters('azureADPassword'),' ',parameters('azureTenantID'))]"
			}
		}
	}]
}
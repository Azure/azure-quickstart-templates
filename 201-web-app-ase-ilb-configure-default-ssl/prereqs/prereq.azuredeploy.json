{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for the resources"
      }
    }
  },
  "variables": {
    "asename": "[concat('ase',uniqueString(resourceGroup().id))]",
    "vnetname": "[concat(variables('asename'),'-vnet')]",
    "subnetname": "[concat(variables('asename'),'-subnet')]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[concat(variables('asename'),'-vnet')]",
      "apiVersion": "2016-06-01",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "192.168.250.0/23"
          ]
        },
        "subnets": [
          {
            "name": "default",
            "properties": {
              "addressPrefix": "192.168.250.0/24"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Web/hostingEnvironments",
      "name": "[variables('asename')]",
      "apiVersion": "2020-06-01",
      "location": "[parameters('location')]",
      "properties": {
        "workerPools": [
          {
            "workerSizeId": 0,
            "workerSize": "small",
            "workerCount": 2
          },
          {
            "workerSizeId": 1,
            "workerSize": "medium",
            "workerCount": 2
          },
          {
            "workerSizeId": 2,
            "workerSize": "large",
            "workerCount": 0
          }
        ],
        "MultiSize": "medium",
        "MultiRoleCount": 2,
        "name": "[variables('asename')]",
        "location": "[parameters('location')]",
        "VirtualNetwork": {
          "Id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetname'), variables('subnetname'))]",
          "Subnet": "[variables('subnetname')]"
        },
        "ipSslAddressCount": 1
      },
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', variables('asename'),'-vnet')]"
      ]
    }
  ],
  "outputs": {
    "appServiceEnvironmentName": {
      "type": "string",
      "value": "[variables('asename')]"
    },
    "appServiceEnvironmentLocation": {
      "type": "string",
      "value": "[resourceGroup().location]"
    }
  }
}

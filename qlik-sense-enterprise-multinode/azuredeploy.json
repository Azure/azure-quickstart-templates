{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "The base URI where artifacts required by this template are located. When the template is deployed using the accompanying scripts, a private location in the subscription will be used and this value will be automatically generated."
      },
      "defaultValue": "https://raw.githubusercontent.com/Azure/azure-quickstart-templates/master/qlik-sense-enterprise-multinode"
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "metadata": {
        "description": "The sasToken required to access _artifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated."
      },
      "defaultValue": ""
    },
    "adminUsername": {
      "type": "string",
      "defaultValue": "qlik",
      "metadata": {
        "description": "Windows user account to be created as the administrator of the virtual machines."
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for administrator account."
      }
    },
    "centralVmName": {
      "type": "string",
      "defaultValue": "qlik-sense-cn",
      "metadata": {
        "description": "Qlik Sense Central Node host name."
      }
    },
    "rimVmName": {
      "type": "string",
      "defaultValue": "qlik-sense-rn",
      "metadata": {
        "description": "Qlik Sense Rim Node host name."
      }
    },
     "qlikSenseVersion": {
      "type": "string",
      "defaultValue": "Qlik Sense November 2017 Patch 1",
      "allowedValues": [
        "Qlik Sense November 2017 Patch 1",
        "Qlik Sense November 2017",
        "Qlik Sense September 2017 Patch 1",
        "Qlik Sense September 2017",
        "Qlik Sense June 2017 Patch 3",
        "Qlik Sense June 2017 Patch 2",
        "Qlik Sense June 2017 Patch 1",
        "Qlik Sense June 2017",
        "Qlik Sense 3.2 SR5",
        "Qlik Sense 3.2 SR4"
      ],
      "metadata": {
        "description": "Version of Qlik Sense Enterprise to provision."
      }
    },
    "qlikSenseServiceAccount": {
      "type": "string",
      "defaultValue": "qService",
      "metadata": {
        "description": "Windows user account that will run the Qlik Sense services."
      }
    },
    "qlikSenseServiceAccountPassword": {
      "type": "securestring",
      "minLength": 12,
      "metadata": {
        "description": "Password for the Qlik Sense service account."
      }
    },
    "qlikSenseRepositoryPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for the Qlik Sense Repository user."
      }
    },
    "qlikSenseSerial": {
      "type": "string",
      "defaultValue": "defaultValue",
      "metadata": {
        "description": "Serial number for the Qlik Sense license. Replace with your license details to license server during provisioning."
      }
    },
    "qlikSenseControl": {
      "type": "securestring",
      "defaultValue": "defaultValue",
      "metadata": {
        "description": "Control key for Qlik Sense license. Replace with your license details to license server during provisioning."
      }
    },
    "qlikSenseOrganization": {
      "type": "string",
      "defaultValue": "defaultValue",
      "metadata": {
        "description": "Organization owner of license. Replace with your license details to license server during provisioning."
      }
    },
    "qlikSenseName": {
      "type": "string",
      "defaultValue": "defaultValue",
      "metadata": {
        "description": "Name of licensed organization. Replace with your license details to license server during provisioning."
      }
    },
    "virtualMachineSize": {
      "type": "string",
      "defaultValue": "Standard_DS3_v2",
      "allowedValues": [
        "Standard_DS1_v2",
        "Standard_DS2_v2",
        "Standard_DS3_v2",
        "Standard_DS4_v2",
        "Standard_DS5_v2",
        "Standard_DS11_v2",
        "Standard_DS12_v2",
        "Standard_DS13_v2",
        "Standard_DS14_v2",
        "Standard_DS15_v2"
      ],
      "metadata": {
        "description": "Size of VM to be created. Recommended start size is Standard_DS3_V2."
      }
    },
    "windowsOSVersion": {
      "type": "string",
      "defaultValue": "2016-Datacenter",
      "allowedValues": [
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "2016-Datacenter-with-Containers",
        "2016-Datacenter"
      ],
      "metadata": {
        "description": "The Windows version for the VM. This will pick a fully patched image of this given Windows version."
      }
    }
  },
  "variables": {
    "centralNodeResource": "centralNode",
    "rimNodeResource": "rimNode"
  },
  "resources": [
    {
      "apiVersion": "2017-05-10",
      "name": "centralNode",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('_artifactsLocation'), '/nested/centralNode.json', parameters('_artifactsLocationSasToken'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "_artifactsLocation": { "value": "[parameters('_artifactsLocation')]" },
          "_artifactsLocationSasToken": { "value": "[parameters('_artifactsLocationSasToken')]" },
          "virtualMachineName": { "value": "[parameters('centralVmName')]" },
          "adminUsername": { "value": "[parameters('adminUsername')]" },
          "adminPassword": { "value": "[parameters('adminPassword')]" },
          "dnsLabelPrefix": { "value": "[parameters('centralVmName')]" },
          "virtualMachineSize": { "value": "[parameters('virtualMachineSize')]" },
          "windowsOSVersion": { "value": "[parameters('windowsOsVersion')]" },
          "qlikSenseVersion": { "value": "[parameters('qlikSenseVersion')]" },
          "qlikSenseServiceAccount": { "value": "[parameters('qlikSenseServiceAccount')]" },
          "qlikSenseServiceAccountPassword": { "value": "[parameters('qlikSenseServiceAccountPassword')]" },
          "qlikSenseRepositoryPassword": { "value": "[parameters('qlikSenseRepositoryPassword')]" },
          "qlikSenseSerial": { "value": "[parameters('qlikSenseSerial')]" },
          "qlikSenseControl": { "value": "[parameters('qlikSenseControl')]" },
          "qlikSenseOrganization": { "value": "[parameters('qlikSenseOrganization')]" },
          "qlikSenseName": { "value": "[parameters('qlikSenseName')]" }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "rimNode",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments',variables('centralNodeResource'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('_artifactsLocation'), '/nested/rimNode.json', parameters('_artifactsLocationSasToken'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "_artifactsLocation": { "value": "[parameters('_artifactsLocation')]" },
          "_artifactsLocationSasToken": { "value": "[parameters('_artifactsLocationSasToken')]" },
          "virtualMachineName": { "value": "[parameters('rimVmName')]" },
          "adminUsername": { "value": "[parameters('adminUsername')]" },
          "adminPassword": { "value": "[parameters('adminPassword')]" },
          "dnsLabelPrefix": { "value": "[parameters('rimVmName')]" },
          "virtualMachineSize": { "value": "[parameters('virtualMachineSize')]" },
          "windowsOSVersion": { "value": "[parameters('windowsOsVersion')]" },
          "qlikSenseVersion": { "value": "[parameters('qlikSenseVersion')]" },
          "qlikSenseCentralNode": { "value": "[parameters('centralVmName')]" },
          "qlikSenseServiceAccount": { "value": "[parameters('qlikSenseServiceAccount')]" },
          "qlikSenseServiceAccountPassword": { "value": "[parameters('qlikSenseServiceAccountPassword')]" },
          "qlikSenseRepositoryPassword": { "value": "[parameters('qlikSenseRepositoryPassword')]" }
        }
      }
    }
  ]
}

{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceLocation": {
            "type": "String",
            "allowedValues": [
                "germanynortheast",
                "germanycentral",
                "chinanorth",
                "chinaeast",
                "usgovvirginia",
                "usgovtexas",
                "usgovarizona",
                "usgoviowa",
                "usdodcentral",
                "usdodeast",
                "australiaeast",
                "southeastasia",
                "japanwest",
                "eastasia",
                "australiasoutheast",
                "centralindia",
                "japaneast",
                "westindia",
                "southindia",
                "koreasouth",
                "koreacentral",
                "westeurope",
                "northeurope",
                "ukwest",
                "uksouth",
                "francecentral",
                "germanywestcentral",
                "southafricanorth",
                "francesouth",
                "southafricawest",
                "northcentralus",
                "canadacentral",
                "westus",
                "westcentralus",
                "eastus",
                "westus2",
                "canadaeast",
                "centralus",
                "southcentralus",
                "eastus2",
                "brazilsouth",
                "uaenorth",
                "uaecentral"
            ],
            "metadata": {
                "description": "Location where the Deployment Script should be deployed."
            }
        },
        "identity": {
            "type": "String",
            "metadata": {
                "description": "ARM ID of a user managed identity that has contributor access to the resource group being deployed."
            }
        },
        "vaultSubscriptionId": {
            "type": "String",
            "metadata": {
                "description": "Subscription Id of the Recovery Services Vault."
            }
        },
        "vaultName": {
            "type": "String",
            "metadata": {
                "description": "Name of the Recovery Services Vault to be used."
            }
        },
        "vaultResourceGroupName": {
            "type": "String",
            "metadata": {
                "description": "Resource Group Name of the Recovery Services Vault."
            }
        },
        "primaryRegion": {
            "type": "String",
            "metadata": {
                "description": "The region where the original source virtual machines are deployed."
            }
        },
        "recoveryRegion": {
            "type": "String",
            "metadata": {
                "description": "The designated disaster recovery region where virtual machines would be brought up after failover."
            }
        },
        "policyName": {
            "defaultValue": "AzureToAzureReplicationPolicy",
            "type": "String",
            "metadata": {
                "description": "Name of the Replication policy to be used to create a new replication policy if protection containers are not mapped."
            }
        },
        "sourceVmARMIdsCSV": {
            "type": "String",
            "metadata": {
                "description": "ARM IDs of the Source VMs separated by comma."
            }
        },
        "targetResourceGroupId": {
            "type": "String",
            "metadata": {
                "description": "ARM ID of the resource group to be used to create virtual machine in DR region."
            }
        },
        "targetVirtualNetworkId": {
            "type": "String",
            "metadata": {
                "description": "ARM ID of the virtual network to be used by virtual machine in DR region."
            }
        },
        "primaryStagingStorageAccount": {
            "type": "String",
            "metadata": {
                "description": "ARM ID of the storage account to be used to cache replication data in the source region."
            }
        },
        "recoveryReplicaDiskAccountType": {
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_RAGRS"
            ],
            "type": "String",
            "metadata": {
                "description": "Type of the Storage account to be used for Disk used for replication."
            }
        },
        "recoveryTargetDiskAccountType": {
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_RAGRS"
            ],
            "type": "String",
            "metadata": {
                "description": "Type of the Storage account to be used for Recovery Target Disk."
            }
        }
    },
    "variables": {
        "rgLocationName": "[replace(string(parameters('resourceLocation')), ' ', '')]",
        "identityArmId": "[concat(resourceGroup().id, '/providers/Microsoft.ManagedIdentity/userAssignedIdentities/',parameters('identity'))]"
},
    "resources": [
        {
            "type": "Microsoft.Resources/deploymentScripts",
            "apiVersion": "2020-10-01",
            "name": "EnableReplication",
            "location": "[variables('rgLocationName')]",
            "kind": "AzurePowerShell",
            "identity": {
                "type": "userAssigned",
                "userAssignedIdentities": {
                    "[variables('identityArmId')]": {}
                }
            },
            "properties": {
                "azPowerShellVersion": "3.0",
                "timeout": "PT4H",
                "arguments": "[concat('-VaultSubscriptionId', ' ', parameters('vaultSubscriptionId'), ' ', '-vaultResourceGroupName', ' ', parameters('vaultResourceGroupName'), ' ', '-vaultName', ' ', parameters('vaultName'), ' ', '-primaryRegion', ' ', replace(string(parameters('primaryRegion')), ' ', ''), ' ', '-recoveryRegion', ' ', replace(string(parameters('recoveryRegion')), ' ', ''), ' ', '-policyName', ' ', parameters('policyName'), ' ', '-sourceVmARMIdsCSV', ' \\\"', parameters('sourceVmARMIdsCSV'), '\\\" ','-TargetResourceGroupId', ' ', parameters('targetResourceGroupId'), ' ', '-TargetVirtualNetworkId', ' ', parameters('targetVirtualNetworkId'),' ', '-PrimaryStagingStorageAccount', ' ', parameters('primaryStagingStorageAccount'), ' ', '-RecoveryReplicaDiskAccountType', ' ', parameters('recoveryReplicaDiskAccountType'), ' ', '-RecoveryTargetDiskAccountType', ' ', parameters('recoveryTargetDiskAccountType'))]",
                "primaryScriptURI": "https://raw.githubusercontent.com/AsrOneSdk/published-scripts/master/AzureSiteRecovery-Automation-EndToEnd-Templates/Powershell-Scripts/Enable-Replication.ps1",
                "cleanupPreference": "Always",
                "retentionInterval": "P1D"
            }
        }
    ]
}
{
  "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.1.2-preview",
  "parameters": {
    "basics": [],
    "steps": [
      {
        "name": "clusterConfig",
        "label": "Artifactory Cluster settings",
        "subLabel": {
          "preValidation": "Configure Artifactory Cluster settings",
          "postValidation": "Done"
        },
        "bladeTitle": "Artifactory Cluster Settings",
        "elements": [
          {
            "name": "clusterName",
            "type": "Microsoft.Compute.UserNameTextBox",
            "label": "Cluster name",
            "toolTip": "Cluster name",
            "constraints": {
              "required": true
            }
          },
          {
            "name": "vmSku",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Virtual machine size",
            "toolTip": "The size of the virtual machine for Artifactory",
            "recommendedSizes": [
              "Standard_A4"
            ],
            "constraints": {
              "allowedSizes": [
                "Standard_A4"
              ]
            },
            "osPlatform": "Linux",
            "count": 1
          },
          {
            "name": "nodeCount",
            "type": "Microsoft.Common.TextBox",
            "label": "Number of VM instances (100 or less) for member Artifactory nodes. Minimum 1 node.",
            "defaultValue": "2",
            "toolTip": "Use only numbers",
            "constraints": {
              "required": true,
              "regex": "^[0-9][0-9][0-9]",
              "validationMessage": "Only numbers are allowed."
            },
            "visible": true
          },
          {
            "name": "artifactoryVersion",
            "type": "Microsoft.Common.TextBox",
            "label": "Artifactory-vm image version to deploy.",
            "defaultValue": "6.6.1",
            "toolTip": "Use only semver",
            "constraints": {
              "required": true,
              "regex": "^[0-9].[0-9].[0-9]",
              "validationMessage": "Only semver are allowed."
            },
            "visible": true
          },
          {
            "name": "masterKey",
            "type": "Microsoft.Compute.UserNameTextBox",
            "label": "Artifactory master Key",
            "defaultValue": "1ce2be4490ca2c662cb79636cf9b7b8e",
            "toolTip": "Master key for Artifactory cluster. Generate master.key using command '$openssl rand -hex 16'",
            "constraints": {
              "required": true
            }
          },
          {
            "name": "artifactoryLicense1",
            "type": "Microsoft.Compute.UserNameTextBox",
            "label": "Artifactory Enterprise License.",
            "toolTip": "Artifactory Enterprise License. Providing one license is mandatory",
            "constraints": {
              "required": true

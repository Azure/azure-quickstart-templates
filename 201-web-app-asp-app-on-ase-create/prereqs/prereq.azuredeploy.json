{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {

  },
  "variables": {
    "location": "West US",
    "asename": "[concat('ase',uniqueString(resourceGroup().id))]",
    "vnetname": "[concat(variables('asename'),'-vnet')]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/hostingEnvironments",
      "name": "[variables('asename')]",
      "apiVersion": "2015-02-01",
      "location": "[variables('location')]",
      "properties": {
        "workerPools": [
          {
            "workerSizeId": 0,
            "workerSize": "small",
            "workerCount": "2"
          },
          {
            "workerSizeId": 1,
            "workerSize": "medium",
            "workerCount": "2"
          },
          {
            "workerSizeId": 2,
            "workerSize": "large",
            "workerCount": "0"
          }
        ],
        "MultiSize": "medium",
        "MultiRoleCount": "2",
        "name": "[variables('asename')]",
        "location": "[variables('location')]",
        "VirtualNetwork": {
          "Id": "[resourceId('Microsoft.Network/virtualNetworks/', variables('vnetname'))]",
          "type": "Microsoft.Network/virtualNetworks",
          "Subnet": "default"
        },
        "ipSslAddressCount": 1
      },
      "dependsOn": [
        "[concat('Microsoft.Network/virtualNetworks/', variables('asename'),'-vnet')]"
      ]
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[concat(variables('asename'),'-vnet')]",
      "apiVersion": "2016-06-01",
      "location": "[variables('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "192.168.250.0/23"
          ]
        },
        "subnets": [
          {
            "name": "default",
            "properties": {
              "addressPrefix": "192.168.250.0/24"
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "appServiceEnvironmentName": {
      "type": "string",
      "value": "[variables('asename')]"
    }
  }
}

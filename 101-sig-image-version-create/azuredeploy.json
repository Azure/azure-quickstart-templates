{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "sourceManagedImageResourceId": {
      "type": "string",
      "metadata": {
        "description": "Resource ID of the source managed image."
      }
    },
    "galleryName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Shared Image Gallery."
      }
    },
    "galleryImageDefinitionName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Image Definition."
      }
    },
    "galleryImageVersionName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Image Version - should follow <MajorVersion>.<MinorVersion>.<Patch>."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location of the Shared Image Gallery."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Compute/galleries/images/versions",
      "apiVersion": "2020-09-30",
      "name": "[concat(parameters('galleryName'), '/', parameters('galleryImageDefinitionName'), '/', parameters('galleryImageVersionName'))]",
      "location": "[parameters('location')]",
      "properties": {
        "publishingProfile": {
          "replicaCount": 1,
          "targetRegions": [
            { "name": "[parameters('location')]" }
          ]
        },
        "storageProfile": {
          "source": {
            "id": "[parameters('sourceManagedImageResourceId')]"
          },
          "osDiskImage": {
            "hostCaching": "ReadWrite"
          }
        }
      }
    }
  ],
   "outputs": {
    "galleryName": {
      "type": "string",
      "value": "[parameters('galleryName')]"
    },
    "galleryImageVersion": {
      "type": "string",
      "value": "[parameters('galleryImageVersionName')]"
    },
    "galleryImageDefinitionName": {
      "type": "string",
      "value": "[ parameters('galleryImageDefinitionName')]"
    }
  }
}
{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "galleryImageDefinitionName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Image Definition."
      }
    },
    "description": {
      "type": "string",
      "defaultValue": "Sample Description",
      "metadata": {
        "description": "The description of this Shared Image Gallery resource."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location of the Shared Image Gallery."
      }
    }
  },
  "variables": {
    "galleryName": "[uniqueString(resourceGroup().id)]",

    "imageName": "[concat(variables('galleryName'), '/', parameters('galleryImageDefinitionName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/galleries",
      "name": "[variables('galleryName')]",
      "apiVersion": "2019-12-01",
      "location": "[parameters('location')]",
      "properties": {
        "description": "[parameters('description')]"
      }
    },
    {
      "type": "Microsoft.Compute/galleries/images",
      "name": "[variables('imageName')]",
      "apiVersion": "2019-12-01",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/galleries', variables('galleryName'))]"
      ],
      "properties": {
        "description": "Sample Gallery Image Description",
        "osType": "Linux",
        "osState": "Generalized",
        "endOfLifeDate": "2030-01-01",
        "identifier": {
          "publisher": "myPublisher",
          "offer": "myOffer",
          "sku": "mySku"
        },
        "recommended": {
          "vCPUs": {
            "min": "1",
            "max": "64"
          },
          "memory": {
            "min": "2048",
            "max": "307720"
          }
        }
      }
    }
  ],
  "outputs": {
    "galleryName": {
      "type": "string",
      "value": "[variables('galleryName')]"
    },
    "galleryImageDefinitionName": {
      "type": "string",
      "value": "[parameters('galleryImageDefinitionName')]"
    },
    "managedImageResourceId": {
      "type": "string",
      "value": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Compute/galleries/', variables('galleryName'), '/images/', parameters('galleryImageDefinitionName'))]"
    }
  }
}
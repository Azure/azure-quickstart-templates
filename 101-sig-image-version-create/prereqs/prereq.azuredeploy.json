{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "galleryImageDefinitionName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Image Definition."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location of the Shared Image Gallery."
      }
    }
  },
  "variables": {
    "galleryName": "[uniqueString(resourceGroup().id)]"
  },
  "resources": [
    {
      "name": "createGallery",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-09-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/Azure/azure-quickstart-templates/master/modules/Microsoft.Compute/galleries/create/1.0/azuredeploy.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "galleryName": {
            "value": "[variables('galleryName')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Compute/galleries/images",
      "name": "[concat(variables('galleryName'), '/', parameters('galleryImageDefinitionName'))]",
      "apiVersion": "2019-12-01",
      "location": "[parameters('location')]",
      "properties": {
        "description": "Sample Gallery Image Description",
        "osType": "Linux",
        "osState": "Generalized",
        "endOfLifeDate": "2030-01-01",
        "identifier": {
          "publisher": "myPublisher",
          "offer": "myOffer",
          "sku": "mySku"
        },
        "recommended": {
          "vCPUs": {
            "min": "1",
            "max": "64"
          },
          "memory": {
            "min": "2048",
            "max": "307720"
          }
        }
      }
    }
  ],
  "outputs": {
    "galleryName": {
      "type": "string",
      "value": "[reference('createGallery').outputs.galleryName.value]"
    },
    "galleryImageDefinitionName": {
      "type": "string",
      "value": "[parameters('galleryImageDefinitionName')]"
    }
  }
}
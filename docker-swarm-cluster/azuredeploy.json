        {
            "name": "swarm-master-nic",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "swarm-master-nic-privateIp",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualnetworks/subnets', parameters('virtualNetworkName'), parameters('subnetSwarmName'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "swarm-master",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Storage/storageAccounts/', parameters('storageAccountName'))]",
                "[concat('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('swarmClusterNodesSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "Canonical",
                        "offer": "UbuntuServer",
                        "sku": "15.04",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "OSDisk",
                        "vhd": {
                            "uri": "[concat('http://',parameters('storageAccountName'),'.blob.core.windows.net/vhds/', 'swarm-manage-OSDisk.vhd')]"

                        },
                        "createOption": "FromImage"
                    }
                },
                "osProfile": {
                    "computerName": "swarm-master",
                    "adminUsername": "[parameters('adminUserName')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', 'swarm-master-nic')]",
                            "properties": {
                                "primary": "true"
                            }
                        }
                    ]
                }
            },
            "resources": [
                {
                    "name": "dockerInstallExtension",
                    "type": "extensions",
                    "apiVersion": "2015-05-01-preview",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "Microsoft.Compute/virtualMachines/swarm-master"
                    ],
                    "properties": {
                        "publisher": "Microsoft.OSTCExtensions",
                        "type": "CustomScriptForLinux",
                        "typeHandlerVersion": "1.2",
                        "autoUpgradeMinorVersion": "true",
                        "settings": {
                            "fileUris": [
                                "https://raw.githubusercontent.com/jangelfdez/azure-quickstart-templates/master/docker-swarm-cluster/install-docker-node.sh"
                            ],
                            "commandToExecute": "[concat('sh install-docker-node.sh ', parameters('adminUsername'), ' ',  parameters('adminPassword'))]"
                        }
                    }
                }
            ]
        }
    ]
}

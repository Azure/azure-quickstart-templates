{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "West Europe",
            "allowedValues": [ "East US", "West US", "West Europe", "East Asia", "South East Asia" ],
            "metadata": {
                "description": "This is the location where the cluster will be deployed"
            }
        },
        "storageAccountName": {
            "type": "string",
            "defaultValue": "dockerswarmstorage",
            "metadata": {
                "description": "The name of the storage account where the virtual hard disks of the VMs are going to be stored"
            }
        },
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "DockerSwarmVnet",
            "metadata": {
                "description": "The name of the virtual network account where the resources will be deployed"
            }
        },
        "virtualNetworkPrefix": {
            "type": "string",
            "defaultValue": "10.0.0.0/8",
            "metadata": {
                "description": "The IP range on CIDR notation of the virtual network where the resource will be deployed"
            }
        },
        "subnetSwarmName": {
            "type": "string",
            "defaultValue": "Swarm-subnet",
            "metadata": {
                "description": "The name of the virtual network where the swarm nodes will be deployed"
            }
        },
        "subnetSwarmPrefix": {
            "type": "string",
            "defaultValue": "10.0.1.0/24",
            "metadata": {
                "description": "The IP range on CIDR notation of the virtual network where the resource will be deployed"
            }
        },
        "subnetManageName": {
            "type": "string",
            "defaultValue": "Manage-subnet",
            "metadata": {
                "description": "The name of the virtual network where the swarm nodes will be deployed"
            }
        },
        "subnetManagePrefix": {
            "type": "string",
            "defaultValue": "10.0.0.0/24",
            "metadata": {
                "description": "The IP range on CIDR notation of the virtual network where the resource will be deployed"
            }
        },
        "swarmNodesNumber": {
            "type": "int",
            "defaultValue": 3,
            "metadata": {
                "description": "Number of swarm cluster nodes to deploy"
            }
        },
        "swarmClusterNodesSize": {
            "type": "string",
            "defaultValue": "Standard_A1",
            "allowedValues": [
                "Standard_A0",
                "Standard_A1",
                "Standard_A2",
                "Standard_A3",
                "Standard_A4"
            ],
            "metadata": {
                "description": "Size of the VMs for the cluster nodes"
            }
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "swarmAdmin",
            "metadata": {
                "description": "User name for the root user of the virtual machines"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "defaultValue": "Passw0rd!",
            "metadata": {
                "description": "Password of the root user account inside the virtual machines"
            }
        },
        "installDockerScript": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/jangelfdez/azure-quickstart-templates/master/docker-swarm-cluster/install-docker-node.sh",
            "metadata": {
                "description": "Link to the Shell script used to install the latest experimental release of Docker inside the nodes"
            }
        }

    },
    "resources": [
        {
            "name": "[parameters('storageAccountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]",
            "properties": {
                "accountType": "Standard_LRS"
            }
        },
        {
            "name": "[parameters('virtualNetworkName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('virtualNetworkPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetManageName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetManagePrefix')]"
                        }

                    },
                    {
                        "name": "[parameters('subnetSwarmName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetSwarmPrefix')]"
                        }

                    }
                ]
            }
        },
        {
            "name": "[concat('swarm-node-nic-', copyIndex(1))]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]",
            "copy": {
                "name": "swarm-nic-copy",
                "count": "[parameters('swarmNodesNumber')]"
            },
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "[concat('swarm-node-nic-privateIp-', copyIndex(1))]",
                        "copy": {
                            "name": "swarm-nic-copy",
                            "count": "[parameters('swarmNodesNumber')]"
                        },
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualnetworks/subnets', parameters('virtualNetworkName'), parameters('subnetSwarmName'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "swarm-manage-nic",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "swarm-manage-nic-privateIp",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualnetworks/subnets', parameters('virtualNetworkName'), parameters('subnetSwarmName'))]"
                            }
                        }
                    }
                ]
            }
        }, /*
        {
            "name": "[concat('swarm-node-', copyIndex(1))]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]",
            "copy": {
                "name": "swarm-vm-copy",
                "count": "[parameters('swarmNodesNumber')]"
            },
            "dependsOn": [
                "[concat('Microsoft.Storage/storageAccounts/', parameters('storageAccountName'))]",
                "[concat('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('swarmClusterNodesSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "Canonical",
                        "offer": "UbuntuServer",
                        "sku": "15.04",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "OSDisk",
                        "vhd": {
                            "uri": "[concat('http://',parameters('storageAccountName'),'.blob.core.windows.net/vhds/', 'swarm' ,'-OSDisk-', copyIndex(1), '.vhd')]"

                        },
                        "createOption": "FromImage"
                    }
                },
                "osProfile": {
                    "computerName": "[concat('swarm-node-', copyIndex(1))]",
                    "adminUsername": "[parameters('adminUserName')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat('swarm-node-nic-', copyIndex(1)))]",
                            "properties": {
                                "primary": "true"
                            }
                        }
                    ]
                }
            },
            "resources": [
                {
                    "name": "dockerVmExtension",
                    "type": "extensions",
                    "apiVersion": "2015-05-01-preview",
                    "location": "[parameters('location')]",
                    "dependsOn": [
                        "[concat('Microsoft.Compute/virtualMachines/swarm-node-', copyIndex(1))]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Azure.Extensions",
                        "type": "DockerExtension",

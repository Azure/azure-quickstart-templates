{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "adPDCNicName": {
      "type": "string"
    },
    "adPDCNICIPAddress": {
      "type": "string"
    },
    "staticSubnetRef": {
      "type": "string"
    },
    "siosVMNamePrefix": {
      "type": "string"
    },
    "pdcRdpIPAddressName": {
      "type": "string"
    },
    "siosVMRdpIPAddressNamePrefix": {
      "type": "string"
    },
    "ilbBEAddressPoolID": {
      "type": "string"
    }
  },
  "variables": {
    "siosVMNamePrefix": "[concat(parameters('siosVMNamePrefix'), '-')]"
  },
  "resources": [
    {
      "name": "[parameters('adPDCNicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('adPDCNICIPAddress')]",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses',parameters('pdcRdpIPAddressName'))]"
              },
              "subnet": {
                "id": "[parameters('staticSubnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[concat(variables('siosVMNamePrefix'), '0-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "10.0.0.5",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses',concat(parameters('siosVMRdpIPAddressNamePrefix'), '0RdpIP'))]"
              },
              "subnet": {
                "id": "[parameters('staticSubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[parameters('ilbBEAddressPoolID')]"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "[concat(variables('siosVMNamePrefix'), '1-nic')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "10.0.0.6",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses',concat(parameters('siosVMRdpIPAddressNamePrefix'), '1RdpIP'))]"
              },
              "subnet": {
                "id": "[parameters('staticSubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[parameters('ilbBEAddressPoolID')]"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "sios-client-nic",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "10.0.0.7",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses',concat(parameters('siosVMRdpIPAddressNamePrefix'), 'clientRdpIP'))]"
              },
              "subnet": {
                "id": "[parameters('staticSubnetRef')]"
              }
            }
          }
        ]
      }
    }
  ],
  "outputs": { }
}

{
	"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "ilbName": {
      "type": "string"
    },
    "ilbFE": {
      "type": "string"
    },
    "ilbIPAddress": {
      "type": "string"
    },
    "staticSubnetRef": {
      "type": "string"
    },
    "ilbBE": {
      "type": "string"
    },
    "ilbBEAddressPoolID": {
      "type": "string"
    },
    "ilbFEConfigID": {
      "type": "string"
    },
    "ilbProbeID": {
      "type": "string"
    },
    "ilbAOProbe": {
      "type": "string"
    }
  },
    "resources": [
		{
			"apiVersion": "2015-06-15",
			"name": "[parameters('ilbName')]",
			"type": "Microsoft.Network/loadBalancers",
			"location": "[parameters('location')]",
			"properties": {
				"frontendIPConfigurations": [
					{
						"name": "[parameters('ilbFE')]",
						"properties": {
							"privateIPAllocationMethod": "Static",
							"privateIPAddress" :"[parameters('ilbIPAddress')]",
							"subnet": {
								"id": "[parameters('staticSubnetRef')]"
							}
						}
					}
				],
				"backendAddressPools": [
					{
						"name": "[parameters('ilbBE')]"
					}
				],
				"loadBalancingRules": [
					{
						"name": "EndPointListener",
						"properties": {
						"frontendIPConfiguration": {
							"id": "[parameters('ilbFEConfigID')]"
						},
              "backendAddressPool": {
                "id": "[parameters('ilbBEAddressPoolID')]"
              }, 
						"probe": {
							"id": "[parameters('ilbProbeID')]"
						},
						"protocol": "tcp",
						"frontendPort": 1433,
						"backendPort": 1433,
						"enableFloatingIP": true
						}
					}
				],
				"probes": [
					{
						"name": "[parameters('ilbAOProbe')]",
						"properties": {
							"protocol": "tcp",
							"port": 59999,
							"intervalInSeconds": "5",
							"numberOfProbes": "2"
						}
					}
				]
			}
		}
	]
}
                        "visible": "[equals(steps('nodesSettings').deploymentType, 'Cluster')]"
                    },
                    {
                        "name": "clusterSecret",
                        "type": "Microsoft.Common.PasswordBox",
                        "label": {
                            "password": "Cluster secret",
                            "confirmPassword": "Confirm secret"
                        },
                        "toolTip": "Secret to authenticate communication between cluster members: the master, the peers and search heads. You must use same secret when adding future nodes to the cluster",
                        "constraints": {
                            "required": true,
                            "regex": "^((?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])|(?=.*[0-9])(?=.*[a-z])(?=.*[!@#$%^&*])|(?=.*[0-9])(?=.*[A-Z])(?=.*[!@#$%^&*])|(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&*])).{6,72}$",
                            "validationMessage": "Secret must be at least 6 characters long and have 3 out of the following: one number, one lower case, one upper case, or one special character"
                        },
                        "options": {
                            "hideConfirmation": false
                        },
                        "visible": "[equals(steps('nodesSettings').deploymentType, 'Cluster')]"
                    },
                    {
                        "name": "standaloneVmSize",
                        "type": "Microsoft.Compute.SizeSelector",
                        "label": "VM size",
                        "toolTip": "Select VM Size (will use 8 data disks)",

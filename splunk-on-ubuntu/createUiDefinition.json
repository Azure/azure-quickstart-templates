                            "allowedValues": [
                                {
                                    "label": "Single node",
                                    "value": "Standalone"
                                },
                                {
                                    "label": "Cluster",
                                    "value": "Cluster"
                                }
                            ],
                            "required": true
                        }
                    },
                    {
                        "name": "clusterMasterVmSize",
                        "type": "Microsoft.Compute.SizeSelector",
                        "label": "Cluster Master VM size",
                        "toolTip": "Select VM Size (will use 2 data disks)",
                        "recommendedSizes": [
                            "Standard_D3_v2",

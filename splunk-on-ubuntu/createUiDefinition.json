                      "visible": "[equals(steps('nodesSettings').deploymentType, 'Cluster')]"
                    },
                    {
                        "name": "clusterIndexerVmSize",
                        "type": "Microsoft.Compute.SizeSelector",
                        "label": "Indexer VM size",
                        "toolTip": "Select VM Size (will use 8 data disks)",
                        "recommendedSizes": [
                            "Standard_D5_v2",
                            "Standard_DS5_v2",
                            "Standard_F16",
                            "Standard_F16s"
                        ],
                        "constraints": {

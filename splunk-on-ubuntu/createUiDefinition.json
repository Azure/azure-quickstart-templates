                        "visible": "[equals(steps('nodesSettings').deploymentType, 'Cluster')]"
                    },
                    {
                      "name": "clusterIndexerVmCount",
                      "type": "Microsoft.Common.DropDown",
                      "label": "Number of cluster indexers",
                      "defaultValue": "3",
                      "toolTip": "Number of peer nodes in the indexer cluster",
                      "constraints": {
                        "allowedValues": [
                            {
                              "label": "3",

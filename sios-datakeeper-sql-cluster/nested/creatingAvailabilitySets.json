{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "siosAvailabilitySetName": {
      "type": "string"
    },
    "clientAvailabilitySetName": {
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Compute/availabilitySets",
      "name": "[parameters('siosAvailabilitySetName')]",
      "apiVersion": "2015-06-15",
      "location": "[parameters('location')]",
      "properties": {
        "platformFaultDomainCount": 3,
        "platformUpdateDomainCount": 3
      }
    },
    {
      "type": "Microsoft.Compute/availabilitySets",
      "name": "[parameters('clientAvailabilitySetName')]",
      "apiVersion": "2015-06-15",
      "location": "[parameters('location')]",
      "properties": {
        "platformFaultDomainCount": 3,
        "platformUpdateDomainCount": 3
      }
    }
  ],
  "outputs": {
    "siosAvailabilitySet": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/availabilitySets',parameters('siosAvailabilitySetName'))]"
    },
    "clientAvailabilitySet": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/availabilitySets',parameters('clientAvailabilitySetName'))]"
    }
  }
}

{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "value": "West US"
    },
    "vmSize": {
      "value": "Standard_D1"
    },
    "username": {
      "value": "yourusername"
    },
    "password": {
      "value": "yourpasswd"
    },
    "newStorageAccountName": {
      "value": "uniquestorageaccount"
    },
    "dnsNameForPublicIP": {
      "value": "uniquedns",
      "metadata": {
         "description": "it should match with the following regular expression: ^[a-z][a-z0-9-]{1,61}[a-z0-9]$ or it will raise an error" 
      }
    }
  }
}

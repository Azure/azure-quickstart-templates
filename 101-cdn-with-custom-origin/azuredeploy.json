{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "profileName": {
      "type": "string",
      "metadata": {
        "description": "Name of the CDN Profile"
      }
    },
    "endpointName": {
      "type": "string",
      "metadata": {
        "description": "Name of the CDN Endpoint"
      }
    },
    "originUrl": {
      "type": "string",
      "metadata": {
        "description": "Url of the origin"
      }
    },
    "CDNSku": {
      "type": "string",
      "metadata": {
        "description": "CDN SKU names"
      },
      "defaultValue": "Standard_Akamai",
      "allowedValues": [
        "Standard_Akamai",
        "Standard_Verizon",
        "Premium_Verizon"
      ]
    }
  },
  "resources": [
    {
      "name": "[parameters('profileName')]",
      "type": "Microsoft.Cdn/profiles",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-04-02",
      "sku": {
        "name": "[parameters('CDNSku')]"
      },
      "resources":
      [
        {
          "apiVersion": "2016-04-02",
          "dependsOn": [
            "[resourceId('Microsoft.Cdn/profiles', parameters('profileName'))]"
          ],
          "location": "[resourceGroup().location]",
          "name": "[parameters('endpointName')]",
          "type": "endpoints",
          "properties": {
            "originHostHeader": "[parameters('originUrl')]",
            "isHttpAllowed": true,
            "isHttpsAllowed": true,
            "queryStringCachingBehavior": "IgnoreQueryString",
            "contentTypesToCompress": [
              "text/plain",
              "text/html",
              "text/css",
              "application/x-javascript",
              "text/javascript"
            ],
            "isCompressionEnabled": true,
            "origins": [
              {
                "name": "origin1",
                "properties": {
                  "hostName": "[parameters('originUrl')]"
                }
              }
            ]
          }
        }
      ]
    }
  ]
}

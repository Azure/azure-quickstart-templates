{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "cliVMName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "domainUserName": {
      "type": "string"
    },
    "adminUserName": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "cliVMSize": {
      "type": "string"
    },
    "cliNicName": {
      "type": "string"
    },
    "storageAccountNamePrefix": {
      "type": "string"
    },
    "domainName": {
      "type": "string"
    },
    "vhdStorageAccount": {
      "type": "string"
    },
    "vhdStorageAccountSasToken": {
      "type": "securestring"
    },
    "vhdName": {
      "type": "string"
    }
  },
  "variables": {
    "imageName": "[parameters('vhdName')]",
  },
  "resources": [
    {
      "type": "Microsoft.Compute/images",
      "apiVersion": "2016-04-30-preview",
      "name": "[variables('ImageName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "storageProfile": {
          "osDisk": {
            "osType": "Windows",
            "osState": "Generalized",
            "blobUri": "[concat('https://',parameters('vhdStorageAccount'),'.blob.core.windows.net/vhds/',variables('ImageName'),parameters('vhdStorageAccountSasToken')]",
            "storageAccountType": "Standard_LRS"
          }
        }
      }
    },
    {
      "apiVersion": "2017-03-30",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('cliVMName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[variables('ImageName')]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('cliVMSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('cliVMName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "id": "[resourceId('Microsoft.Compute/images/Win10')]"
            }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',parameters('cliNicName'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
            "storageUri": "[concat('http://',parameters('storageAccountNamePrefix'),'diag.blob.core.windows.net')]"
          }
        }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('cliVMName'),'/JoinDomain')]",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "Join Domain"
      },
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "Name": "[parameters('domainName')]",
          "OUPath": null,
          "Options": "3",
          "Restart": "true",
          "User": "[parameters('domainUserName')]"
        },
        "protectedsettings": {
          "Password": "[parameters('adminPassword')]"
        }
      },
      "dependsOn": [
        "[parameters('cliVMName')]"
      ]
    },
    {

      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('cliVMName'),'/BGInfo')]",
      "apiVersion": "2015-06-15",
      "scale": null,
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[parameters('cliVMName')]"
      ],
      "properties": {

        "publisher": "Microsoft.Compute",
        "type": "BGInfo",
        "typeHandlerVersion": "2.1",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "properties": []
        }

      }

    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('cliVMName'),'/Antimalware')]",
      "apiVersion": "2015-05-01-preview",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('cliVMName'))]"
      ],
      "properties": {
        "publisher": "Microsoft.Azure.Security",
        "type": "IaaSAntimalware",
        "typeHandlerVersion": "1.1",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "AntimalwareEnabled": true,
          "Exclusions": {
            "Paths": "C:\\Users",
            "Extensions": ".txt",
            "Processes": "taskmgr.exe"
          },
          "RealtimeProtectionEnabled": "true",
          "ScheduledScanSettings": {
            "isEnabled": "true",
            "scanType": "Quick",
            "day": "7",
            "time": "120"
          }
        },
        "protectedSettings": null
      }
    }
  ]
}
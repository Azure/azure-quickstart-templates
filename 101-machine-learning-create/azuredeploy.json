{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Workspaces_name": {
      "type": "string",
      "metadata": {
        "description": "Machine Learning Workspace name"
      }
    },
    "resourceLocation": {
      "defaultValue": "West Europe",
      "type": "string",
      "metadata": {
        "description": "Location for Storage Account and Machine Learning Workspace"
      }
    }
  },
  "variables": {
    "storageAccountName": "[concat(uniquestring(resourceGroup().id), 'ml')]"
  },
  "resources": [
    {
      "type": "Microsoft.MachineLearning/Workspaces",
      "name": "[parameters('Workspaces_name')]",
      "apiVersion": "2016-04-01",
      "location": "[parameters('resourceLocation')]",
      "properties": {
        "userStorageAccountId": "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ]
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "sku": {
        "name": "Standard_LRS",
        "tier": "Standard"
      },
      "kind": "Storage",
      "name": "[variables('storageAccountName')]",
      "apiVersion": "2017-06-01",
      "location": "[parameters('resourceLocation')]",
      "scale": null,
      "properties": {
        "encryption": {
          "services": {
            "file": {
              "enabled": true
            },
            "blob": {
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        }
      }
    }
  ]
}
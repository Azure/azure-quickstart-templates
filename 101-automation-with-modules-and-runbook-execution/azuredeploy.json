{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "UserEmail": {
      "type": "string",
      "metadata": {
        "description": "Azure AD UserId to authenticate into automation runbook"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "",
      "allowedValues": [
        "japaneast",
        "eastus2",
        "westeurope",
        "southeastasia",
        "southcentralus",
        "koreacentral",
        "westus2",
        "brazilsouth",
        "uksouth",
        "westcentralus",
        "northeurope",
        "canadacentral",
        "australiasoutheast",
        "centralindia"
      ],
      "metadata": {
        "description": "location allowed for automation account."
      }
    },
    "Password": {
      "type": "securestring",
      "metadata": {
        "description": "Azure AD Password to authenticate into automation runbook"
      }
    },
    "jobId": {
      "type": "string",
      "metadata": {
        "description": "The GUID for the runbook job to be started."
      }
    },
    "SubscriptionId": {
      "type": "string",
      "metadata": {
        "description": "It is the Id of the subscription in which webapp resides"
      }
    }
  },
  "variables": {
    "automationaccountname": "[concat('automation', uniquestring(resourceGroup().id))]",
    "runbookName": "initialsetup",
    "scriptUri": "https://storageformarketplace.file.core.windows.net/cblaze/1.0.0/testinitialSetup.ps1?sv=2017-11-09&ss=f&srt=sco&sp=r&se=3018-09-18T20:44:18Z&st=2018-09-18T12:44:18Z&spr=https,http&sig=1zNq%2FUzgU937NgY%2BmpqJaWXEfGqTncQ5UMdypkqxLPE%3D"
  },
  "resources": [
    {
      "name": "[variables('automationaccountname')]",
      "type": "Microsoft.Automation/automationAccounts",
      "apiVersion": "2018-06-30",
      "location": "[parameters('location')]",
      "dependsOn": [],
      "tags": {},
      "properties": {
        "sku": {
          "name": "Free"
        }
      },
      "resources": [
        {
          "name": "AzureRM.Profile",
          "type": "modules",
          "apiVersion": "2018-06-30",
          "location": "[parameters('location')]",
          "properties": {
            "contentLink": {
              "uri": "https://devopsgallerystorage.blob.core.windows.net:443/packages/azurerm.profile.5.6.0.nupkg"
            }
          },
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]"
          ]
        },
        {
          "name": "AzureRM.Websites",
          "type": "modules",
          "apiVersion": "2018-06-30",
          "location": "[parameters('location')]",
          "properties": {
            "contentLink": {
              "uri": "https://devopsgallerystorage.blob.core.windows.net:443/packages/azurerm.websites.5.1.0.nupkg"
            }
          },
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]",
            "AzureRM.Profile"
          ]
        },
        {
          "name": "AzureRM.Resources",
          "type": "modules",
          "apiVersion": "2018-06-30",
          "location": "[parameters('location')]",
          "properties": {
            "contentLink": {
              "uri": "https://devopsgallerystorage.blob.core.windows.net/packages/azurerm.resources.6.5.0.nupkg"
            }
          },
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]",
            "AzureRM.Profile"
          ]
        },
        {
          "name": "[variables('runbookName')]",
          "type": "runbooks",
          "apiVersion": "2018-06-30",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', variables('automationaccountname'))]",
            "AzureRM.Resources",
            "AzureRM.Websites"
          ],
          "tags": {},
          "properties": {
            "runbookType": "Script",
            "logProgress": false,
            "logVerbose": false,
            "description": "runbook to add ad app and runasaccount.",
            "publishContentLink": {
              "uri": "[variables('scriptUri')]",
              "version": "1.0.0.0"
            }
          }
        },
        {
          "name": "[parameters('jobId')]",
          "type": "jobs",
          "apiVersion": "2018-06-30",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', variables('automationaccountname'))]",
            "[concat('Microsoft.Automation/automationAccounts/', variables('automationaccountname'), '/runbooks/', variables('runbookName'))]",
            "[concat('Microsoft.Automation/automationAccounts/', variables('automationaccountname'), '/schedules/', 'myschedule')]"
          ],
          "tags": {},
          "properties": {
            "runbook": {
              "name": "[variables('runbookName')]"
            },
            "parameters": {
              "SubscriptionId": "[parameters('SubscriptionId')]",
              "UserName": "[parameters('UserEmail')]",
              "Password": "[parameters('Password')]",
              "AutomationAccountName": "[variables('automationaccountname')]"
            }
          }
        },
        {
          "name": "myschedule",
          "type": "schedules",
          "apiVersion": "2018-06-30",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', variables('automationaccountname'))]"
          ],
          "tags": {},
          "properties": {
            "description": "Runs daily at 6 PM",
            "startTime": "10/23/2018 23:55:00",
            "isEnabled": "true",
            "interval": "1",
            "frequency": "day"
          }
        },
        {
          "name": "[parameters('jobId')]",
          "type": "jobSchedules",
          "apiVersion": "2018-06-30",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', variables('automationaccountname'))]",
            "[concat('Microsoft.Automation/automationAccounts/', variables('automationaccountname'), '/runbooks/', variables('runbookName'))]",
            "[concat('Microsoft.Automation/automationAccounts/', variables('automationaccountname'), '/schedules/', 'myschedule')]"
          ],
          "tags": {},
          "properties": {
            "schedule": {
              "name": "myschedule"
            },
            "runbook": {
              "name": "[variables('runbookName')]"
            },
            "parameters": {
              "SubscriptionId": "[parameters('SubscriptionId')]",
              "UserName": "[parameters('UserEmail')]",
              "Password": "[parameters('Password')]",
              "AutomationAccountName": "[variables('automationaccountname')]"
            }
          }
        }
      ]
    }
  ]
}

{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "UserEmail": {
      "type": "string",
      "metadata": {
        "description": "This is the email to get notify for pipeline activity."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "eastus2",
      "allowedValues": [
        "japaneast",
        "eastus2",
        "westeurope",
        "southeastasia",
        "southcentralus",
        "koreacentral",
        "westus2",
        "brazilsouth",
        "uksouth",
        "westcentralus",
        "northeurope",
        "canadacentral",
        "australiasoutheast",
        "centralindia"
      ],
      "metadata": {
        "description": "location allowed for data factory creation."
      }
    },
    "Password": {
      "type": "string",
      "metadata": {
        "description": "This is password."
      }
    },
	 "WebAppName": {
      "type": "string",
      "metadata": {
        "description": "This is the name of the web app that may be provided dynamically after creating."
      }
    },
	"WebAppResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "This is the name of the resource group in which web app resides."
      }
    }
  },
  "variables": {
    "automationaccountname": "[concat('automation', uniquestring(resourceGroup().id))]",
    "runbookName": "initialsetup",
    "scriptUri": "https://raw.githubusercontent.com/Azure/azure-quickstart-templates/master/101-automation-with-modules-and-runbook-execution/Runbooks/initialsetup.ps1",
    "jobId": "[guid(concat('myjob', uniquestring(resourceGroup().id)))]"
  },
  "resources": [
    {
      "name": "[variables('automationaccountname')]",
      "type": "Microsoft.Automation/automationAccounts",
      "apiVersion": "2015-10-31",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "tags": {},
      "properties": {
        "sku": {
          "name": "Free"
        }
      },
      "resources": [
        {
          "name": "AzureRM.Profile",
          "type": "modules",
          "apiVersion": "2015-10-31",
          "location": "[resourceGroup().location]",
          "properties": {
            "contentLink": {
              "uri": "https://devopsgallerystorage.blob.core.windows.net:443/packages/azurerm.profile.5.6.0.nupkg"
            }
          },
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]"
          ]
        },
        {
          "name": "AzureRM.Websites",
          "type": "modules",
          "apiVersion": "2015-10-31",
          "location": "[resourceGroup().location]",
          "properties": {
            "contentLink": {
              "uri": "https://devopsgallerystorage.blob.core.windows.net:443/packages/azurerm.websites.5.1.0.nupkg"
            }
          },
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]",
            "AzureRM.Profile"
          ]
        },
        {
          "name": "AzureRM.Resources",
          "type": "modules",
          "apiVersion": "2015-10-31",
          "location": "[resourceGroup().location]",
          "properties": {
            "contentLink": {
              "uri": "https://devopsgallerystorage.blob.core.windows.net/packages/azurerm.resources.6.5.0.nupkg"
            }
          },
          "dependsOn": [
            "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]",
            "AzureRM.Profile"
          ]
        },
        {
          "name": "[variables('runbookName')]",
          "type": "runbooks",
          "apiVersion": "2015-10-31",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', variables('automationaccountname'))]",
            "AzureRM.Resources",
            "AzureRM.Websites"
          ],
          "tags": {},
          "properties": {
            "runbookType": "Script",
            "logProgress": false,
            "logVerbose": false,
            "description": "runbook to add ad app and runasaccount.",
            "publishContentLink": {
              "uri": "[variables('scriptUri')]",
              "version": "1.0.0.0"
            }
          }
        },
        {
          "name": "[variables('jobId')]",
          "type": "jobs",
          "apiVersion": "2015-10-31",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', variables('automationaccountname'))]",
            "[concat('Microsoft.Automation/automationAccounts/', variables('automationaccountname'), '/runbooks/', variables('runbookName'))]",
            "[concat('Microsoft.Automation/automationAccounts/', variables('automationaccountname'), '/schedules/', 'myschedule')]"
          ],
          "tags": {},
          "properties": {
            "runbook": {
              "name": "[variables('runbookName3')]"
            },
            "parameters": {
              "SubscriptionName": "[subscription().displayName]",
              "UserName": "[parameters('UserName')]",
              "Password": "[parameters('Password')]",
              "ResourceGroupName": "[parameters('WebAppResourceGroup')]",
              "AutomationAccountName": "[variables('automationaccountname')]",
              "WebAppName": "[parameters('WebAppName')]"
            }
          }
        },
        {
          "name": "myschedule",
          "type": "schedules",
          "apiVersion": "2015-10-31",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', variables('automationaccountname'))]"
          ],
          "tags": {},
          "properties": {
            "description": "Runs daily at 6 PM",
            "startTime": "12/30/2018 18:00:00",
            "isEnabled": "true",
            "interval": "1",
            "frequency": "day"
          }
        },
        {
          "name": "[variables('jobId')]",
          "type": "jobSchedules",
          "apiVersion": "2015-10-31",
          "location": "[resourceGroup().location]",
          "dependsOn": [
            "[concat('Microsoft.Automation/automationAccounts/', variables('automationaccountname'))]",
            "[concat('Microsoft.Automation/automationAccounts/', variables('automationaccountname'), '/runbooks/', variables('runbookName'))]",
            "[concat('Microsoft.Automation/automationAccounts/', variables('automationaccountname'), '/schedules/', 'myschedule')]"

          ],
          "tags": {},
          "properties": {
            "schedule": {
              "name": "myschedule"
            },
            "runbook": {
              "name": "[variables('runbookName')]"
            },
            "parameters": {
              "SubscriptionName": "[subscription().displayName]",
              "UserName": "[parameters('UserName')]",
              "Password": "[parameters('Password')]",
              "ResourceGroupName": "[parameters('WebAppResourceGroup')]",
              "AutomationAccountName": "[variables('automationaccountname')]",
              "WebAppName": "[parameters('WebAppName')]"
            }
          }
        }
      ]
    }
  ]
}

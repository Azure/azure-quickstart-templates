{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "maharaCommon": {
            "metadata": {
                "description": "Common Mahara values"
            },
            "type": "object"
        }
    },
    "resources": [
        {
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "name": "[concat(parameters('maharaCommon').vmssName,'/','setup_mahara')]",
            "properties": {
                "autoUpgradeMinorVersion": true,
                "publisher": "Microsoft.OSTCExtensions",
                "settings": {
                    "commandToExecute": "[variables('cmdExec')]",
                    "fileUris": [
                        "[variables('scriptUri')]"
                    ]
                },
                "type": "CustomScriptForLinux",
                "typeHandlerVersion": "1.4"
            },
            "tags": {
                "displayName": "setup_mahara"
            },
            "type": "Microsoft.Compute/virtualMachines/extensions"
        }

    ],
    "variables": {
        "cmdExec": "[concat('bash ',parameters('maharaCommon').maharaSetupScriptFilename,' ',parameters('maharaCommon').gfsNameRoot,'0', ' ','data', ' ', parameters('maharaCommon').siteURL, ' ', concat('jumpbox-vm-',parameters('maharaCommon').resourcesPrefix))]",
        "scriptUri": "[concat(parameters('maharaCommon').ScriptLocation,parameters('maharaCommon').maharaSetupScriptFilename)]"
    }
}

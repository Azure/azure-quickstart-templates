{  
   "$schema":"http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
   "contentVersion":"1.0.0.0",
   "parameters":{  
      "siteName":{  
         "type":"string"
      },
      "aspName":{  
         "type":"string"
      },
      "databaseName":{  
         "type":"string"
      },      
      "databaseSku":{  
         "type":"string",
         "allowedValues":[  
            "Free",
            "Jupiter",
            "Saturn",
            "Venus",
            "titan"
         ],
         "defaultValue":"Free"
      }
   },
   "variables":{
     "databaseSku": "[parameters('databaseSku')]" ,
     "databaseName": "[concat(uniquestring(resourceGroup().id),'db')]"    
   },
   "resources":[  
      {  
         "apiVersion":"2014-01-01",
         "name":"[variables('databaseName')]",
         "type":"SuccessBricks.ClearDB/databases",
         "plan":{  
            "name":"[variables('databaseSku')]"
         },
         "location":"[resourceGroup().location]",
         "tags":{  
            "provision_source":"RMS"
         }
      },
      {  
         "apiVersion":"2015-05-01",
         "name":"[parameters('aspName')]",
         "type":"Microsoft.Web/serverfarms",
         "location":"[resourceGroup().location]",
         "tags":null,
         "properties":{  
            "maximumNumberOfWorkers":1,
            "geoRegion":"[resourceGroup().location]",
            "reserved":true,
            "planName":"VirtualDedicatedPlan"
         },
         "sku":{  
            "name":"B1",
            "tier":"Basic",
            "size":"B1",
            "family":"B",
            "capacity":1
         }
      },
      {  
         "apiVersion":"2015-05-01",
         "name":"[parameters('siteName')]",
         "type":"Microsoft.Web/sites",
         "location":"[resourceGroup().location]",
         "dependsOn":[  
            "[parameters('aspName')]"
         ],
         "properties":{  
            "serverFarmId":"[parameters('aspName')]",
            "siteConfig":{  
               "properties":{  
                  "numberOfWorkers":"1",
                  "phpVersion":"7.0"
               }
            },
            "maxNumberOfWorkers":"1"
         },
         "resources":[  
            {  
               "apiVersion":"2015-04-01",
               "name":"connectionstrings",
               "type":"config",
               "dependsOn":[  
                  "[concat('Microsoft.Web/sites/', parameters('siteName'))]",
                  "[concat('SuccessBricks.ClearDB/databases', parameters('databaseName'))]"
               ],
               "properties":{  
                  "defaultConnection":{  
                     "value":"[reference(concat('SuccessBricks.ClearDB/databases/', parameters('databaseName'))).connectionString]",
                     "type":"MySQL"
                  }
               }
            },
            {  
               "apiVersion":"2015-06-01",
               "type":"config",
               "name":"web",
               "dependsOn":[  
                  "[concat('Microsoft.Web/sites/', parameters('siteName'))]"
               ],
               "properties":{  
                  "phpVersion":"5.6"
               }
            },
            {  
               "apiVersion":"2014-04-01",
               "name":"web",
               "type":"sourcecontrols",
               "dependsOn":[  
                  "[resourceId('Microsoft.Web/Sites', parameters('siteName'))]",
                  "[concat('Microsoft.Web/sites/', parameters('siteName'), '/config/web')]"
               ],
               "properties":{  
                  "RepoUrl":"https://github.com/azureappserviceoss/wordpress-azure",
                  "branch":"master",
                  "IsManualIntegration":true
               }
            }
         ]
      }
   ]
}

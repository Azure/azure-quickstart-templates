{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "templateType": {
      "type": "string",
      "metadata": {
        "description": "The Azure Cosmos DB API template type."
      },
      "allowedValues": [
        "Cassandra",
        "Gremlin",
        "MongoDB",
        "SQL",
        "Table"
      ]
    },
    "databaseAccountName": {
      "type": "string",
      "metadata": {
        "description": "The Azure Cosmos DB account name."
      }
    },
    "writeRegionLocation": {
      "type": "string",
      "metadata": {
        "description": "The location of the write region of the database account. For Azure Gov, China, and Germany, the allowed values are different."
      },
      "allowedValues": [
        "eastasia",
        "southeastasia",
        "centralus",
        "eastus",
        "eastus2",
        "westus",
        "northcentralus",
        "southcentralus",
        "northeurope",
        "westeurope",
        "japanwest",
        "japaneast",
        "brazilsouth",
        "australiaeast",
        "australiasoutheast",
        "southindia",
        "centralindia",
        "westindia",
        "canadacentral",
        "canadaeast",
        "uksouth",
        "ukwest",
        "westcentralus",
        "westus2",
        "koreacentral",
        "koreasouth"
      ]
    },
    "readRegionLocation": {
      "type": "string",
      "metadata": {
        "description": "The location of the read region of the database account. For Azure Gov, China, and Germany, the allowed values are different."
      },
      "allowedValues": [
        "eastasia",
        "southeastasia",
        "centralus",
        "eastus",
        "eastus2",
        "westus",
        "northcentralus",
        "southcentralus",
        "northeurope",
        "westeurope",
        "japanwest",
        "japaneast",
        "brazilsouth",
        "australiaeast",
        "australiasoutheast",
        "southindia",
        "centralindia",
        "westindia",
        "canadacentral",
        "canadaeast",
        "uksouth",
        "ukwest",
        "westcentralus",
        "westus2",
        "koreacentral",
        "koreasouth"
      ]
    }
  },
  "variables": {
    "offerType": "Standard"
  },
  "resources": [
    {
      "apiVersion": "2015-04-08",
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "kind": "[if(equals(parameters('templateType'), 'MongoDB'), 'MongoDB', 'GlobalDocumentDB')]",
      "name": "[parameters('databaseAccountName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "name": "[parameters('databaseAccountName')]",
        "databaseAccountOfferType": "[variables('offerType')]",
        "locations": [
          {
            "locationName": "[parameters('writeRegionLocation')]",
            "failoverPriority": 0
          },
          {
            "locationName": "[parameters('readRegionLocation')]",
            "failoverPriority": 1
          }
        ],
        "capabilities": [
          {
            "name": "[if(equals(parameters('templateType'), 'Cassandra'), 'EnableCassandra', if(equals(parameters('templateType'), 'Gremlin'), 'EnableGremlin', if(equals(parameters('templateType'), 'MongoDB'), '', if(equals(parameters('templateType'), 'SQL'), '', if(equals(parameters('templateType'), 'Table'), 'EnableTable', '')))))]" 
          }
        ]
      },
      "tags": {
        "defaultExperience": "[if(equals(parameters('templateType'), 'Cassandra'), 'Cassandra', if(equals(parameters('templateType'), 'Gremlin'), 'Graph', if(equals(parameters('templateType'), 'MongoDB'), 'MongoDB', if(equals(parameters('templateType'), 'SQL'), 'DocumentDB', if(equals(parameters('templateType'), 'Table'), 'Table', '')))))]" 
      }
    }
  ]
}